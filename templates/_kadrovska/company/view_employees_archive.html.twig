{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerKadrovska' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebarKadrovska', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ company.title }}
                            </h4>
                        </div>
                    </div>
                    {{ render(controller('App\\Controller\\WidgetController::companyProfilNavigationKadrovska', { company: company } )) }}
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header d-flex align-items-center">
                                        <h5 class="mb-0">Arhiva zaposlenih</h5>
                                    </div>
                                    <form method="get" action="{{ path('app_kadrovska_company_employees_archive', {id:company.id}) }}" class="form-validate-jquery" novalidation="novalidation">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        <label class="form-label" for="ime">Ime:</label>
                                                        <input id="ime" name="ime" class="form-control" type="text">
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        <div class="mb-3">
                                                            <label class="form-label" for="prezime">Prezime:</label>
                                                            <input id="prezime" name="prezime" class="form-control" type="text">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        <label class="form-label required" for="obrazovanje">Nivo obrazovanja:</label>
                                                        <select id="obrazovanje" name="obrazovanje" class="form-control select">
                                                            <option value="">--Izaberite nivo obrazovanja--</option>
                                                            {% for key, value in obrazovanje %}
                                                                <option value="{{ key }}">{{ value }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        <label class="form-label" for="vrsta">Vrsta zaposlenja:</label>
                                                        <select id="vrsta" name="vrsta" class="form-control select">
                                                            <option value="">--Izaberite vrstu zaposlenja--</option>
                                                            {% for key, value in vrste %}
                                                                <option value="{{ key }}">{{ value }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        <label class="form-label" for="zvanje">Zvanje:</label>
                                                        <select id="zvanje" name="zvanje" class="form-control select">
                                                            <option value="">--Izaberite zvanje--</option>
                                                            {% for zvanje in zvanja %}
                                                                <option value="{{ zvanje.id }}">{{ zvanje.title }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        <label class="form-label" for="pozicija">Radno mesto:</label>
                                                        <select id="pozicija" name="pozicija" class="form-control select">
                                                            <option value="">--Izaberite radno mesto--</option>
                                                            {% for pozicija in pozicije %}
                                                                <option value="{{ pozicija.id }}">{{ pozicija.title }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="text-end">
                                                <button type="submit" class="btn btn-primary"><i class="ph-gear-six me-2"></i> Prikažite</button>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="card-body">

                                        <div class="table-responsive card">
                                            <table class="table table-bordered table-hover table-responsive table-sm">
                                                <thead class="bg-light text-primary">
                                                <tr>
                                                    <th>Slika</th>
                                                    <th>Prezime</th>
                                                    <th>Ime</th>
                                                    <th{% if pagination.isSorted('[u.nivoObrazovanja]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Obrazovanje ', ['u.nivoObrazovanja']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'u.nivoObrazovanja' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'u.nivoObrazovanja' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th>Zvanje</th>
                                                    <th>Radno mesto</th>
                                                    <th{% if pagination.isSorted('[u.vrstaZaposlenja]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Zaposlenje ', ['u.vrstaZaposlenja']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'u.vrstaZaposlenja' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'u.vrstaZaposlenja' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th{% if pagination.isSorted('[u.krajUgovora]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Ugovor ističe ', ['u.krajUgovora']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'u.krajUgovora' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'u.krajUgovora' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th class="text-center text-muted" style="width: 30px;"><i class="ph-dots-three"></i></th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for user in pagination %}
                                                    <tr>
                                                        <td>
                                                            <a href="{{ path('app_employee_profile_view_kadrovska', { id: user.id}) }}"><img src="{{ asset(user.image.getThumbnail100())}}" class="rounded-circle" width="35" height="35" alt="{{ user.ime }}"></a>
                                                        </td>
                                                        <td><div class="fw-semibold"><a href="{{ path('app_employee_profile_view_kadrovska', { id: user.id}) }}">{{ user.prezime }}</a></div></td>
                                                        <td><div class="fw-semibold"><a href="{{ path('app_employee_profile_view_kadrovska', { id: user.id}) }}">{{ user.ime }}</a></div></td>
                                                        <td>
                                                            {{ user.getObrazovanje() }}
                                                        </td>
                                                        <td>
                                                                  {% if user.zvanje is not null %}
                                                                {{ user.zvanje.title }}
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if user.pozicija is not null %}
                                                                {{ user.pozicija.title }}
                                                            {% endif %}
                                                        </td>

                                                        <td>
                                                            {{ user.vrstaZaposlenjaData }}
                                                        </td>
                                                        <td>
                                                            {% if user.krajUgovora is not null %}
                                                                <div class="d-inline-flex align-items-center">
                                                                    <i class="ph-calendar me-2"></i>
                                                                    {{ user.krajUgovora | date("d.m.Y.")}}
                                                                </div>
                                                            {% endif %}
                                                        </td>
                                                        <td class="text-center">
                                                            <div class="dropdown">
                                                                <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                                    <i class="ph-gear"></i>
                                                                </a>
                                                                <div class="dropdown-menu dropdown-menu-end">
                                                                    <a href="{{ path('app_employee_profile_view_kadrovska', { id: user.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                                    <a href="{{ path('app_employee_edit_info_form_kadrovska', { id: user.id}) }}" class="dropdown-item">
                                                                        <i class="ph-note-pencil me-2"></i>
                                                                        Lični i kontakt podaci
                                                                    </a>
                                                                    <a href="{{ path('app_employee_edit_account_form_kadrovska', { id: user.id}) }}" class="dropdown-item">
                                                                        <i class="ph-note-pencil me-2"></i>
                                                                        Login podaci
                                                                    </a>
                                                                    <a href="{{ path('app_employee_edit_image_form_kadrovska', { id: user.id}) }}" class="dropdown-item">
                                                                        <i class="ph-image me-2"></i>
                                                                        Profilna slika/avatar
                                                                    </a>
                                                                    <a href="{{ path('app_employee_settings_form_kadrovska', { id: user.id}) }}" class="dropdown-item">
                                                                        <i class="ph-gear me-2"></i>
                                                                        Podešavanja
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="card-footer">
                                        <div class="navigation float-end">
                                            {{ knp_pagination_render(pagination) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include '_kadrovska/includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

    </div>
    {% include '_kadrovska/includes/notification.html.twig' %}
{% endblock content %}

