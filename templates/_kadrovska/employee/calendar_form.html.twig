{% block footerJavascript %}
    <script type="text/javascript">
        $(document).ready(function() {
            var initialOldVacationDays = $('#vacation_kadrovska_form_old').val();
            var initialNewVacationDays = $('#vacation_kadrovska_form_new').val();

            function checkVacationCheckboxes() {
                if ($('#stariOdmor').is(':checked')) {
                    $('#vacation_kadrovska_form_old').addClass('disable-input');
                } else {
                    $('#vacation_kadrovska_form_old').removeClass('disable-input');
                }

                if ($('#noviOdmor').is(':checked')) {
                    $('#vacation_kadrovska_form_new').addClass('disable-input');
                } else {
                    $('#vacation_kadrovska_form_new').removeClass('disable-input');
                }
            }

            // Proveri stanje pri učitavanju strane
            checkVacationCheckboxes();

            // Proveri stanje pri svakoj promeni
            $('#stariOdmor, #noviOdmor').change(function() {
                checkVacationCheckboxes();
            });

            // Praćenje promene u polju za stari odmor
            $('#vacation_kadrovska_form_old').on('input', function() {
                if ($(this).val() === '') {
                    $(this).val(initialOldVacationDays);
                }
                updateOldVacationDays();
            });

            // Praćenje promene u polju za iskorišćen stari odmor
            $('#vacation_kadrovska_form_oldUsed').on('input', function() {
                updateOldVacationDays();
            });

            // Funkcija za ažuriranje preostalih dana starog odmora
            function updateOldVacationDays() {
                var oldVacationDays = parseInt($('#vacation_kadrovska_form_old').val()) || 0;
                var oldVacationUsed = parseInt($('#vacation_kadrovska_form_oldUsed').val()) || 0;
                var oldVacationRemaining = oldVacationDays - oldVacationUsed;
                $('#vacation_kadrovska_form_oldPreostalo').val(oldVacationRemaining);
            }

            // Praćenje promene u polju za novi odmor
            $('#vacation_kadrovska_form_new').on('input', function() {
                if ($(this).val() === '') {
                    $(this).val(initialNewVacationDays);
                }
                updateNewVacationDays();
            });

            // Praćenje promene u polju za iskorišćen novi odmor
            $('#vacation_kadrovska_form_used1').on('input', function() {
                updateNewVacationDays();
            });

            // Funkcija za ažuriranje preostalih dana novog odmora
            function updateNewVacationDays() {
                var newVacationDays = parseInt($('#vacation_kadrovska_form_new').val()) || 0;
                var newVacationUsed = parseInt($('#vacation_kadrovska_form_used1').val()) || 0;
                var newVacationRemaining = newVacationDays - newVacationUsed;
                $('#vacation_kadrovska_form_newPreostalo').val(newVacationRemaining);
            }

            // Inicijalno ažuriranje preostalih dana na osnovu početnih vrednosti
            updateOldVacationDays();
            updateNewVacationDays();
        });


    </script>
{% endblock footerJavascript %}