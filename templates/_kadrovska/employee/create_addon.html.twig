{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUserKadrovska' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebarKadrovska', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>


                    {{ render(controller('App\\Controller\\WidgetController::employeeProfilNavigationKadrovska', { user: user } )) }}

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Left sidebar component -->
                        {{ render(controller('App\\Controller\\WidgetController::employeeProfilSidebarKadrovska', { user: user } )) }}
                        <!-- /left sidebar component -->

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header d-flex align-items-center">
                                        <h6 class="mb-0">
                                            {% if addon.id is not null %}
                                                Izmena aktivnosti
                                            {% else %}
                                                Dodavanje aktivnosti
                                            {% endif %}
                                        </h6>
                                    </div>
                                    {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.type, 'Tip:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.type, {attr: { class: 'form-control select required' }}) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.datum, 'Datum:', {'label_attr': {'class': 'form-label'}}) }}
                                                    <div class="input-group">
                                                    <span class="input-group-text">
                                                        <i class="ph-calendar"></i>
                                                    </span>
                                                        {{ form_widget(form.datum, {attr: { class: 'form-control datepicker-date-format-custom1 ', autocomplete: 'off' }}) }}
                                                    </div>
                                                    <span class="form-text">Format: 31.12.1900. Datum aktivnosti.</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.start, 'Početak:', {'label_attr': {'class': 'form-label'}}) }}
                                                    <div class="input-group">
                                                    <span class="input-group-text">
                                                        <i class="ph-calendar"></i>
                                                    </span>
                                                        {{ form_widget(form.start, {attr: { class: 'form-control datepicker-date-format-custom2 ', autocomplete: 'off' }}) }}
                                                    </div>
                                                    <span class="form-text">Format: 31.12.1900. Prvi dan perioda.</span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.finish, 'Kraj:', {'label_attr': {'class': 'form-label'}}) }}
                                                    <div class="input-group">
                                                    <span class="input-group-text">
                                                        <i class="ph-calendar"></i>
                                                    </span>
                                                        {{ form_widget(form.finish, {attr: { class: 'form-control datepicker-date-format-custom3 ', autocomplete: 'off' }}) }}
                                                    </div>
                                                    <span class="form-text">Format: 31.12.1900. Zaključni dan perioda.</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="mb-3">
                                                    {{ form_label(form.description, 'Detalji aktivnosti:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.description, {attr: { class: 'form-control required' }}) }}
                                                    <span class="form-text">Uneti detalje o izabranoj aktivnosti.</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

