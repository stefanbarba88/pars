{% block footerJavascript %}

    <script>

        $(document).ready(function() {

        // Date format
        // izmenjen format da bi bio po srpskim standardima
        const dpDateCustomFormatElement1 = document.querySelector('.datepicker-date-format-custom1');
        const dpDateCustomFormatElement2 = document.querySelector('.datepicker-date-format-custom2');
        const dpDateCustomFormatElement3 = document.querySelector('.datepicker-date-format-custom3');

            let dpDateCustomFormat1;
            let dpDateCustomFormat2;
            let dpDateCustomFormat3;


        if (dpDateCustomFormatElement1) {
            const today = new Date(); // Trenutni datum
            dpDateCustomFormat1 = new Datepicker(dpDateCustomFormatElement1, {
                container: '.content-inner',
                buttonClass: 'btn',
                prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                format: 'dd.mm.yyyy',
                todayBtn: true,
                weekStart: 1,
                // minDate: today, // Postavljamo minimalni datum na trenutni datum
                daysOfWeekHighlighted: [0, 6],
                language: 'sr-latn',
                {#datesDisabled: [#}
                {#    {% for date in disabledDates %}#}
                {#    '{{ date }}',#}
                {#    {% endfor %}#}
                {#],#}
            });
        }
        if (dpDateCustomFormatElement2) {
            const today = new Date(); // Trenutni datum
            dpDateCustomFormat2 = new Datepicker(dpDateCustomFormatElement2, {
                container: '.content-inner',
                buttonClass: 'btn',
                prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                format: 'dd.mm.yyyy',
                todayBtn: true,
                weekStart: 1,
                // maxDate: today, // Postavljamo minimalni datum na trenutni datum
                daysOfWeekHighlighted: [0, 6],
                language: 'sr-latn',
                {#datesDisabled: [#}
                {#    {% for date in disabledDates %}#}
                {#    '{{ date }}',#}
                {#    {% endfor %}#}
                {#],#}
            });
        }
        if (dpDateCustomFormatElement3) {
            const today = new Date(); // Trenutni datum
            dpDateCustomFormat3 = new Datepicker(dpDateCustomFormatElement3, {
                container: '.content-inner',
                buttonClass: 'btn',
                prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                format: 'dd.mm.yyyy',
                todayBtn: true,
                weekStart: 1,
                // minDate: today, // Postavljamo minimalni datum na trenutni datum
                daysOfWeekHighlighted: [0, 6],
                language: 'sr-latn',
                {#datesDisabled: [#}
                {#    {% for date in disabledDates %}#}
                {#    '{{ date }}',#}
                {#    {% endfor %}#}
                {#],#}
            });
        }

            function parseDate(input) {
                const parts = input.split('.');
                return new Date(parts[2], parts[1] - 1, parts[0]); // format dd.mm.yyyy
            }
            function updateFinishMinDate() {
                const startDateStr = $('#kadrovska_addon_form_start').val();
                if (startDateStr) {
                    const minDate = parseDate(startDateStr);
                    dpDateCustomFormat3.setOptions({
                        minDate: minDate
                    });
                }
            }

            $('#kadrovska_addon_form_start').on('changeDate', function() {
                updateFinishMinDate();
                $('#kadrovska_addon_form_finish').val('');
            });
            updateFinishMinDate()
        });
    </script>

