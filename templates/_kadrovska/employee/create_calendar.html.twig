{% block footerJavascript %}

    <script>
        $(document).ready(function() {

            // Date format
            const dpDateCustomFormatElement1 = document.querySelector('.datepicker-date-format-custom1');
            const dpDateCustomFormatElement2 = document.querySelector('.datepicker-date-format-custom2');

            let dpDateCustomFormat1;
            let dpDateCustomFormat2;

            if (dpDateCustomFormatElement1) {
                const today = new Date();
                dpDateCustomFormat1 = new Datepicker(dpDateCustomFormatElement1, {
                    container: '.content-inner',
                    buttonClass: 'btn',
                    prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                    nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                    format: 'dd.mm.yyyy',
                    todayBtn: true,
                    weekStart: 1,
                    daysOfWeekHighlighted: [0, 6],
                    language: 'sr-latn'
                });
            }
            if (dpDateCustomFormatElement2) {
                const today = new Date();
                dpDateCustomFormat2 = new Datepicker(dpDateCustomFormatElement2, {
                    container: '.content-inner',
                    buttonClass: 'btn',
                    prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                    nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                    format: 'dd.mm.yyyy',
                    todayBtn: true,
                    weekStart: 1,
                    daysOfWeekHighlighted: [0, 6],
                    language: 'sr-latn'
                });
            }

            function parseDate(input) {
                const parts = input.split('.');
                return new Date(parts[2], parts[1] - 1, parts[0]); // format dd.mm.yyyy
            }

            function calculateDaysDifference() {
                const startDateStr = $('#kadrovska_calendar_form_start').val();
                const endDateStr = $('#kadrovska_calendar_form_finish').val();

                if (startDateStr && endDateStr) {
                    const startDate = parseDate(startDateStr);
                    const endDate = parseDate(endDateStr);
                    const timeDiff = endDate - startDate;
                    const daysDiff = Math.ceil(timeDiff / (1000 * 60 * 60 * 24)) + 1; // Dodajemo 1 jer uključujemo oba dana
                    $('#kadrovska_calendar_form_days').val(daysDiff > 0 ? daysDiff : 0);
                }
            }

            function updateFinishMinDate() {
                const startDateStr = $('#kadrovska_calendar_form_start').val();
                if (startDateStr) {
                    const minDate = parseDate(startDateStr);
                    dpDateCustomFormat2.setOptions({
                        minDate: minDate
                    });
                }
            }

            $('#kadrovska_calendar_form_start').on('changeDate', function() {
                updateFinishMinDate();
                calculateDaysDifference();
                $('#kadrovska_calendar_form_finish').val('');
            });

            $('#kadrovska_calendar_form_finish').on('changeDate', calculateDaysDifference);
            updateFinishMinDate()
            calculateDaysDifference()
        });
    </script>

{% endblock footerJavascript %}