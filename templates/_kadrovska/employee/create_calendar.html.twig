{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUserKadrovska' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebarKadrovska', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>


                    {{ render(controller('App\\Controller\\WidgetController::employeeProfilNavigationKadrovska', { user: user } )) }}

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    {% if not form.vars.valid %}
                        {% for child in form.children %}
                            {%for error in child.vars.errors%}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <span class="fw-semibold">{{error.message}}</span>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {%endfor%}
                        {%endfor%}
                    {%endif%}
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">
                                 {% if calendar.id is not null %}
                                        Izmena kalendara
                                    {% else %}
                                        Dodavanje kalendara
                                    {% endif %}
                                    </h6>
                        </div>
                        {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}
                        {% if calendar.id is not null %}
                            <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        {{ form_label(form.start, 'Početak:*', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="input-group">
											<span class="input-group-text">
												<i class="ph-calendar"></i>
											</span>
                                            {{ form_widget(form.start, {attr: { class: 'form-control datepicker-date-format-custom1 required disable-input', autocomplete: 'off' }}) }}
                                        </div>
                                        <span class="form-text">Format: 31.12.1900. Prvi dan perioda.</span>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        {{ form_label(form.finish, 'Kraj:*', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="input-group">
											<span class="input-group-text">
												<i class="ph-calendar"></i>
											</span>
                                            {{ form_widget(form.finish, {attr: { class: 'form-control datepicker-date-format-custom2 required disable-input', autocomplete: 'off' }}) }}
                                        </div>
                                        <span class="form-text">Format: 31.12.1900. Zaključni dan perioda.</span>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        {{ form_label(form.days, 'Broj dana:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.days, {attr: { class: 'form-control required disable-input' }}) }}
                                        <span class="form-text">U broj dana uračunati su i dani vikenda i neradnih dana. Ukoliko njih ne želite da računate, umanjite ukupan broj dana za odgovarajući broj.</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        {{ form_label(form.type, 'Tip:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.type, {attr: { class: 'form-control required disable-input' }}) }}
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        {{ form_label(form.aneks, 'Aneks:', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.aneks, {attr: { class: 'form-control' }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        {{ form_label(form.note, 'Napomena:', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.note, {attr: { class: 'form-control' }}) }}
                                    </div>
                                </div>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                            </div>
                        </div>
                        {% else %}
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            {{ form_label(form.start, 'Početak:*', {'label_attr': {'class': 'form-label'}}) }}
                                            <div class="input-group">
											<span class="input-group-text">
												<i class="ph-calendar"></i>
											</span>
                                                {{ form_widget(form.start, {attr: { class: 'form-control datepicker-date-format-custom1 required', autocomplete: 'off' }}) }}
                                            </div>
                                            <span class="form-text">Format: 31.12.1900. Prvi dan perioda.</span>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            {{ form_label(form.finish, 'Kraj:*', {'label_attr': {'class': 'form-label'}}) }}
                                            <div class="input-group">
											<span class="input-group-text">
												<i class="ph-calendar"></i>
											</span>
                                                {{ form_widget(form.finish, {attr: { class: 'form-control datepicker-date-format-custom2 required', autocomplete: 'off' }}) }}
                                            </div>
                                            <span class="form-text">Format: 31.12.1900. Zaključni dan perioda.</span>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            {{ form_label(form.days, 'Broj dana:*', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.days, {attr: { class: 'form-control required' }}) }}
                                            <span class="form-text">U broj dana uračunati su i dani vikenda i neradnih dana. Ukoliko njih ne želite da računate, umanjite ukupan broj dana za odgovarajući broj.</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            {{ form_label(form.type, 'Tip:*', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.type, {attr: { class: 'form-control select required' }}) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-3">
                                            {{ form_label(form.aneks, 'Aneks:', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.aneks, {attr: { class: 'form-control' }}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            {{ form_label(form.note, 'Napomena:', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.note, {attr: { class: 'form-control' }}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                                </div>
                            </div>
                        {% endif %}
                        {{ form_end(form) }}
                    </div>
                                                <!-- /wizard with validation -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

