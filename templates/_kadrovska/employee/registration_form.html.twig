                // daysOfWeekDisabled: [0]
            });
        }
        // izmenjen format da bi bio po srpskim standardima
        const dpDateCustomFormatElement1 = document.querySelector('.datepicker-date-format-custom1');
        if(dpDateCustomFormatElement1) {
            const dpDateCustomFormat1 = new Datepicker(dpDateCustomFormatElement1, {
                container: '.content-inner',
                buttonClass: 'btn',
                prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                format: 'dd.mm.yyyy',
                todayBtn: true,
                weekStart: 1,
                minDate: 'today',
                daysOfWeekHighlighted: [0,6],
                language: 'sr-latn',
                // daysOfWeekDisabled: [0]
            });
        }
        const dpDateCustomFormatElement2 = document.querySelector('.datepicker-date-format-custom2');
        if(dpDateCustomFormatElement2) {
            const dpDateCustomFormat2 = new Datepicker(dpDateCustomFormatElement2, {
                container: '.content-inner',
                buttonClass: 'btn',
                prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                format: 'dd.mm.yyyy',
                todayBtn: true,
                weekStart: 1,
                maxDate: 'today',
                daysOfWeekHighlighted: [0,6],
                language: 'sr-latn',
                // daysOfWeekDisabled: [0]
            });
        }
        const dpDateCustomFormatElement3 = document.querySelector('.datepicker-date-format-custom3');
        if(dpDateCustomFormatElement3) {
            const dpDateCustomFormat3 = new Datepicker(dpDateCustomFormatElement3, {
                container: '.content-inner',
                buttonClass: 'btn',
                prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                format: 'dd.mm.yyyy',
                todayBtn: true,
                weekStart: 1,
                minDate: 'today',
                daysOfWeekHighlighted: [0,6],
                language: 'sr-latn',
                // daysOfWeekDisabled: [0]
            });
        }

        function checkTrackAndUserTypeValues() {
            var trackValue = $('#employee_kadrovska_registration_form_track').val();
            var userTypeValue = $('#employee_kadrovska_registration_form_userType').val();

            if (userTypeValue == "4") {
                if (trackValue == "1") {
                    $('#employee_kadrovska_registration_form_plainPassword').attr('required', 'required').parent().parent().removeClass('hide');
                    $('.lozinka').addClass('required');
                    $('#employee_kadrovska_registration_form_email').attr('required', 'required').parent().parent().removeClass('hide');
                    $('.email').addClass('required');
                } else {
                    $('#employee_kadrovska_registration_form_plainPassword').removeAttr('required').parent().parent().addClass('hide');
                    $('.lozinka').removeClass('required');
                    $('#employee_kadrovska_registration_form_email').removeAttr('required').parent().parent().addClass('hide');
                    $('.email').removeClass('required');
                }
            } else {
                $('#employee_kadrovska_registration_form_plainPassword').attr('required', 'required').parent().parent().removeClass('hide');
                $('.lozinka').addClass('required');
                $('#employee_kadrovska_registration_form_email').attr('required', 'required').parent().parent().removeClass('hide');
                $('.email').addClass('required');
            }
        }

        // Proveri vrednosti pri učitavanju strane
        checkTrackAndUserTypeValues();

        // Proveri vrednosti pri svakoj promeni
        $('#employee_kadrovska_registration_form_track, #employee_kadrovska_registration_form_userType').change(function() {
            checkTrackAndUserTypeValues();
        });
    </script>

