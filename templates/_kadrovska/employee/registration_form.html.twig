{% block footerJavascript %}

    <script>
        $(document).ready(function() {
            $(".role").change(function() {
                if ($(this).val() == "4") {
                    $('.ROLE_EMPLOYEE').removeClass('hide');
                    $('.pozicija').addClass('required');
                } else  {
                    $('.ROLE_EMPLOYEE').addClass('hide');
                    $('.pozicija').removeClass('required');
                }
            });
            $(".vrstaUgovora").change(function() {
                if ($(this).val() == "0") {
                    $('.ugovor1').removeClass('required');
                    $('.ugovor2').removeClass('required');
                    $('label[for="employee_kadrovska_registration_form_pocetakUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                    $('label[for="employee_kadrovska_registration_form_krajUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                } else if ($(this).val() == "6") {
                    $('.ugovor1').removeClass('required');
                    $('.ugovor2').removeClass('required');
                    $('label[for="employee_kadrovska_registration_form_pocetakUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                    $('label[for="employee_kadrovska_registration_form_krajUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                } else if ($(this).val() == "1") {
                    $('.ugovor1').addClass('required');
                    $('.ugovor2').removeClass('required');
                    $('label[for="employee_kadrovska_registration_form_pocetakUgovora"]').text(function(index, text) {
                        if (!text.includes('*')) {
                            return text + ' *';
                        }
                        return text;
                    });
                    $('label[for="employee_kadrovska_registration_form_krajUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                } else {
                    $('.ugovor1').addClass('required');
                    $('.ugovor2').addClass('required');
                    $('label[for="employee_kadrovska_registration_form_pocetakUgovora"]').text(function(index, text) {
                        if (!text.includes('*')) {
                            return text + ' *';
                        }
                        return text;
                    });
                    $('label[for="employee_kadrovska_registration_form_krajUgovora"]').text(function(index, text) {
                        if (!text.includes('*')) {
                            return text + ' *';
                        }
                        return text;
                    });
                }
            });
        });
        // izmenjen format da bi bio po srpskim standardima
        const dpDateCustomFormatElement = document.querySelector('.datepicker-date-format-custom');
        if(dpDateCustomFormatElement) {
            const dpDateCustomFormat = new Datepicker(dpDateCustomFormatElement, {
                container: '.content-inner',
                buttonClass: 'btn',
                prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
