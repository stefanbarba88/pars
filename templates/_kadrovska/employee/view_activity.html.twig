{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUserKadrovska' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebarKadrovska', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>


                    {{ render(controller('App\\Controller\\WidgetController::employeeProfilNavigationKadrovska', { user: user } )) }}

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Left sidebar component -->
                        {{ render(controller('App\\Controller\\WidgetController::employeeProfilSidebarKadrovska', { user: user } )) }}
                        <!-- /left sidebar component -->

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">

                                <div class="card">
                                    <div class="card-header d-flex align-items-center">
                                        <h5 class="mb-0">Lista zahteva</h5>
                                        <div class="my-auto ms-auto">
                                            <a href="{{ path('app_employee_addon_create_kadrovska', {user:user.id}) }}" class="btn btn-primary"><i class="ph-plus me-2"></i> Dodajte</a>
                                        </div>
                                    </div>
                                    <form method="get" action="{{ path('app_employee_addon_list_kadrovska', {id:user.id}) }}" class="form-validate-jquery" novalidation="novalidation">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        <label class="form-label required" for="addon">Tip aktivnosti:</label>
                                                        <select id="addon" name="addon" class="form-control select">
                                                            <option value="">--Izaberite tip aktivnosti--</option>
                                                            {% for key, value in addons %}
                                                                <option value="{{ key }}">{{ value }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        <label class="form-label" for="period">Period:</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text"><i class="ph-calendar"></i></span>
                                                            <input type="text" class="form-control daterange-locale-sr" id="period" name="period">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text-end">
                                                <button type="submit" class="btn btn-primary"><i class="ph-gear-six me-2"></i> Prikažite</button>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="card-body">
                                        <div class="table-responsive card">
                                            <table class="table table-bordered table-hover table-responsive table-sm">
                                                <thead class="bg-light text-primary">
                                                <tr>
                                                    <th{% if pagination.isSorted('[t.id]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, '# ID ', ['t.id']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 't.id' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 't.id' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th{% if pagination.isSorted('[t.datum]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Datum ', ['t.datum']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 't.datum' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 't.datum' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th{% if pagination.isSorted('[t.type]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Tip ', ['t.type']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 't.type' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 't.type' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th{% if pagination.isSorted('[t.isSuspended]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Status ', ['t.isSuspended']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 't.isSuspended' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 't.isSuspended' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th class="text-center text-muted" style="width: 30px;"><i class="ph-dots-three"></i></th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for addon in pagination %}
                                                    <tr>
                                                        <td>{{ addon.id }}</td>

                                                        <td>
                                                            <div class="d-inline-flex align-items-center">
                                                                <i class="ph-calendar me-2"></i>
                                                                {{ addon.datum | date("d.m.Y")}}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            {% if addon.type == 1 %}
                                                                <span class="badge bg-secondary text-primary">Lekarski pregled</span>
                                                            {% elseif addon.type == 2 %}
                                                                <span class="badge bg-yellow text-primary">Evaluacija</span>
                                                            {% elseif addon.type == 3 %}
                                                                <span class="badge bg-purple text-white">Edukacija</span>
                                                            {% elseif addon.type == 4 %}
                                                                <span class="badge bg-primary text-white">Stimulacija</span>
                                                            {% elseif addon.type == 5 %}
                                                                <span class="badge bg-primary text-white">Destimulacija</span>
                                                            {% endif %}
                                                        </td>

                                                        <td>
                                                            {% if addon.isSuspended %}
                                                                <span class="badge bg-yellow text-primary">Obrisan</span>
                                                            {% else %}
                                                                <span class="badge bg-secondary text-primary">Aktivan</span>
                                                            {% endif %}
                                                        </td>
                                                        <td class="text-center">
                                                            <div class="dropdown">
                                                                <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                                    <i class="ph-gear"></i>
                                                                </a>
                                                                <div class="dropdown-menu dropdown-menu-end">
                                                                    <a href="{{ path('app_employee_addon_view_kadrovska', { id: addon.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                                    <a href="{{ path('app_employee_addon_create_kadrovska', {user:user.id, id:addon.id}) }}" class="dropdown-item"><i class="ph-note-pencil me-2"></i> Izmenite</a>
                                                                    <a href="{{ path('app_employee_addon_delete_kadrovska', { id: addon.id}) }}" class="dropdown-item"><i class="ph-trash me-2"></i> Obrišite</a>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="card-footer">
                                        <div class="navigation float-end">
                                            {{ knp_pagination_render(pagination) }}
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

