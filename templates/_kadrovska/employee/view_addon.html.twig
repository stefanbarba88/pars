{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUserKadrovska' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebarKadrovska')) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>

                    {{ render(controller('App\\Controller\\WidgetController::employeeProfilNavigationKadrovska', { user: user } )) }}

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">
                                        <!-- Left sidebar component -->
                        {{ render(controller('App\\Controller\\WidgetController::employeeProfilSidebarKadrovska', { user: user } )) }}
                                        <!-- /left sidebar component -->

                                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                                            <div class="tab-pane fade active show">
                                                <div class="card">
                                                    <div class="card-header d-flex align-items-center">
                                                        <h5 class="mb-0">Aktivnost</h5>
                                                        <div class="my-auto ms-auto">
                                                            <div class="dropdown">
                                                                <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                                    <i class="ph-gear"></i>
                                                                </a>
                                                                <div class="dropdown-menu dropdown-menu-end">
                                                                    <a href="{{ path('app_employee_addon_create_kadrovska', {user:user.id, id:addon.id}) }}" class="dropdown-item">
                                                                        <i class="ph-note-pencil me-2"></i>
                                                                        Izmenite
                                                                    </a>
                                                                    <a href="{{ path('app_employee_addon_delete_kadrovska', { id: addon.id}) }}" class="dropdown-item">
                                                                        <i class="ph-trash me-2"></i>
                                                                        Obrišite
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4">Zaposleni:</div>
                                                            <div class="col-8">{{ addon.user.fullname }}
                                                            </div>
                                                        </div>
                                                        <div class="row p-2">
                                                            <div class="col-4">Datum:</div>
                                                            <div class="col-8">
                                                                {% if addon.datum is not null %}
                                                                    <div class="d-inline-flex align-items-center">
                                                                        <i class="ph-calendar me-2"></i>
                                                                        {{ addon.datum | date("d.m.Y")}}
                                                                    </div>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4">Tip:</div>
                                                            <div class="col-8">
                                                                {% if addon.type == 1 %}
                                                                    <span class="badge bg-secondary text-primary">Lekarski pregled</span>
                                                                {% elseif addon.type == 2 %}
                                                                    <span class="badge bg-yellow text-primary">Evaluacija</span>
                                                                {% elseif addon.type == 3 %}
                                                                    <span class="badge bg-purple text-white">Edukacija</span>
                                                                {% elseif addon.type == 4 %}
                                                                    <span class="badge bg-primary text-white">Stimulacija</span>
                                                                {% elseif addon.type == 5 %}
                                                                    <span class="badge bg-primary text-white">Destimulacija</span>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        <div class="row p-2">
                                                            <div class="col-4">Početak:</div>
                                                            <div class="col-8">
                                                                {% if addon.start is not null %}
                                                                    <div class="d-inline-flex align-items-center">
                                                                        <i class="ph-calendar me-2"></i>
                                                                        {{ addon.start | date("d.m.Y")}}
                                                                    </div>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4">Kraj:</div>
                                                            <div class="col-8">
                                                                {% if addon.finish is not null %}
                                                                    <div class="d-inline-flex align-items-center">
                                                                        <i class="ph-calendar me-2"></i>
                                                                        {{ addon.finish | date("d.m.Y")}}
                                                                    </div>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        <div class="row p-2">
                                                            <div class="col-4">Opis aktivnosti:</div>
                                                            <div class="col-8">{{ addon.description }}</div>
                                                        </div>
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4">Status:</div>
                                                            <div class="col-8">
                                                                {% if addon.isSuspended %}
                                                                    <span class="badge bg-yellow text-primary">Obrisan</span>
                                                                {% else %}
                                                                    <span class="badge bg-secondary text-primary">Aktivan</span>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /right content -->

                    </div>
                                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

