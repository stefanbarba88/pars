{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUserKadrovska' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebarKadrovska', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>

                    {{ render(controller('App\\Controller\\WidgetController::employeeProfilNavigationKadrovska', { user: user } )) }}

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">
                                        <!-- Left sidebar component -->
                        {{ render(controller('App\\Controller\\WidgetController::employeeProfilSidebarKadrovska', { user: user } )) }}
                                        <!-- /left sidebar component -->

                                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                                            <div class="tab-pane fade active show">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h5 class="mb-0">Lični i kontakt podaci <a href="{{ path('app_employee_edit_info_form_kadrovska', {id: user.id}) }}"><i class="ph-note-pencil"></i></a></h5>
                                                        <div class="card-body">
                                                            <div class="row p-2">
                                                                <div class="col-4">Ime i prezime:</div>
                                                                <div class="col-8">{{ user.fullName() }}</div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">Datum rođenja:</div>
                                                                <div class="col-8">{{ user.datumRodjenja | date("d.m.Y.")}}</div>
                                                            </div>
                                                            <div class="row p-2">
                                                                <div class="col-4">Pol:</div>
                                                                <div class="col-8">{{ user.getPolData()}}</div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">JMBG:</div>
                                                                <div class="col-8">{{ user.jmbg}}</div>
                                                            </div>
                                                            <div class="row p-2">
                                                                <div class="col-4" >Grad:</div>
                                                                <div class="col-8">{{ user.grad.getFormTitle() }}</div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">Adresa:</div>
                                                                <div class="col-8">{{ user.adresa }}</div>
                                                            </div>
                                                            <div class="row p-2">
                                                                <div class="col-4">Telefon:</div>
                                                                <div class="col-8">{{ user.telefon1 }}</div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">Slava:</div>
                                                                <div class="col-8">{{ user.slava | date("d.m.")}}</div>
                                                            </div>

                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h5 class="mb-0">Login podaci <a href="{{ path('app_employee_edit_account_form_kadrovska', {id: user.id}) }}"><i class="ph-note-pencil"></i></a></h5>
                                                        <div class="card-body">
                                                            <div class="row p-2">
                                                                <div class="col-4">Email:</div>
                                                                <div class="col-8">{{ user.email }}</div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">Tip korisnika:</div>
                                                                <div class="col-8">{{ user.badgeByUserType | raw }}</div>
                                                            </div>
                                                            <div class="row p-2">
                                                                <div class="col-4">Radno mesto:</div>
                                                                <div class="col-8">
                                                                    {% if user.pozicija is not null %}
                                                                        {{ user.pozicija.title }}
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">Vrsta zaposlenja:</div>
                                                                <div class="col-8">{{ user.vrstaZaposlenjaData }}</div>
                                                            </div>
                                                            <div class="row p-2">
                                                                <div class="col-4">Početak ugovora:</div>
                                                                <div class="col-8">
                                                                    {% if user.pocetakUgovora is not null %}
                                                                        {{ user.pocetakUgovora | date("d.m.Y.") }}
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">Kraj ugovora:</div>
                                                                <div class="col-8">
                                                                    {% if user.krajUgovora is not null %}
                                                                        {{ user.krajUgovora | date("d.m.Y.") }}
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                            <div class="row p-2">
                                                                <div class="col-4">Mesto rada:</div>
                                                                <div class="col-8">{{ user.mestoRada }}</div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">Nivo obrazovanja:</div>
                                                                <div class="col-8">{{ user.getObrazovanje() }}</div>
                                                            </div>
                                                            <div class="row p-2">
                                                                <div class="col-4">Zvanje:</div>
                                                                <div class="col-8">{{ user.zvanje.title }}</div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">Lekarski pregled:</div>
                                                                <div class="col-8">
                                                                    {% if user.lekarski %}
                                                                        Potreban lekarski pregled
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                                {% if user.editBy is not null %}
                                                    <div class="card">
                                                        <div class="card-header">
                                                            <h5 class="mb-0">Poslednja verzija</h5>
                                                        </div>

                                                        <div class="card-body">
                                                            <div class="row p-2">
                                                                <div class="col-4">Izmenio:</div>
                                                                <div class="col-8">{{ user.editBy.getFullName() | default('/') }}</div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">Vreme:</div>
                                                                <div class="col-8">{{ user.updated | date("d.m.Y") }} u {{ user.updated | date("H:i:s") }}</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <!-- /right content -->

                    </div>
                                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

