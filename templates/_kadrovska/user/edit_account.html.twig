{% block footerJavascript %}

    <script>
        $(document).ready(function() {
            function updateLabels() {
                $(".vrstaUgovora").change(function() {
                    updateLabelState($(this).val());
                });

                // Call the function initially to handle the case when the page loads
                updateLabelState($(".vrstaUgovora").val());
            }

            function updateLabelState(value) {
                if (value == "0") {
                    $('.ugovor1').removeClass('required');
                    $('.ugovor2').removeClass('required');
                    $('label[for="user_kadrovska_edit_account_form_pocetakUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                    $('label[for="user_kadrovska_edit_account_form_krajUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                } else if (value == "6") {
                    $('.ugovor1').removeClass('required');
                    $('.ugovor2').removeClass('required');
                    $('label[for="user_kadrovska_edit_account_form_pocetakUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                    $('label[for="user_kadrovska_edit_account_form_krajUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                } else if (value == "1") {
                    $('.ugovor1').addClass('required');
                    $('.ugovor2').removeClass('required');
                    $('label[for="user_kadrovska_edit_account_form_pocetakUgovora"]').text(function(index, text) {
                        if (!text.includes('*')) {
                            return text + ' *';
                        }
                        return text;
                    });
                    $('label[for="user_kadrovska_edit_account_form_krajUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                } else {
                    $('.ugovor1').addClass('required');
                    $('.ugovor2').addClass('required');
                    $('label[for="user_kadrovska_edit_account_form_pocetakUgovora"]').text(function(index, text) {
                        if (!text.includes('*')) {
                            return text + ' *';
                        }
                        return text;
                    });
                    $('label[for="user_kadrovska_edit_account_form_krajUgovora"]').text(function(index, text) {
                        if (!text.includes('*')) {
                            return text + ' *';
                        }
                        return text;
                    });
                }
            }

            updateLabels();
            $(".role").change(function() {
                if ($(this).val() == "4") {
                    $('.ROLE_EMPLOYEE').removeClass('hide');
                    $('.ROLE_EMPLOYEE [input]').addClass('required');
                    $('.zaposleni').removeClass('hide');
                    $('.zaposleni').addClass('required');
                } else {
                    $('.ROLE_EMPLOYEE').addClass('hide');
                    $('.ROLE_EMPLOYEE [input]').removeClass('required');
                    $('.zaposleni').addClass('hide');
                    $('.zaposleni').removeClass('required');
                }
            });
            const dpDateCustomFormatElement1 = document.querySelector('.datepicker-date-format-custom1');
            if(dpDateCustomFormatElement1) {
                const dpDateCustomFormat1 = new Datepicker(dpDateCustomFormatElement1, {
                    container: '.content-inner',
                    buttonClass: 'btn',
                    prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                    nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                    format: 'dd.mm.yyyy',
                    todayBtn: true,
                    weekStart: 1,
                    maxDate: 'today',
                    daysOfWeekHighlighted: [0,6],
                    language: 'sr-latn',
                    // daysOfWeekDisabled: [0]
                });
            }
            const dpDateCustomFormatElement2 = document.querySelector('.datepicker-date-format-custom2');
            if(dpDateCustomFormatElement2) {
                const dpDateCustomFormat1 = new Datepicker(dpDateCustomFormatElement2, {
                    container: '.content-inner',
                    buttonClass: 'btn',
                    prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                    nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                    format: 'dd.mm.yyyy',
                    todayBtn: true,
                    weekStart: 1,
                    minDate: 'today',
                    daysOfWeekHighlighted: [0,6],
                    language: 'sr-latn',
                    // daysOfWeekDisabled: [0]
                });
            }
        });
    </script>

{% endblock footerJavascript %}