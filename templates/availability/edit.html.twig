{% block footerJavascript %}

<script>
    $(document).ready(function() {
        function handleTipChange() {
            if ($(".tip").val() == "3") {
                $('.zah').removeClass('required');
                $('.zahtev').addClass('hide');
            } else {
                $('.zahtev').removeClass('hide');
                $('.zah').addClass('required');
            }
        }

        // Izvrši funkciju pri učitavanju strane
        handleTipChange();

        // Veži funkciju za promenu vrednosti elementa sa klasom 'tip'
        $(".tip").change(handleTipChange);
    });
</script>

{% endblock footerJavascript %}