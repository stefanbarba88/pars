{% block footerJavascript %}

    <script>

        $(document).ready(function() {
            // Date format
            const dpDateCustomFormatElement1 = document.querySelector('.datepicker-date-format-custom1');
            const dpDateCustomFormatElement2 = document.querySelector('.datepicker-date-format-custom2');
            const dpDateCustomFormatElement3 = document.querySelector('.daterange-locale-sr-stopwatch');

            let dpDateCustomFormat1;
            let dpDateCustomFormat2;
            let dpDateCustomFormat3;

            if (dpDateCustomFormatElement1) {
                const today = new Date();
                dpDateCustomFormat1 = new Datepicker(dpDateCustomFormatElement1, {
                    container: '.content-inner',
                    buttonClass: 'btn',
                    prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                    nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                    format: 'dd.mm.yyyy',
                    todayBtn: true,
                    weekStart: 1,
                    minDate: today,
                    daysOfWeekHighlighted: [0, 6],
                    language: 'sr-latn'
                });
            }

            if (dpDateCustomFormatElement2) {
                const today = new Date();
                dpDateCustomFormat2 = new Datepicker(dpDateCustomFormatElement2, {
                    container: '.content-inner',
                    buttonClass: 'btn',
                    prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                    nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                    format: 'dd.mm.yyyy',
                    todayBtn: true,
                    weekStart: 1,
                    minDate: today,
                    daysOfWeekHighlighted: [0, 6],
                    language: 'sr-latn'
                });
            }

            function parseDate(input) {
                const parts = input.split('.');
                return new Date(parts[2], parts[1] - 1, parts[0]); // format dd.mm.yyyy
            }


            function updateFinishMinDate() {
                const startDateStr = $('#calendar_form_start').val();
                if (startDateStr) {
                    const minDate = parseDate(startDateStr);
                    dpDateCustomFormat2.setOptions({
                        minDate: minDate
                    });
                    // Praznimo vrednost drugog inputa kada se izabere novi datum u prvom
                    $('#calendar_form_finish').val('');
                }
            }

            $('#calendar_form_start').on('changeDate', function() {
                updateFinishMinDate();

            });

            function updateNoteField() {
                var selectedType = $('#calendar_form_type').val();

                if (selectedType == '1') {
                    // Dodaj required atribut i promeni labelu
                    $('#calendar_form_note').attr('required', true);
                    $('.dan1').addClass('required', true);
                    $('.dodatno').removeClass('d-none');

                    $('#napomena-id').text('Napomena:*');



                } else {
                    // Ukloni required atribut i promeni labelu
                    $('#calendar_form_note').removeAttr('required');
                    $('.dan1').removeClass('required');
                    $('.dodatno').addClass('d-none');

                    $('#napomena-id').text('Napomena:');

                }
            }

            // Prati promene u izboru tipa
            $('#calendar_form_type').change(function() {
                updateNoteField();
            });

            // Primeni promene pri učitavanju strane
            updateNoteField();

            function updateVremeField() {
                var selectedType = $('#calendar_form_part').val();

                if (selectedType == '1') {
                    // Dodaj required atribut i promeni labelu
                    $('#calendar_form_vreme').attr('required', true);
                    $('.dodatno1').removeClass('d-none');

                } else {
                    // Ukloni required atribut i promeni labelu
                    $('#calendar_form_vreme').removeAttr('required');
                    $('.dodatno1').addClass('d-none');

                }
            }

            // Prati promene u izboru tipa
            $('#calendar_form_part').change(function() {
                updateVremeField();
            });
            function updateVremeMinMax() {
                const startDateStr = $('#calendar_form_start').val();
                const stopDateStr = $('#calendar_form_finish').val();

                if (startDateStr && stopDateStr) {
                    const minDate = moment(startDateStr, 'DD.MM.YYYY');
                    const maxDate = moment(stopDateStr, 'DD.MM.YYYY').endOf('day'); // Kraj dana (23:59:59)

                    $('#calendar_form_vreme').daterangepicker({
                        parentEl: '.content-inner',
                        timePicker: true,
                        timePicker24Hour: true,
                        timePickerIncrement: 10,
                        startDate: moment().startOf('hour'),
                        endDate: moment().startOf('hour').add(1, 'hour'),

                        locale: {
                            applyLabel: 'Izaberite',
                            cancelLabel: 'Odustanite',
                            startLabel: 'Početni datum',
                            endLabel: 'Krajnji datum',
                            customRangeLabel: 'Izaberite vremenski period',
                            daysOfWeek: ['N', 'Po', 'U', 'Sr', 'Č', 'Pe','Su'],
                            monthNames: ['Januar', 'Februar', 'Mart', 'April', 'Maj', 'Jun', 'Jul', 'Avgust', 'Septembar', 'Oktobar', 'Novembar', 'Decembar'],
                            firstDay: 1,
                            format: 'DD.MM.YYYY HH:mm'
                        },

                        minDate: minDate,
                        maxDate: maxDate
                    });

                    // Praznimo vrednost polja kada se promeni datum
                    $('#calendar_form_vreme').val('');
                }
            }

// Pozivanje funkcije kada se izaberu datumi
            $('#calendar_form_start, #calendar_form_finish').on('changeDate', function() {
                updateVremeMinMax();
            });
            // Primeni promene pri učitavanju strane
            updateVremeField();
            updateVremeMinMax();


        });


    </script>

{% endblock footerJavascript %}
