{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}
        <!-- Main content -->

        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                 Kalendar
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    {% if not form.vars.valid %}
                        {% for child in form.children %}
                            {%for error in child.vars.errors%}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <span class="fw-semibold">{{error.message}}</span>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {%endfor%}
                        {%endfor%}
                    {%endif%}
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">
                                 {% if calendar.id is not null %}
                                        Izmena zahteva
                                    {% else %}
                                        Dodavanje zahteva
                                    {% endif %}
                                    </h6>
                        </div>
                        {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}
                        <div class="card-body">
                            <div class="row">
                                {% if calendar.user is empty %}
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label required" for="form_zaposleni">Zaposleni:*</label>
                                            <select id="form_zaposleni" name="form[zaposleni]" class="form-control required">
                                                <option value="">--Izaberite zaposlenog--</option>
                                                {% for user in users %}
                                                    <option value="{{ user.id }}">{{ user.fullName }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label required" for="form_zaposleni">Zaposleni:*</label>
                                            <select id="form_zaposleni" name="form[zaposleni]" class="form-control required">
                                                {% for user in calendar.user %}
                                                    <option value="{{ user.id }}">{{ user.fullName }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                {% endif %}
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        {{ form_label(form.type, 'Tip:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.type, {attr: { class: 'form-control required' }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        {{ form_label(form.start, 'Početak:*', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="input-group">
											<span class="input-group-text">
												<i class="ph-calendar"></i>
											</span>
                                            {{ form_widget(form.start, {attr: { class: 'form-control required', min: 'now'|date('Y-m-d') }}) }}
                                        </div>
                                        <span class="form-text">Prvi dan perioda.</span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        {{ form_label(form.finish, 'Kraj:*', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="input-group">
											<span class="input-group-text">
												<i class="ph-calendar"></i>
											</span>
                                            {{ form_widget(form.finish, {attr: { class: 'form-control required', min: 'now'|date('Y-m-d') }}) }}
                                        </div>
                                        <span class="form-text">Zaključni dan perioda.</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        {{ form_label(form.note, 'Napomena:', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.note, {attr: { class: 'form-control' }}) }}
                                    </div>
                                </div>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                                                <!-- /wizard with validation -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

