{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUser' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}
        <!-- Main content -->

        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>


                    <div class="page-header-content d-lg-flex border-top">
                        <div class="d-flex">
                            <div class="breadcrumb py-2">
                                <a href="{{ path('app_home') }}" class="breadcrumb-item"><i class="ph-house"></i></a>
                                {% if not is_granted('ROLE_EMPLOYEE') %}
                                    <a href="{{ path('app_employees') }}" class="breadcrumb-item">Zaposleni</a>
                                {% endif %}
                                <span class="breadcrumb-item">{{ user.getFullName() }}</span>
                                <a href="{{ path('app_employee_car_view', {id:user.id}) }}" class="breadcrumb-item">Vozila</a>
                                <span class="breadcrumb-item active">Dodavanje</span>
                            </div>

                            <a href="#breadcrumb_elements" class="btn btn-light align-self-center collapsed d-lg-none border-transparent rounded-pill p-0 ms-auto" data-bs-toggle="collapse">
                                <i class="ph-caret-down collapsible-indicator ph-sm m-1"></i>
                            </a>
                        </div>

                        {{ render(controller('App\\Controller\\WidgetController::support' )) }}
                    </div>
                    {{ render(controller('App\\Controller\\WidgetController::employeeProfilNavigation', { user: user } )) }}
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Left sidebar component -->
                        {{ render(controller('App\\Controller\\WidgetController::employeeProfilSidebar', { user: user } )) }}
                        <!-- /left sidebar component -->

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                {% if not form.vars.valid %}
                                    {% for child in form.children %}
                                        {%for error in child.vars.errors%}
                                            <div class="alert alert-danger alert-dismissible fade show">
                                                <span class="fw-semibold">{{error.message}}</span>
                                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                            </div>
                                        {%endfor%}
                                    {%endfor%}
                                {%endif%}
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="mb-0">
                                            {% if reservation.id is not null %}
                                                Izmena rezervacije
                                            {% else %}
                                                Dodavanje rezervacije
                                            {% endif %}
                                        </h6>
                                    </div>
                                    {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.car, 'Vozilo:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.car, {attr: { class: 'form-control select required' }}) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.driver, 'Vozač:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.driver, {attr: { class: 'form-control select required' }}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.kmStart, 'Početna kilometraža:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.kmStart, {attr: { class: 'form-control required' }}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.fuelStart, 'Nivo goriva:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.fuelStart, {attr: { class: 'form-control select required' }}) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.cleanStart, 'Nivo čistoće:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.cleanStart, {attr: { class: 'form-control select required' }}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="mb-3">
                                                    {{ form_label(form.descStart, 'Napomena:', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.descStart, {attr: { class: 'form-control' }}) }}
                                                </div>
                                            </div>

                                            <div class="text-end">
                                                <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                                            </div>
                                        </div>
                                        {{ form_end(form) }}
                                    </div>
                                    <!-- /wizard with validation -->

                                </div>

                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->
        </div>
        </div>
        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

