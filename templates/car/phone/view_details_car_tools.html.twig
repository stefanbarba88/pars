                                                                1/4
                                                            {% endif %}
                                                            {% if reservation.fuelStart == constant('App\\Classes\\Data\\FuelData::POLA') %}
                                                                1/2
                                                            {% endif %}
                                                            {% if reservation.fuelStart == constant('App\\Classes\\Data\\FuelData::TRI_CETVRTI') %}
                                                                3/4
                                                            {% endif %}
