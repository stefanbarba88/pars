{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Gradovi
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">{{ city.getFormTitle() }} {% if city.id > constant('App\\Classes\\AppConfig::CITY_TO_EDIT_ID') %}<a href="{{ path('app_city_form', {id: city.id}) }}"><i class="ph-note-pencil"></i></a>{% endif %}</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row p-2">
                                            <div class="col-4">Naziv:</div>
                                            <div class="col-8">{{ city.title }}</div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">PTT broj:</div>
                                            <div class="col-8">{{ city.ptt }}</div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Opština:</div>
                                            <div class="col-8">{{ city.municipality }}</div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Region:</div>
                                            <div class="col-8">{{ city.region }}</div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Država:</div>
                                            <div class="col-8">{{ city.drzava.title }}</div>
                                        </div>
                                    </div>
                                </div>
                                {% if city.editBy is not null %}
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Poslednja verzija</h5>
                                    </div>

                                    <div class="card-body">
                                        <div class="row p-2">
                                            <div class="col-4">Izmenio:</div>
                                            <div class="col-8">{{ city.editBy.getFullName() | default('/') }}</div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Vreme:</div>
                                            <div class="col-8">{{ city.updated | date("d.m.Y") }} u {{ city.updated | date("H:i:s") }}</div>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

