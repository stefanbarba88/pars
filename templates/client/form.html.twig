{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Klijenti
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->
                 <div class="content">
                    <!-- Content area -->
                    <div class="d-lg-flex align-items-lg-start">

                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                    {% if not form.vars.valid %}
                                        {% for child in form.children %}
                                            {%for error in child.vars.errors%}
                                                <div class="alert alert-danger alert-dismissible fade show">
                                                    <span class="fw-semibold">{{error.message}}</span>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                                </div>
                                            {%endfor%}
                                        {%endfor%}
                                    {%endif%}
                                    <!-- Wizard with validation -->
                                    <div class="card">
                                        <div class="card-header">
                                            <h6 class="mb-0">
                                                {% if client.id is not null %}
                                                    Izmena klijenta
                                                {% else %}
                                                    Dodavanje klijenta
                                                {% endif %}
                                            </h6>
                                        </div>
                                        {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}
                                        <div class="card-body">
                                            <div class="fw-bold border-bottom pb-2 mb-3">Osnovni podaci</div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.isSerbian, 'Srpska kompanija:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.isSerbian, {attr: { class: 'form-control required select' }}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.pib, 'PIB/VAT:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.pib, {attr: { class: 'form-control required', maxLength: '9', minLength: '9' }}) }}
                                                        <span id="formatPib" class="form-text">Format: Uneti tačno 9 cifara.</span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.title, 'Naziv:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.title, {attr: { class: 'form-control required' }}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="fw-bold border-bottom pb-2 mb-3">Kontakt podaci</div>
                                            {% if clientContact %}
                                                {% set value = client.contactPlain is not null ? 0 : 1 %}
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            <label class="form-label" for="client_form[contactTrue]">Profil kontakt lica:*</label>
                                                            <div class="input-group">
                                                                <label class="form-check mb-2">
                                                                    <input type="checkbox" class="form-check-input contact" name="client_form[contactTrue]" {% if client.contactPlain is null %}checked{% endif%} id="contact">
                                                                    <span class="form-check-label">Dozvolite da kontakt lica kompanije pristupaju aplikaciji i kreiraju tikete. Ako želite da dozvolite, predhodno morate imati kreirane korisnike sa ulogom "KLIJENT" kojima će te dodeliti pristup.</span>
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row none lice1">
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            {{ form_label(form.contact, 'Lica za kontakt:*', {'label_attr': {'class': 'form-label'}}) }}
                                                            {{ form_widget(form.contact, {attr: { class: 'form-control select lice11' }}) }}
                                                            <span class="form-text">Možete izabrati više lica za kontakt.</span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row lice2">
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            {{ form_label(form.contactPlain, 'Lice za kontakt:*', {'label_attr': {'class': 'form-label'}}) }}
                                                            {{ form_widget(form.contactPlain, {attr: { class: 'form-control required lice22' }}) }}
                                                            <span class="form-text">Unesite ime i prezime kontakt lica.</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% else %}
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            {{ form_label(form.contactPlain, 'Lice za kontakt:*', {'label_attr': {'class': 'form-label'}}) }}
                                                            {{ form_widget(form.contactPlain, {attr: { class: 'form-control required' }}) }}
                                                            <span class="form-text">Unesite ime i prezime kontakt lica.</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}



                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.grad, 'Grad:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.grad, {attr: { class: 'form-control select required' }}) }}
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.adresa, 'Ulica i broj:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.adresa, {attr: { class: 'form-control required' }}) }}
                                                        <span class="form-text">Format: Bulevar Milutina Milankovića 1</span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.telefon1, 'Službeni telefon:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.telefon1, {attr: { class: 'form-control required' }}) }}
                                                        <span class="form-text">Format: 0661111222</span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.telefon2, 'Privatni telefon:', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.telefon2, {attr: { class: 'form-control' }}) }}
                                                        <span class="form-text">Format: 0661111222</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text-end">
                                                <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                                            </div>
                                        </div>
                                        {{ form_end(form) }}
                                    </div>
                                    <!-- /wizard with validation -->
                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                 </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

