{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUser' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ client.title }}
                            </h4>
                        </div>
                    </div>

                    {{ render(controller('App\\Controller\\WidgetController::clientProfilNavigation', { client: client} )) }}

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <div class="sidebar sidebar-component sidebar-expand-lg sidebar-expand-sm sidebar-expand-md sidebar-expand-xl sidebar-expand-xxl sidebar-mobile-expanded bg-transparent shadow-none me-lg-3">

                            <!-- Sidebar content -->
                            <div class="sidebar-content">
                                <!-- Navigation -->
                                <div class="card">
                                    <div class="sidebar-section-body text-center">
                                        <div class="card-img-actions d-inline-block mb-3">
                                            <img class="img-fluid rounded-circle" src="{{ asset(client.image.thumbnail500) }}" width="150" height="150" alt="{{ client.title }}">
                                        </div>
                                        <h6 class="mb-0">{{ client.title | upper }}</h6>
                                    </div>
                                    <ul class="nav nav-sidebar">
                                        <li class="nav-item">
                                            <a href="{{ path('app_client_profile_view', { id: client.id}) }}" class="nav-link" >
                                                <i class="ph-user me-2"></i>
                                                Profil
                                            </a>
                                        </li>
{#                                        <li class="nav-item">#}
{#                                            <a href="{{ path('app_client_activity_view', { id: client.id}) }}" class="nav-link">#}
{#                                                <i class="ph-activity me-2"></i>#}
{#                                                Aktivnosti#}
{#                                                <span class="badge bg-secondary rounded-pill ms-auto">29</span>#}
{#                                            </a>#}
{#                                        </li>#}
{#                                        <li class="nav-item">#}
{#                                            <a href="{{ path('app_client_calendar_view', { id: client.id}) }}" class="nav-link">#}
{#                                                <i class="ph-calendar me-2"></i>Raspored#}
{#                                                <span class="fs-sm fw-normal text-muted ms-auto">02:56pm</span>#}
{#                                            </a>#}
{#                                        </li>#}
                                        <li class="nav-item-divider"></li>
                                        <li class="nav-item">
                                            {#                    <a href="{{ path('app_logout') }}" class="nav-link" data-bs-toggle="tab">#}
                                            {#                        <i class="ph-sign-out me-2"></i>Odjavite se#}
                                            {#                    </a>#}
                                            <a href="{{ path('app_client_settings_form', { id: client.id}) }}" class="nav-link">
                                                <i class="ph-lightbulb me-2"></i>Status
                                                <span class="ms-auto">{{ client.badgeByStatus | raw }}</span>
                                            </a>

                                        </li>
                                    </ul>
                                </div>
                                <!-- /navigation -->
                            </div>
                            <!-- /sidebar content -->
                        </div>

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Osnovni podaci <a href="{{ path('app_client_form', {id: client.id}) }}"><i class="ph-note-pencil"></i></a></h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row p-2">
                                            <div class="col-4">Naziv:</div>
                                            <div class="col-8">{{ client.title | upper }}</div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">PIB/VAT:</div>
                                            <div class="col-8">{{ client.pib }}</div>
                                        </div>
                                        <div class="row p-2 bg">
                                            <div class="col-4">Lica za kontakt:</div>
                                            <div class="col-8">
                                                {% if client.contact is not empty %}
                                                    {% for contact in client.contact %}
                                                        <a href="{{ path('app_user_profile_view', {id: contact.id}) }}">{{ contact.fullName }}</a>{% if  not loop.last %}<br>{% endif %}
                                                    {% endfor %}
                                                {% else %}
                                                    {{ client.contactPlain }}
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Kreirao:</div>
                                            <div class="col-8"><a href="{{ path('app_user_profile_view', { id: client.createdBy.id}) }}">{{ client.createdBy.getFullName() }}</a></div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Vreme:</div>
                                            <div class="col-8">{{ client.created | date("d.m.Y") }} u {{ client.created | date("H:i:s") }}</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Kontakt podaci</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row p-2">
                                            <div class="col-4">Dr≈æava:</div>
                                            <div class="col-8">{{ client.grad.drzava.title }}</div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Grad:</div>
                                            <div class="col-8">{{ client.grad.getFormTitle() }}</div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Adresa:</div>
                                            <div class="col-8">{{ client.adresa }}</div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Telefon#1:</div>
                                            <div class="col-8">{{ client.telefon1 }}</div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Telefon#2:</div>
                                            <div class="col-8">{{ client.telefon2 | default('/') }}</div>
                                        </div>
                                    </div>
                                </div>
                                {% if client.editBy is not null %}
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="mb-0">Poslednja verzija</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="row p-2">
                                                <div class="col-4">Izmenio:</div>
                                                <div class="col-8">{{ client.editBy.getFullName() | default('/') }}</div>
                                            </div>
                                            <div class="row p-2 bg-light">
                                                <div class="col-4">Vreme:</div>
                                                <div class="col-8">{{ client.updated | date("d.m.Y") }} u {{ client.updated | date("H:i:s") }}</div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {# {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }} #}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

