{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUser' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ client.title }}
                            </h4>
                        </div>
                    </div>
                    {{ render(controller('App\\Controller\\WidgetController::clientProfilNavigation', { client: client} )) }}

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <div class="sidebar sidebar-component sidebar-expand-lg sidebar-expand-sm sidebar-expand-md sidebar-expand-xl sidebar-expand-xxl sidebar-mobile-expanded bg-transparent shadow-none me-lg-3">

                        <!-- Sidebar content -->
                            <div class="sidebar-content">
                                <!-- Navigation -->
                                <div class="card">
                                    <div class="sidebar-section-body text-center">
                                        <div class="card-img-actions d-inline-block mb-3">
                                            <img class="img-fluid rounded-circle" src="{{ asset(client.image.thumbnail500) }}" width="150" height="150" alt="{{ client.title }}">
                                        </div>
                                        <h6 class="mb-0">{{ client.title | upper }}</h6>
                                    </div>
                                    <ul class="nav nav-sidebar">
                                        <li class="nav-item">
                                            <a href="{{ path('app_client_profile_view', { id: client.id}) }}" class="nav-link" >
                                                <i class="ph-user me-2"></i>
                                                Profil
                                            </a>
                                        </li>
                                        {#                                        <li class="nav-item">#}
                                        {#                                            <a href="{{ path('app_client_activity_view', { id: client.id}) }}" class="nav-link">#}
                                        {#                                                <i class="ph-activity me-2"></i>#}
                                        {#                                                Aktivnosti#}
                                        {#                                                <span class="badge bg-secondary rounded-pill ms-auto">29</span>#}
                                        {#                                            </a>#}
                                        {#                                        </li>#}
                                        {#                                        <li class="nav-item">#}
                                        {#                                            <a href="{{ path('app_client_calendar_view', { id: client.id}) }}" class="nav-link">#}
                                        {#                                                <i class="ph-calendar me-2"></i>Raspored#}
                                        {#                                                <span class="fs-sm fw-normal text-muted ms-auto">02:56pm</span>#}
                                        {#                                            </a>#}
                                        {#                                        </li>#}
                                        <li class="nav-item-divider"></li>
                                        <li class="nav-item">
                                            {#                    <a href="{{ path('app_logout') }}" class="nav-link" data-bs-toggle="tab">#}
                                            {#                        <i class="ph-sign-out me-2"></i>Odjavite se#}
                                            {#                    </a>#}
                                            <a href="{{ path('app_client_settings_form', { id: client.id}) }}" class="nav-link">
                                                <i class="ph-lightbulb me-2"></i>Status
                                                <span class="ms-auto">{{ client.badgeByStatus | raw }}</span>
                                            </a>

                                        </li>
                                    </ul>
                                </div>
                                <!-- /navigation -->
                            </div>
                            <!-- /sidebar content -->
                        </div>

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header d-flex align-items-center">
                                        <h5 class="mb-0">Lista tiketa</h5>
                                        {% if is_granted('ROLE_CLIENT') %}
                                            <div class="my-auto ms-auto">
                                                <a href="{{ path('app_ticket_form') }}" class="btn btn-primary"><i class="ph-plus me-2"></i> Dodajte</a>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive card">
                                            <table class="table table-bordered table-hover table-responsive table-sm">
                                                <thead class="bg-light test-primary">
                                                <tr>
                                                    <th>#</th>
                                                    <th>Zadatak</th>
                                                    <th>Klijent</th>
                                                    <th {% if pagination.isSorted('[c.priority]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Prioritet ', ['c.priority']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'c.priority' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'c.priority' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th {% if pagination.isSorted('[c.created]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Kreiran ', ['c.created']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'c.created' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'c.created' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th {% if pagination.isSorted('[c.deadline]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Rok ', ['c.deadline']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'c.deadline' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'c.deadline' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th {% if pagination.isSorted('[c.status]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Status ', ['c.status']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'c.status' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'c.status' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th>Kreirao</th>
                                                    <th>Izmenio</th>
                                                    <th class="text-center text-muted" style="width: 30px;"><i class="ph-dots-three"></i></th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for ticket in pagination %}
                                                    <tr>
                                                        <td>
                                                            {{ ticket.id }}
                                                        </td>
                                                        <td>
                                                            <a href="{{ path('app_ticket_view', {id:ticket.id}) }}" class="text-body">
                                                                {{ ticket.task }}
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                <a href="{{ path('app_client_profile_view', { id: ticket.client.id}) }}">{{ ticket.client.title }}</a>
                                                            </div>
                                                        </td>
                                                        <td class="text-center">
                                                            {% if ticket.priority == 1 %}
                                                                <span class="badge bg-danger bg-opacity-20 text-danger">Veoma visok</span>
                                                            {% elseif ticket.priority == 2 %}
                                                                <span class="badge bg-warning bg-opacity-20 text-warning">Visok</span>
                                                            {% elseif ticket.priority == 4 %}
                                                                <span class="badge bg-info bg-opacity-20 text-info">Nizak</span>
                                                            {% elseif ticket.priority == 5 %}
                                                                <span class="badge bg-secondary bg-opacity-20 text-secondary">Veoma nizak</span>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if ticket.created is not null %}
                                                                <div class="d-inline-flex align-items-center">
                                                                    <i class="ph-calendar me-2"></i>
                                                                    {{ ticket.created | date("d.m.Y")}}
                                                                </div>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if ticket.deadline is not null %}
                                                                <div class="d-inline-flex align-items-center">
                                                                    <i class="ph-calendar me-2"></i>
                                                                    {{ ticket.deadline | date("d.m.Y")}}
                                                                </div>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if ticket.status == constant('App\\Classes\\Data\\InternTaskStatusData::NIJE_ZAPOCETO') %}
                                                                <span class="badge bg-secondary text-primary">Kreiran</span>
                                                            {% elseif ticket.status == constant('App\\Classes\\Data\\InternTaskStatusData::ZAPOCETO') %}
                                                                <span class="badge bg-yellow text-primary">U toku</span>
                                                            {% elseif ticket.status == constant('App\\Classes\\Data\\InternTaskStatusData::ZAVRSENO') %}
                                                                <span class="badge bg-primary text-white">Završen</span>
                                                            {% elseif ticket.status == constant('App\\Classes\\Data\\InternTaskStatusData::KONVERTOVANO') %}
                                                                <span class="badge bg-yellow text-primary">Konvertovan</span>
                                                            {% endif %}
                                                        </td>

                                                        <td>
                                                            {{ ticket.createdBy.getFullName() }}
                                                        </td>
                                                        <td>
                                                            {% if ticket.editBy is not null %}
                                                                {{ ticket.editBy.getFullName }}
                                                            {% endif %}
                                                        </td>

                                                        <td class="text-center">
                                                            <div class="dropdown">
                                                                <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                                    <i class="ph-gear"></i>
                                                                </a>
                                                                <div class="dropdown-menu dropdown-menu-end">
                                                                    <a href="" class="dropdown-item">
                                                                        <i class="ph-eye me-2"></i>
                                                                        Vidite
                                                                    </a>
                                                                    {% if ticket.status == constant('App\\Classes\\Data\\InternTaskStatusData::NIJE_ZAPOCETO') %}
                                                                        <a href="{{ path('app_ticket_finish', {id: ticket.id}) }}" class="dropdown-item">
                                                                            <i class="ph-check me-2"></i>
                                                                            Završite
                                                                        </a>
                                                                        <a href="{{ path('app_ticket_form', {id: ticket.id}) }}" class="dropdown-item">
                                                                            <i class="ph-note-pencil me-2"></i>
                                                                            Izmenite
                                                                        </a>
                                                                        <a href="{{ path('app_ticket_delete', {id: ticket.id}) }}" class="dropdown-item">
                                                                            <i class="ph-trash me-2"></i>
                                                                            Obrišite
                                                                        </a>
                                                                        {% if app.user.userType != constant('App\\Classes\\Data\\UserRolesData::ROLE_CLIENT') %}
                                                                            <a href="{{ path('app_ticket_convert', {id: ticket.id}) }}" class="dropdown-item">
                                                                                <i class="ph-magic-wand me-2"></i>
                                                                                Konvertuj u zadatak sa merenjem
                                                                            </a>
                                                                        {% endif %}
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="card-footer">
                                        <div class="navigation float-end">
                                            {{ knp_pagination_render(pagination) }}
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

