{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUser' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                            <div class="d-flex">
                                <h4 class="page-title mb-0">
                                    {{ user.getFullName() }}
                                </h4>
                            </div>
                        </div>

                    {{ render(controller('App\\Controller\\WidgetController::employeeProfilNavigation', { user: user } )) }}

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    {% if not form.vars.valid %}
                        {% for child in form.children %}
                            {%for error in child.vars.errors%}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <span class="fw-semibold">{{error.message}}</span>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {%endfor%}
                        {%endfor%}
                    {%endif%}
                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

{{ render(controller('App\\Controller\\WidgetController::employeeProfilSidebar', { user: user } )) }}

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Izmena ličnih i kontakt podataka</h5>
                                    </div>
                                    {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.ime, 'Ime:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.ime, {attr: { class: 'form-control required' }}) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.prezime, 'Prezime:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.prezime, {attr: { class: 'form-control required' }}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            {% if user.userType() != 1 and user.userType() != 2 and user.userType() != 5 %}
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.datumRodjenja, 'Datum rođenja:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        <div class="input-group">
											<span class="input-group-text">
												<i class="ph-calendar"></i>
											</span>
                                                            {{ form_widget(form.datumRodjenja, {attr: { class: 'form-control required datepicker-date-format-custom', autocomplete : 'off' }}) }}
                                                        </div>
                                                        <span class="form-text">Format: 31.12.1900</span>
                                                    </div>
                                                </div>
                                            {% endif %}
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.pol, 'Pol:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.pol, {attr: { class: 'form-control select required' }}) }}
                                                </div>
                                            </div>
                                        </div>
                                        {% if user.userType() != 1 and user.userType() != 2 and user.userType() != 5 %}
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.grad, 'Grad:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.grad, {attr: { class: 'form-control select required' }}) }}
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.adresa, 'Ulica i broj:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.adresa, {attr: { class: 'form-control required' }}) }}
                                                        <span class="form-text">Format: Bulevar Milutina Milankovića 1</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    {{ form_label(form.telefon1, 'Službeni telefon:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.telefon1, {attr: { class: 'form-control required' }}) }}
                                                    <span class="form-text">Format: 0661111222</span>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.telefon2, 'Privatni telefon:', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.telefon2, {attr: { class: 'form-control' }}) }}
                                                        <span class="form-text">Format: 0661111222</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        {{ form_label(form.vozacki, 'Vozačka dozvola:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.vozacki, {attr: { class: 'form-control select required' }}) }}
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        {{ form_label(form.isLekarski, 'Lekarski pregled:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.isLekarski, {attr: { class: 'form-control select required' }}) }}
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        {{ form_label(form.isPrvaPomoc, 'Prva pomoć:*', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.isPrvaPomoc, {attr: { class: 'form-control select required' }}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        <label class="form-label" for="user_registration_form_neradniDan">Neradni dani:</label>
                                                        <select id="user_registration_form_neradniDan" name="user_registration_form[neradniDani][]" data-minimum-results-for-search="Infinity" class="form-control select" multiple="multiple">

                                                            <option value="1" {% if 1 in user.neradniDan %} selected {% endif %}>Ponedeljak</option>
                                                            <option value="2" {% if 2 in user.neradniDan %} selected {% endif %}>Utorak</option>
                                                            <option value="3" {% if 3 in user.neradniDan %} selected {% endif %}>Sreda</option>
                                                            <option value="4" {% if 4 in user.neradniDan %} selected {% endif %}>Četvrtak</option>
                                                            <option value="5" {% if 5 in user.neradniDan %} selected {% endif %}>Petak</option>
                                                            <option value="6" {% if 6 in user.neradniDan %} selected {% endif %}>Subota</option>
                                                            <option value="7" {% if 7 in user.neradniDan %} selected {% endif %}>Nedelja</option>

                                                        </select>
                                                        <span class="form-text">Ukoliko zaposleni ne radi određenim danima u sedmici. Potrebno je uneti i dan vikenda ako firma radi vikendom.</span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.slava, 'Slava:', {'label_attr': {'class': 'form-label'}}) }}
                                                        <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ph-calendar"></i>
                                                </span>
                                                            {{ form_widget(form.slava, {attr: { class: 'form-control datepicker-date-format-custom1', autocomplete : 'off' }}) }}
                                                        </div>
                                                        <span class="form-text">Format: 31.12.1900</span>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                        {% if user.userType() == 5 %}
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    {{ form_label(form.telefon1, 'Službeni telefon:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.telefon1, {attr: { class: 'form-control required' }}) }}
                                                    <span class="form-text">Format: 0661111222</span>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        {{ form_label(form.telefon2, 'Privatni telefon:', {'label_attr': {'class': 'form-label'}}) }}
                                                        {{ form_widget(form.telefon2, {attr: { class: 'form-control' }}) }}
                                                        <span class="form-text">Format: 0661111222</span>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                        <div class="text-end">
                                            <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

