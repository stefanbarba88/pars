{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUser' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Left sidebar component -->
                        {{ render(controller('App\\Controller\\WidgetController::employeeProfilSidebar', { user: user } )) }}
                        <!-- /left sidebar component -->


                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">

                                <div class="card">
                                    <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Dodata dokumenta</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-4">
                                            <div class="row">
                                                {% if pdfs is empty %}
                                                    <div class="d-flex align-items-start mb-3">
                                                        <div class="list-group-item">
                                                            <div class="fw-semibold text-truncate">Nema dokumenata</div>
                                                        </div>
                                                    </div>
                                                {% else %}
                                                    {% for pdf in pdfs %}
                                                        <div class="col-xl-4 col-sm-6">
                                                            <div class="card card-body">
                                                                <div class="d-flex list-group-item align-items-start">
                                                                    <div class="me-3">
                                                                        <a href="{{ asset(pdf.path) }}" download><i class="ph-file-pdf text-danger ph-2x mt-1"></i></a>
                                                                    </div>
                                                                    <div class="flex-fill overflow-hidden">
                                                                        <div class="fw-semibold text-truncate">{{ pdf.title }}</div>
                                                                        <div class="flex-fill">
                                                                            Kreiran: {{ pdf.created | date("d.m.Y H:i:s")}}
                                                                        </div>
                                                                    </div>
                                                                    <div class="ms-3">
                                                                        <a href="{{ asset(pdf.path) }}" download class="text-body">
                                                                            <i class="ph-download-simple"></i>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->
        {# {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }} #}

    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

{% block includeJavascript %}
    {{ parent() }}

