{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUser' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Left sidebar component -->
                        {{ render(controller('App\\Controller\\WidgetController::employeeProfilSidebar', { user: user } )) }}
                        <!-- /left sidebar component -->

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">


                                <div class="card">
                                    <div class="card-header d-lg-flex py-lg-0">
                                        <h5 class="py-lg-3 mb-0">Lista rezervacija</h5>
                                        {% if app.user == user%}
                                            <div class="mt-1 my-lg-auto ms-lg-auto">
                                                <a href="{{ path('app_tool_reservation_user_form') }}" class="btn btn-primary"><i class="ph-plus me-2"></i> Zadu탑ite</a>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive ">
                                            <table class="table table-bordered table-hover table-responsive">
                                                <thead>
                                                <tr>
                                                    <th {% if pagination.isSorted('[u.id]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, '# ID ', 'u.id', {'alias': 'u'}) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'u.id' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'u.id' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th>Naziv</th>
                                                    <th  {% if pagination.isSorted('[u.created]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Zadu탑en ', 'u.created', {'alias': 'u'}) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'u.created' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'u.created' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th  {% if pagination.isSorted('[u.finished]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Razdu탑en ', 'u.finished', {'alias': 'u'}) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'u.finished' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'u.finished' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th class="text-center text-muted" style="width: 30px;"><i class="ph-check"></i></th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for reservation in pagination %}
                                                    <tr>
                                                        <td>{{ reservation.id }}</td>
                                                        <td>
                                                            {{ reservation.tool.title }}
                                                        </td>
                                                        <td>
                                                            <div class="d-inline-flex align-items-center">
                                                                <i class="ph-calendar me-2"></i>
                                                                {{ reservation.created | date("d.m.Y")}}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            {% if reservation.finished is not null %}
                                                                <div class="d-inline-flex align-items-center">
                                                                    <i class="ph-calendar me-2"></i>
                                                                    {{ reservation.finished | date("d.m.Y")}}
                                                                </div>
                                                            {% endif %}
                                                        </td>
                                                        <td class="text-center">
                                                            <div class="dropdown">
                                                                <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                                    <i class="ph-gear"></i>
                                                                </a>
                                                                <div class="dropdown-menu dropdown-menu-end">
                                                                    <a href="{{ path('app_tool_employee_reservation_view', { id: reservation.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                                    {% if app.user == user%}
                                                                        {% if reservation.finished is null %}
                                                                            <a href="{{ path('app_tool_employee_reservation_stop', { id: reservation.id}) }}" class="dropdown-item"><i class="ph-wrench me-2"></i> Razdu탑ite</a>
                                                                        {% endif %}
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="card-footer">
                                        <div class="navigation float-end">
                                            {{ knp_pagination_render(pagination) }}
                                        </div>
                                    </div>
                                </div>
                                <!-- State saving -->

                                <!-- /state saving -->


                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->
                    </div>
                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->
        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}

    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

