{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUser' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>

                    <div class="page-header-content d-lg-flex border-top">
                        <div class="d-flex">
                            <div class="breadcrumb py-2">
                                <a href="{{ path('app_home') }}" class="breadcrumb-item"><i class="ph-house"></i></a>
                                {% if not is_granted('ROLE_EMPLOYEE') %}
                                    <a href="{{ path('app_employees') }}" class="breadcrumb-item">Zaposleni</a>
                                {% endif %}
                                <span class="breadcrumb-item">{{ user.getFullName() }}</span>
                                <span class="breadcrumb-item active">Profil</span>
                            </div>

                            <a href="#breadcrumb_elements" class="btn btn-light align-self-center collapsed d-lg-none border-transparent rounded-pill p-0 ms-auto" data-bs-toggle="collapse">
                                <i class="ph-caret-down collapsible-indicator ph-sm m-1"></i>
                            </a>
                        </div>

                        {{ render(controller('App\\Controller\\WidgetController::support' )) }}
                    </div>

                    {{ render(controller('App\\Controller\\WidgetController::employeeProfilNavigation', { user: user } )) }}

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                                    <!-- Inner container -->
                                    <div class="d-lg-flex align-items-lg-start">

                                        <!-- Left sidebar component -->
                                        {{ render(controller('App\\Controller\\WidgetController::employeeProfilSidebar', { user: user } )) }}
                                        <!-- /left sidebar component -->

                                        <!-- Right content -->
                                        <div class="tab-content flex-fill">
                                            <div class="tab-pane fade active show">
                                                <div class="card">
                                                    <div class="card-header">

                                                        <h5 class="mb-0">Lični i kontakt podaci <a href="{{ path('app_user_edit_info_form', {id: user.id, type : 1}) }}"><i class="ph-note-pencil"></i></a></h5>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="row p-2">
                                                            <div class="col-4">Ime i prezime:</div>
                                                            <div class="col-8">{{ user.fullName() }}</div>
                                                        </div>
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4">Datum rođenja:</div>
                                                            <div class="col-8">{{ user.datumRodjenja | date("d.m.Y")}}</div>
                                                        </div>
                                                        <div class="row p-2">
                                                            <div class="col-4">Pol:</div>
                                                            <div class="col-8">{{ user.getPolData()}}</div>
                                                        </div>
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4" >Grad:</div>
                                                            <div class="col-8">{{ user.grad.getFormTitle() }}</div>
                                                        </div>
                                                        <div class="row p-2">
                                                            <div class="col-4">Adresa:</div>
                                                            <div class="col-8">{{ user.adresa }}</div>
                                                        </div>
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4">Službeni telefon:</div>
                                                            <div class="col-8">{{ user.telefon1 }}</div>
                                                        </div>
                                                        <div class="row p-2">
                                                            <div class="col-4">Privatni telefon:</div>
                                                            <div class="col-8">{{ user.telefon2 | default('/') }}</div>
                                                        </div>
                                                        <div class="row p-2">
                                                            <div class="col-4">Vozačka dozvola:</div>
                                                            <div class="col-8">
                                                                {% if user.vozacki == constant('App\\Classes\\Data\\VozackiData::NOT')%}
                                                                    Nema vozačku dozvolu
                                                                {% endif %}
                                                                {% if user.vozacki == constant('App\\Classes\\Data\\VozackiData::INACTIVE')%}
                                                                    Neaktivan vozač
                                                                {% endif %}
                                                                {% if user.vozacki == constant('App\\Classes\\Data\\VozackiData::ACTIVE')%}
                                                                    Aktivan vozač
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4">Lekarski pregled:</div>
                                                            <div class="col-8">
                                                                {% if user.lekarski %}
                                                                    Ima lekarski pregled
                                                                {% else %}
                                                                    Nema lekarski pregled
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        <div class="row p-2">
                                                            <div class="col-4">Prva pomoć:</div>
                                                            <div class="col-8">
                                                                {% if user.prvaPomoc %}
                                                                    Ima prvu pomoć
                                                                {% else %}
                                                                    Nema prvu pomoć
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4">Slava:</div>
                                                            <div class="col-8">{{ user.slava | default('/') }}</div>
                                                        </div>
                                                        <div class="row p-2">
                                                            <div class="col-4">Zaduženi uređaji:</div>
                                                            <div class="col-8">
                                                                {% if user.mobile %}
                                                                    <i class="ph-device-mobile"></i>
                                                                {% endif %}
                                                                {% if user.laptop %}
                                                                    <i class="ph-laptop"></i>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h5 class="mb-0">Login podaci <a href="{{ path('app_user_edit_account_form', {id: user.id, type : 1}) }}"><i class="ph-note-pencil"></i></a></h5>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="row p-2">
                                                            <div class="col-4">Email:</div>
                                                            <div class="col-8">{{ user.email }}</div>
                                                        </div>
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4">Vrsta zaposlenja:</div>
                                                            <div class="col-8">{{ user.vrstaZaposlenjaData }}</div>
                                                        </div>
                                                        <div class="row p-2">
                                                            <div class="col-4">Tip korisnika:</div>
                                                            <div class="col-8">{{ user.badgeByUserType | raw }}</div>
                                                        </div>
                                                        <div class="row p-2 bg-light">
                                                            <div class="col-4">Pozicija:</div>
                                                            <div class="col-8">{{ user.pozicija.title | default('/')  }}</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                {% if user.editBy is not null %}
                                                    <div class="card">
                                                        <div class="card-header">
                                                            <h5 class="mb-0">Poslednja verzija</h5>
                                                        </div>

                                                        <div class="card-body">
                                                            <div class="row p-2">
                                                                <div class="col-4">Izmenio:</div>
                                                                <div class="col-8">{{ user.editBy.getFullName() | default('/') }}</div>
                                                            </div>
                                                            <div class="row p-2 bg-light">
                                                                <div class="col-4">Vreme:</div>
                                                                <div class="col-8">{{ user.updated | date("d.m.Y") }} u {{ user.updated | date("H:i:s") }}</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <!-- /right content -->

                                    </div>
                                    <!-- /inner container -->

                                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->
        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}

    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

