                                                                {{ task.project.title }}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {{ task.category.title }}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {% for user in task.assignedUsers %}
                                                                    {{ user.fullName }}<br>
                                                                {% endfor %}
                                                            </div>
                                                        </td>


                                                        <td>
                                                            {{ task.description }}
                                                        </td>
                                                            <td>
                                                                <div class="d-inline-flex align-items-center">
                                                                    <i class="ph-clock me-2"></i>
                                                                    {{ task.vreme | date("H:i")}}
                                                                </div>
                                                            </td>

                                                    </tr>
                                                        {% endif %}
                                                    {% endfor %}
                                                </tbody>
                                            </table>
