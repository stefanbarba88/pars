{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Plan rada
                            </h4>
                        </div>
                    </div>
                </div>



                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Plan rada za {{ plan.datumKreiranja | date("d.m.Y") }}
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive card">
                                            <table class="table table-bordered table-hover table-responsive table-sm">
                                                <thead>
                                                <tr class="bg-light text-primary">
                                                    <th colspan="11">Zadaci</th>
                                                </tr>
                                                <tr class="bg-light text-primary">
                                                    <th>Projekat</th>
                                                    <th>Kategorija</th>
                                                    <th>Zaposleni</th>
                                                    <th>Primarni dnevnik</th>
                                                    <th>Aktivnosti</th>
                                                    <th>Oprema</th>
                                                    <th>Vozilo</th>
                                                    <th>Vozaƒç</th>
                                                    <th>Vreme</th>
                                                    <th style="width: 18%">Napomena</th>
                                                    <th style="width: 2%">Naplativ</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                    {% for task in plan.pripremaZadataks %}
                                                        {% if task.taskType == 1 %}
                                                        <tr {% if task.status == 2%}class="bg-dark bg-opacity-25"{% endif %}>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {{ task.project.title }}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {{ task.category.title }}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {% for user in task.assignedUsers %}
                                                                    {{ user.fullName }}<br>
                                                                {% endfor %}
                                                            </div>
                                                        </td>
                                                            <td>
                                                                <div class="fw-semibold">
                                                                    {% for user in task.assignedUsers %}
                                                                        {% if task.priorityUserLog == user.id %}
                                                                            {{ user.fullName }}
                                                                        {% endif %}
                                                                    {% endfor %}
                                                                </div>
                                                            </td>
                                                        <td>
                                                            {% if task.activity is not empty %}
                                                                {% for akt in task.activity %}
                                                                    {{ akt.title }}<br>
                                                                {% endfor %}
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {% if task.oprema is not empty %}
                                                                    {% for opr in task.oprema %}
                                                                        {{ opr.title }}<br>
                                                                    {% endfor %}
                                                                {% endif %}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {% if task.car is not null %}{{ getCarById(task.car) }}{% endif %}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {% if task.driver is not null %}{{ getUserById(task.driver) }}{% endif %}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="d-inline-flex align-items-center">
                                                                <i class="ph-clock me-2"></i>
                                                                {{ task.vreme | date("H:i")}}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            {{ task.description }}
                                                        </td>
                                                        <td>
                                                            {% if task.isFree %}
                                                                <span class="badge bg-yellow text-primary">Nenaplativ</span>
                                                            {% else %}
                                                                <span class="badge bg-primary text-white">Naplativ</span>
                                                            {% endif %}
                                                        </td>
                                                    </tr>
                                                        {% endif %}
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="table-responsive card">
                                            <table class="table table-bordered table-hover table-responsive table-sm">
                                                <thead>
                                                <tr class="bg-light text-primary">
                                                    <th colspan="5">Interni zadaci</th>
                                                </tr>
                                                <tr class="bg-light text-primary">
                                                    <th>Projekat</th>
                                                    <th>Kategorija</th>
                                                    <th>Zaposleni</th>
                                                    <th style="width: 18%">Zadatak</th>
                                                    <th>Vreme</th>
                                                </tr>
                                                </thead>
                                                <tbody>
