{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Neradni dani
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">{{ holiday.title }} <a href="{{ path('app_holiday_form', {id: holiday.id}) }}"><i class="ph-note-pencil"></i></a></h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row p-2">
                                            <div class="col-4">Naziv:</div>
                                            <div class="col-8">{{ holiday.title() }}</div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Datum:</div>
                                            <div class="col-8">{{ holiday.datum | date("d.m.Y")}}</div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Tip:</div>
                                            <div class="col-8">
                                                {% if holiday.type == constant('App\\Classes\\Data\\TipNeradnihDanaData::PRAZNIK') %}
                                                    <span class="badge bg-secondary text-primary">Praznik</span>
                                                {% endif %}
                                                {% if holiday.type == constant('App\\Classes\\Data\\TipNeradnihDanaData::KOLEKTIVNI_ODMOR') %}
                                                    <span class="badge bg-primary text-white">Kolektivni odmor</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Status:</div>
                                            <div class="col-8">
                                                {% if holiday.isSuspended %}
                                                    <span class="badge bg-yellow text-primary">Deaktiviran</span>
                                                {% else %}
                                                    <span class="badge bg-primary text-white">Aktivan</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

