{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}
        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <div class="content">

                    {% if settings.isPlan %}
                        {% if "now"|date("H:i") < settings.radnoVreme | date ("H:i") %}
                            {% if planRada is not null %}
                                <div class="row">
                                    <div class="col-xl-12">
                                        <!-- Marketing campaigns -->
                                        <div class="card">
                                            <div class="card-header d-flex align-items-center collapsed" data-bs-toggle="collapse" data-bs-target="#collapsed_plan5" aria-expanded="false" type="button">
                                                <h5 class="mb-0">Plan rada za {{ planRada.datumKreiranja | date('d.m.Y.') }}</h5>
                                                <div class="my-auto ms-auto">
                                                    <span class="badge bg-yellow align-self-center rounded-pill ms-auto">{{ planRada.pripremaZadataks.count | default(0) }}</span>
                                                    <i class="ph-caret-down collapsible-indicator"></i>
                                                </div>
                                        {#                                        {% if tomorrowTimetableId != 0 %}#}
                                        {#                                            <div class="my-auto ms-auto">#}
                                        {#                                                <a href="{{ path('app_quick_task_edit', { id: tomorrowTimetableId}) }}" class="btn btn-primary"><i class="ph-clipboard me-2"></i> Plan rada </a>#}
                                        {#                                            </div>#}
                                        {#                                        {% endif %}#}
                                            </div>
                                            <div id="collapsed_plan5" class="table-responsive accordion-collapse collapse" data-bs-parent="#accordion_collapsed">
                                                <table class="table table-bordered table-sm">
                                                    <thead class="bg-light">
                                                    <tr class="table-light">
                                                        <th colspan="5">Raspored</th>
                                                    </tr>
                                                    <tr>
                                                        <th>Projekat</th>
                                                        <th>Kategorija</th>
                                                        <th>Zaposleni</th>
                                                        <th>Vreme</th>
                                                        <th>Napomena</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for task in planRada.pripremaZadataks %}
                                                        <tr>
                                                            <td class="bg-light">
                                                                <div class="fw-semibold">
                                                                    {{ task.project.title }}
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="fw-semibold">
                                                                    {{ task.category.title }}
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="fw-semibold">
                                                                    {% for user in task.assignedUsers %}
                                                                        {{ user.fullName }}<br>
                                                                    {% endfor %}
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="d-inline-flex align-items-center">
                                                                    <i class="ph-clock me-2"></i>
                                                                    {{ task.vreme | date("H:i")}}
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="text-body">
                                                                    {{ task.description }}
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <!-- /marketing campaigns -->
                                    </div>
                                </div>
                            {% endif %}
                        {% else %}
                            {% if planRadaSutra is not null %}
                                <div class="row">
                                    <div class="col-xl-12">
                                        <!-- Marketing campaigns -->
                                        <div class="card">
                                            <div class="card-header d-flex align-items-center collapsed" data-bs-toggle="collapse" data-bs-target="#collapsed_plan5" aria-expanded="false" type="button">
                                                <h5 class="mb-0">Plan rada za {{ planRadaSutra.datumKreiranja | date('d.m.Y.') }} {% if planRadaSutra.status != 4 %}<a href="{{ path('app_quick_task_edit', { id: planRadaSutra.id}) }}"><i class="ph-note-pencil"></i></a>{% endif %}</h5>
                                                <div class="my-auto ms-auto">
                                                    <span class="badge bg-yellow align-self-center rounded-pill ms-auto">{{ planRadaSutra.pripremaZadataks.count | default(0) }}</span>
                                                    <i class="ph-caret-down collapsible-indicator"></i>
                                                </div>
                                            </div>
                                            <div id="collapsed_plan5" class="table-responsive accordion-collapse collapse" data-bs-parent="#accordion_collapsed">
                                                <table class="table table-bordered table-sm">
                                                    <thead class="bg-light">
                                                    <tr class="table-light">
                                                        <th colspan="5">Raspored</th>
                                                    </tr>
                                                    <tr>
                                                        <th>Projekat</th>
                                                        <th>Kategorija</th>
                                                        <th>Zaposleni</th>
                                                        <th>Vreme</th>
                                                        <th>Napomena</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for task in planRadaSutra.pripremaZadataks %}
                                                        <tr>
                                                            <td class="bg-light">
                                                                <div class="fw-semibold">
                                                                    {{ task.project.title }}
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="fw-semibold">
                                                                    {{ task.category.title }}
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="fw-semibold">
