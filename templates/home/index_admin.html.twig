                    {% if settings.isPlanToday %}
                        <div class="text-center text-muted content-divider mb-3">
                            <span class="p-2">Plan rada za danas</span>
                        </div>
                        <div class="row">
                            <div class="col-xl-12">
                            <!-- Marketing campaigns -->
                            <div class="card">
                                <div class="card-header d-flex align-items-center collapsed" data-bs-toggle="collapse" data-bs-target="#collapsed_plan1" aria-expanded="false" type="button">
                                    <h5 class="mb-0">Zadaci kreirani za {{ danas | date('d.m.Y.') }}</h5>
                                    <div class="my-auto ms-auto">
                                        <span class="badge bg-yellow align-self-center rounded-pill ms-auto">{{ timetable | length | default(0) }}</span>
                                        <i class="ph-caret-down collapsible-indicator"></i>
                                    </div>
                                </div>
                                <div id="collapsed_plan1" class="table-responsive accordion-collapse collapse" data-bs-parent="#accordion_collapsed">
                                    <table class="table table-hover table-bordered table-sm">
                                        <thead class="bg-light">
                                        <tr class="table-light">
                                            {% if tool and car %}
                                                <th colspan="7">Raspored</th>
                                            {% elseif tool or car %}
                                                <th colspan="6">Raspored</th>
                                            {% else %}
                                                <th colspan="5">Raspored</th>
                                            {% endif %}
                                            <th>
                                                <a href="{{ path('app_task_form') }}" class="btn btn-primary"><i class="ph-plus me-2"></i> Dodajte</a>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th>Projekat</th>
                                            <th>Zaposleni</th>
                                            <th>Aktivnosti</th>
                                            {% if tool %}
                                                <th>Oprema</th>
                                            {% endif %}
                                            {% if car %}
                                                <th>Vozilo</th>
                                            {% endif %}
                                            <th>Vreme</th>
                                            <th>Napomena</th>
                                            <th class="text-center" style="width: 20px;">
                                                <i class="ph-dots-three"></i>
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% if timetable is not empty %}
                                                <tr class="table-light">
                                                    {% if tool and car %}
                                                        <td colspan="8" class="fw-semibold">Teren</td>
                                                    {% elseif tool or car %}
                                                        <td colspan="7" class="fw-semibold">Teren</td>
                                                    {% else %}
                                                        <td colspan="6" class="fw-semibold">Teren</td>
                                                    {% endif %}
                                                </tr>
                                            {% for task in timetable %}
                                                {% if task.task.project is not null %}
                                                    {% if task.task.category.id == constant('App\\Classes\\AppConfig::TEREN_CAT_ID') %}
                                                        {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') %}
                                                            <tr>
                                                        {% endif %}
                                                        {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                            <tr>
                                                        {% endif %}
                                                        {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAVRSENO') %}
                                                            <tr class="bg-secondary">
                                                        {% endif %}
                                                        <td class="bg-light">
                                                            <div class="fw-semibold">
                                                                <a href="{{ path('app_project_tasks_view', { id: task.task.project.id }) }}">{{ task.task.project.title }}</a>
                                                            </div>
                                                        </td>
                                                        <td>
                                                        <div class="fw-semibold">
                                                            {% for user in task.task.assignedUsers %}
                                                                {% for userId, userStatus in task.logStatus %}
                                                                    {% if userId == user.id and userStatus.otvoren == 1 %}
                                                                        <div class="btn-group">
                                                                            <a href="{{ path('app_employee_activity_view', { id: user.id }) }}" class="d-inline-flex align-items-center ">
                                                                                {{ user.fullName }}
                                                                                <div class="live p-1 mx-2"></div>
                                                                            </a>
                                                                        </div>
