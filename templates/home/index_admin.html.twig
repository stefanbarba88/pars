                                </div>
                                <!-- /basic sparklines -->

                            </div>
                            <div class="col-sm-6 col-xl-3">
                                <!-- Basic sparklines -->
                                <div class="card">
                                    <div class="card-body bg-secondary">
                                        <div class="d-flex align-items-center">
                                            <i class="ph-list-bullets ph-2x text-primary me-3"></i>

                                            <div class="flex-fill text-end">
                                                <h4 class="mb-0">{{ noTasks }}({{ verifyNo | default(0) }})</h4>
