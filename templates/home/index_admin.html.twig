                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white border-0">
                                <h6 class="modal-title">Detalji zamene</h6>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row p-2">
                                            <div class="col-4">Projekat:</div>
                                            <div class="col-8">{{ task['projekat'].title }}</div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Geodeta:</div>
                                            <div class="col-8">
                                                {% if task['geo'] is not null %}
                                                    {{ task['geo'].getNameWithFirstLetter }}
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Vreme:</div>
                                            <div class="col-8">
                                                {% if task.vreme is not null %}
                                                    {{ task.vreme}}
                                                {% else %}
                                                    Vreme nije zadato
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Napomena:</div>
                                            <div class="col-8">{{ task.napomena }}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="ph-x me-2"></i> Zatvorite</button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}

    {% if timetable is not empty %}
        {% for task in timetable %}
                <div id="modal_details_task{{ loop.index }}" class="modal fade" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white border-0">
                                <h6 class="modal-title">Detalji zadatka</h6>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row p-2">
                                            <div class="col-4">Projekat:</div>
                                            <div class="col-8">{{ task.task.title }}</div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Geodete:</div>
                                            <div class="col-8">
                                                {% for user in task.task.assignedUsers %}
                                                    {{ user.getNameWithFirstLetter }} <br>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Aktivnosti:</div>
                                            <div class="col-8">
                                                {% for akt in task.task.activity %}
                                                    {{ akt.title }} <br>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Oprema:</div>
                                            <div class="col-8">
                                                {% for opt in task.task.oprema %}
                                                    {{ opt.title }} <br>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Vozilo:</div>
                                            <div class="col-8">
                                                {% if task.car is not empty %}
                                                    {{ task.car[0].plate }}
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Vreme:</div>
                                            <div class="col-8">
                                                {% if task.task.time is not null %}
                                                    {% if task.task.time|date('H:i') != '00:00' %}
                                                        {{ task.task.time|date('H:i') }}h
                                                    {% else %}
                                                        Vreme nije zadato
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Napomena:</div>
                                            <div class="col-8">{{ task.task.description }}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="ph-x me-2"></i> Zatvorite</button>
                            </div>
                        </div>
                    </div>
                </div>
        {% endfor %}
    {% endif %}


    {% if dostupnosti.nedostupni is not empty %}
        <div id="modal_nedostupni" class="modal fade" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white border-0">
                        <h6 class="modal-title">Odsutni zaposleni</h6>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                {% for user in dostupnosti.nedostupni %}
                                    {% set dost = getDostupnostByUser(user) %}
                                    <div class="row p-2">
                                        <div class="col-6"><a href="{{ path('app_employee_calendar_view', {id: user.id}) }}">{{ user.fullName }}</a></div>
                                        <div class="col-6">
                                            {% if dost == 0 %}
                                               Izašao
                                            {% elseif dost == 1 %}
                                                Slobodan dan
                                            {% elseif dost == 2 %}
                                               Odmor
                                            {% elseif dost == 3 %}
                                               Bolovanje
                                            {% elseif dost == 4 %}
                                                Slava
                                            {% else %}
                                                Ostalo
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="ph-x me-2"></i> Zatvorite</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    {% if dostupnosti.vanZadatka is not empty %}
        <div id="modal_vanzadatka" class="modal fade" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white border-0">
                        <h6 class="modal-title">Zaposleni bez zadatka</h6>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                {% for user in dostupnosti.vanZadatka %}
                                <div class="row p-2">
                                    <div class="col-12">{{ user.fullName }}</div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="ph-x me-2"></i> Zatvorite</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    {% if dostupnosti.kancelarija is not empty %}
        <div id="modal_kancelarija" class="modal fade" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white border-0">
                        <h6 class="modal-title">Zaposleni u kancelariji</h6>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card">
                            <div class="card-body">
                                {% for user in dostupnosti.kancelarija %}
                                <div class="row p-2">
                                    <div class="col-12">{{ user.fullName }}</div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="ph-x me-2"></i> Zatvorite</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock content %}

