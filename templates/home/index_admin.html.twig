                                    <i class="ph-house bg-secondary  text-primary lh-1 rounded-pill p-2 ph-2x"></i>
                                    <h5 class="mb-0">{{ dostupnosti.noKuca }}</h5>
                                    <div class="fw-semibold">
                                        Rad od kuće
                                    </div>
                                </button>
                            </div>
                        </div>
                    {% endif %}

