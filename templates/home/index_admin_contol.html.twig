                <div class="content">
                    {% if app.user.userType != constant('App\\Classes\\Data\\UserRolesData::ROLE_ADMIN') and app.user.userType != constant('App\\Classes\\Data\\UserRolesData::ROLE_SUPER_ADMIN') %}
                    <div class="row">
                        <div class="col-xl-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Lista zadataka</h5>
                                </div>

                                <div class="card-body">
                                    <p class="mb-3">Lista zadataka zadatih od strane administratora</p>

                                    <ul class="list list-unstyled mb-0">
                                        {% if checklist is not empty %}
                                            {% for task in checklist | slice(0,4) %}
                                                {% if task.status == 1  %}
                                                    <li>
                                                        <a href="{{ path('app_checklist_finish', {id: task.id}) }}"><i class="ph-x-circle text-danger me-2"></i></a>
                                                        {{ task.task }}
                                                    </li>
                                                {% elseif task.status == 2 %}
                                                    <li>
                                                        <i class="ph-check-circle text-success me-2"></i>
                                                        {{ task.task }}
                                                    </li>
                                                {% else %}
                                                    <li>
                                                        <del>{{ task.task }}</del>
                                                    </li>
                                                {% endif %}
                                            {% endfor %}
                                        {% else %}
                                            Nemate zadatih zadataka
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    <div class="row d-none d-sm-block">
                        <div class="col-xl-12">
                            <!-- Marketing campaigns -->
                            <div class="card">

                                <div class="card-header d-lg-flex py-lg-0">
                                    <h5 class="py-lg-3 mb-0">Raspored za {{ danas | date('d.m.Y') }}</h5>
                                    <div class="mt-1 my-lg-auto ms-lg-auto">
{#                                        <a href="{{ path('app_task_form') }}" class="btn btn-primary"><i class="ph-plus me-2"></i> Dodajte</a>#}
                                        <a href="{{ path('app_quick_tasks') }}" class="btn btn-light">
                                            <i class="ph-clock-afternoon me-2"></i>
                                            Brzi zadaci
                                        </a>
                                    </div>
                                </div>
                                <div class="table-responsive ">
                                    <table class="table table-hover table-bordered table-sm">
                                        <thead>
                                        <tr class="table-light">
                                            <th colspan="7">PARS raspored</th>
                                        </tr>
                                        <tr>
                                            <th>Projekat</th>
                                            <th>Geodete</th>
                                            <th>Aktivnosti</th>
                                            <th>Oprema</th>
                                            <th>Vozilo</th>
                                            <th>Vreme</th>
                                            <th>Napomena</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% if timetable is not empty %}
                                            {% for task in timetable %}
                                                {% if task['projekat'] is not null %}
                                                    <tr>
                                                        <td>
                                                            <div class="text-body">
                                                                {{ task['projekat'].title }}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="text-body">
                                                                {% if task['geo1'] is not null %}
                                                                    {{ task['geo1'].fullName }} <br>
                                                                {% endif %}
                                                                {% if task['geo2'] is not null %}
                                                                    {{ task['geo2'].fullName }} <br>
                                                                {% endif %}
                                                                {% if task['geo3'] is not null %}
                                                                    {{ task['geo3'].fullName }}
                                                                {% endif %}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="text-body">
                                                                {% for akt in task['aktivnosti'] %}
                                                                    {{ akt.title }} <br>
                                                                {% endfor %}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="text-body">
                                                                {{ task.oprema }}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            {% if task.vozilo is not null %}
                                                                <div class="d-inline-flex align-items-center">
                                                                    <i class="ph-car me-2"></i>
                                                                    {{ task.vozilo.getCarName }}
                                                                </div>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if task.vreme is not null %}
                                                                <div class="d-inline-flex align-items-center">
                                                                    <i class="ph-calendar me-2"></i>
                                                                    {{ task.vreme}}
                                                                </div>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            <div class="text-body">
                                                                {{ task['napomena'] }}
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /marketing campaigns -->
                        </div>
