                                            <th>Vozilo</th>
                                            <th>Vreme</th>
                                            <th>Napomena</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% if tomorrowTimetable is not empty %}
                                            {% for task in tomorrowTimetable %}
                                                {% if task['projekat'] is not null %}
                                                    <tr>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {{ task['projekat'].title }}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {% if task['geo1'] is not null %}
                                                                    {{ task['geo1'].fullName }} <br>
