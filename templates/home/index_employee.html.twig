{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}
        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">


                <!-- Content area -->
                <div class="content">
                    {% if  countTasksUnclosedByUser > 0%}
                        <div class="alert alert-danger alert-dismissible fade show">
                            <span class="fw-semibold">Važno!</span> Imate <a href="{{ path('app_tasks_unclosed_logs') }}" class="alert-link">nezatvoren dnevnik</a> u predhodnih 7 dana. Morate prvo njega zatvoriti da bi pokrenuli današnje.
                        </div>
                    {% endif %}

{#                    <div class="alert alert-secondary alert-dismissible fade show">#}
{#                        <span class="fw-semibold">Uputstvo je ažurirano 13.09.2023.</span> Preuzmite i pogledajte šta je <a href="{{ asset('/assets/manual/manual.pdf') }}" class="alert-link" download>novo</a> dodato.#}
{#                    </div>#}

                    {% if checklistActive is not empty %}
                        <div class="row ">
                            <div class="col-xl-12">
                                <div class="card">
                                    <div class="card-header d-flex align-items-center" data-bs-toggle="collapse" data-bs-target="#collapsed_item1" aria-expanded="false" type="button">
                                        <h5 class="mb-0">Interni zadaci</h5>
                                        <div class="d-inline-flex ms-auto">
                                            <span class="badge bg-yellow text-primary rounded-pill fw-semibold">{{ countChecklistActive }}</span>
                                        </div>
                                    </div>

                                    <div id="collapsed_item1" class="accordion-collapse collapse" data-bs-parent="#accordion_collapsed" style="">
                                        <div class="table-responsive card">
                                            <table class="table table-hover table-bordered table-sm">
                                                <tbody>
                                                <tr class="table-light fw-semibold">
                                                    <td colspan="4">Aktivni</td>
                                                </tr>
                                                {% for task in checklistActive | slice (0,5) %}
                                                    <tr>
                                                        <td>
                                                            <div class="d-inline-flex align-items-center">
                                                                <i class="ph-calendar me-2"></i>
                                                                {{ task.created | date("d.m.Y")}}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <a href="{{ path('app_checklist_view', {id: task.id}) }}" class="text-body">
                                                                {{ task.task | slice(0, 100) ~ (task.task | length > 100 ? '...' : '') }}
                                                            </a>
                                                        </td>
                                                        <td class="text-center">
                                                            {% if task.priority == 1 %}
                                                                <span class="badge bg-danger bg-opacity-20 text-danger">Veoma visok</span>
                                                            {% elseif task.priority == 2 %}
                                                                <span class="badge bg-warning bg-opacity-20 text-warning">Visok</span>
                                                            {% elseif task.priority == 4 %}
                                                                <span class="badge bg-info bg-opacity-20 text-info">Nizak</span>
                                                            {% elseif task.priority == 5 %}
                                                                <span class="badge bg-secondary bg-opacity-20 text-secondary">Veoma nizak</span>
                                                            {% else %}
                                                                <span class="badge bg-primary bg-opacity-50 text-white">Normalan</span>
                                                            {% endif %}
                                                        </td>
                                                        <td class="text-center">
                                                            {% if task.status == 0 %}
                                                                <a href="{{ path('app_checklist_finish', {id: task.id}) }}" class="btn btn-primary">
                                                                    <i class="ph-check me-2"></i>Završite
                                                                </a>
                                                            {% endif %}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                <tr class="table-light fw-semibold">
                                                    <td colspan="3"></td>
                                                    <td class="text-center">
                                                        <div class="d-inline-flex mb-0">
                                                            <a href="{{ path('app_checklist_to_do') }}" class="btn-sm btn-primary"> Vidi sve</a>
                                                        </div>
                                                    </td>
                                                </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <div class="row ">
                        <div class="col-xl-12">

                            <!-- Marketing campaigns -->
                            <div class="card">
                            <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">{{ app.user.fullName }}, {{ danas | date('d.m.Y') }}</h5>
                                    <div class="my-auto ms-auto">
                                        <a href="{{ path('app_car_tools_details_view') }}" class="btn btn-primary"><i class="ph-gear me-2"></i> Zaduživanje</a>
                                    </div>
                                </div>
                                <div class="table-responsive card">
                                    <table class="table table-hover table-bordered table-sm">
                                        <thead class="bg-light">
                                        <tr class="table-light">
                                            <th colspan="4">Lista zadataka za danas</th>
                                            <th class="text-center">
                                                <span class="badge bg-yellow rounded-pill">{{ countLogs }}</span>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th>Vreme</th>
                                            <th>Projekat</th>
                                            <th>Kolege</th>
                                            <th>Vozilo</th>
                                            <th class="text-center" style="width: 20px;">
                                                <i class="ph-dots-three"></i>
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        {% if logs is not empty %}
                                            {% for log in logs  %}
                                                {% if log[3] == 1 %}
                                                    <tr>
                                                {% endif %}
                                                {% if log[3] == 0 %}
                                                    <tr>
                                                {% endif %}
                                                {% if log[3] == 2 %}
                                                    <tr class="bg-secondary">
                                                {% endif %}
                                                    <td>
                                                        {% if log[0].task.time is not null %}
                                                            <div class="fw-semibold">
                                                                {% if log[0].task.time|date('H:i') != '00:00' %}
                                                                    {{ log[0].task.time|date('H:i') }}
                                                                {% else %}
                                                                    Vreme nije zadato
                                                                {% endif %}
                                                            </div>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        <div class="fw-semibold">
                                                            <div class="btn-group">
                                                                <a href="#" class="d-inline-flex align-items-center ">
                                                                    <a href="{{ path('app_project_tasks_view', { id: log[0].task.project.id }) }}">{{ log[0].task.project.title }}</a>
                                                                    {% if log[3] == 0 %}<div class="live p-1 mx-2"></div>{% endif %}
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        {% for user in log[0].task.assignedUsers %}
                                                            <div class="fw-semibold">{{ user.fullName }}</div>
                                                        {% endfor %}
                                                    </td>
                                                    <td>
                                                        {% if log[1] is not empty %}
                                                            <div class="fw-semibold">
                                                                {{ log[1].plate }}
                                                            </div>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        <a href="{{ path('app_task_view_user', { id: log[0].task.id}) }}" class="btn btn-primary"><i class="ph-clipboard me-2"></i> Dnevnik</a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% endif %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /marketing campaigns -->
                        </div>
                    </div>

                    <div class="row ">
                        <div class="col-xl-12">
                            <!-- Marketing campaigns -->
                            <div class="card">

                            <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Raspored za {{ danas | date('d.m.Y') }}</h5>
                                </div>
                                <div class="table-responsive card">
                                    <table class="table table-hover table-bordered table-sm">
                                        <thead class="bg-light">
                                        <tr class="table-light">
                                            <th colspan="6">PARS raspored</th>
                                        </tr>
                                        <tr>
                                            <th>Projekat</th>
                                            <th>Geodete</th>
                                            <th>Oprema</th>
                                            <th>Vozilo</th>
                                            <th>Vreme</th>
                                            <th>Napomena</th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        {% if timetable is not empty %}
                                            {% for task in timetable %}
                                                {% if task.task.project is not null %}
{#                                                    {% for user in task.task.assignedUsers %}#}
{#                                                        {% if app.user.id == user.id %}#}
{#                                                            <tr class="table-active">#}
{#                                                        {% else %}#}
{#                                                            <tr>#}
{#                                                        {% endif %}#}
{#                                                    {% endfor %}#}
