                                            </div>
                                        </div>

                                        <div>
                                            <h6 class="mb-1"><a href="{{ path('app_task_view_user', {id: activeStopwatch.taskLog.task.id}) }}">#{{ activeStopwatch.taskLog.task.id }} - {{ activeStopwatch.taskLog.task.title }}</a></h6>
