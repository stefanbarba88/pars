                                                                {% if task['geo2'] is not null %}
                                                                    {{ task['geo2'].fullName }} <br>
                                                                {% endif %}
                                                                {% if task['geo3'] is not null %}
                                                                    {{ task['geo3'].fullName }}
                                                                {% endif %}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="fw-semibold">
                                                                {% for opr in task['oprema'] %}
                                                                    {{ opr.title }} <br>
                                                                {% endfor %}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            {% if task.vozilo is not null %}
                                                                <div class="fw-semibold">
                                                                    {{ task.vozilo.plate }}
                                                                </div>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if task.vreme is not null %}
                                                                <div class="fw-semibold">
                                                                    {{ task.vreme}}
                                                                </div>
                                                            {% else %}
                                                                <div class="fw-semibold">
                                                                    Vreme nije zadato
                                                                </div>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            <div class="text-body">
                                                                {{ task['napomena'] }}
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /marketing campaigns -->
                        </div>
                    </div>

                </div>
                <!-- /content area -->


                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->
        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
