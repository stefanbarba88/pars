                                            <div class="col-8">
                                                {% if task['geo1'] is not null %}
                                                    {{ task['geo1'].getNameWithFirstLetter }} <br>
                                                {% endif %}
                                                {% if task['geo2'] is not null %}
                                                    {{ task['geo2'].getNameWithFirstLetter }} <br>
                                                {% endif %}
                                                {% if task['geo3'] is not null %}
                                                    {{ task['geo3'].getNameWithFirstLetter }}
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Aktivnosti:</div>
                                            <div class="col-8">
                                                {% for akt in task['aktivnosti'] %}
                                                    {{ akt.title }} <br>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Oprema:</div>
                                            <div class="col-8">

                                                {% for opr in task['oprema'] %}
                                                    {{ opr.title }} <br>
                                                {% endfor %}

                                            </div>
                                        </div>
                                        <div class="row p-2">
                                            <div class="col-4">Vozilo:</div>
