                                                {% else %}
                                                    <tr>
                                                {% endif %}
                                                    <td>
                                                        <div class="fw-semibold">
                                                            {{ task.task.project.title }}
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="fw-semibold">
                                                            {% for user in task.task.assignedUsers %}
                                                                {{ user.fullName }} <br>
                                                            {% endfor %}
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="fw-semibold">
                                                            {% for opt in task.task.oprema %}
                                                                {{ opt.title }} <br>
                                                            {% endfor %}
                                                        </div>
                                                    </td>
                                                    <td>
                                                        {% if task.car is not empty %}
                                                            <div class="fw-semibold">
                                                                {{ task.car[0].plate }}
                                                            </div>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if task.task.time is not null %}
                                                            <div class="fw-semibold">
                                                                {% if task.task.time|date('H:i') != '00:00' %}
                                                                    {{ task.task.time|date('H:i') }}
                                                                {% else %}
                                                                    Vreme nije zadato
                                                                {% endif %}
                                                            </div>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        <div class="text-body">
                                                            {{ task.task.description }}
                                                        </div>
                                                    </td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /marketing campaigns -->
                        </div>
                    </div>

                    <div class="row ">
                        <div class="col-xl-12">
                            <!-- Marketing campaigns -->
                            <div class="card">

                            <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Raspored za {{ sutra | date('d.m.Y') }}</h5>
                                </div>
                                <div class="table-responsive card">
                                    <table class="table table-hover table-bordered table-sm">
                                        <thead class="bg-light">
                                        <tr class="table-light">
                                            <th colspan="6">PARS raspored</th>
                                        </tr>
                                        <tr>
                                            <th>Projekat</th>
                                            <th>Geodete</th>
