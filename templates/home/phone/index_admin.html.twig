                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white border-0">
                            <h6 class="modal-title">Zaposleni trenutno van zadatka</h6>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <div class="card-body">
                                <div class="row row-cols-1 row-cols-md-2 g-2">
                                    {% for user in dostupnosti.vanZadatka %}
                                        <div class="col">
                                            <div class="p-1 border rounded fw-semibold">
                                                {{ user.fullName }}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
                                <i class="ph-x me-2"></i> Zatvorite
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        {% endif %}

        {% if calendar %}
            {% if dostupnosti.nedostupni is not empty %}
                <div id="modal_nedostupni" class="modal fade" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white border-0">
                                <h6 class="modal-title">Odsutni zaposleni</h6>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">

                                <div class="card-body">
                                    <div class="row row-cols-1 row-cols-md-2 g-2">
                                        {% for user in dostupnosti.nedostupni %}
                                            <div class="col">
                                                <div class="p-2 border rounded fw-semibold">
                                                    <div>
                                                        <a href="{{ path('app_employee_calendar_view', {id: user.id}) }}">
                                                            {{ user.fullName }}
                                                        </a>
                                                    </div>
                                                    <div class="text-muted">
                                                        {% set dost = getDostupnostByUser(user) %}
                                                        {% if dost == 0 %}
                                                            Izašao
                                                        {% elseif dost == 1 %}
                                                            Slobodan dan
                                                        {% elseif dost == 2 %}
                                                            Odmor
                                                        {% elseif dost == 3 %}
                                                            Bolovanje
                                                        {% elseif dost == 4 %}
                                                            Slava
                                                        {% else %}
                                                            Ostalo
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>

                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
                                    <i class="ph-x me-2"></i> Zatvorite
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

            {% endif %}
        {% endif %}
    {% endif %}


{% endblock content %}

