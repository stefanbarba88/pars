{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                               Prekovremeni sati
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    <!-- State saving -->
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Lista prekovremenih sati</h5>
                            <div class="my-auto ms-auto">
                                <a href="{{ path('app_overtime_form') }}" class="btn btn-primary"><i class="ph-plus me-2"></i> Dodajte</a>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="accordion" id="accordion_collapsed">
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button fw-semibold collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsed_item_filter" aria-expanded="false">
                                            Filter
                                        </button>
                                    </h2>
                                    <div id="collapsed_item_filter" class="accordion-collapse collapse" data-bs-parent="#accordion_collapsed" style="">
                                        <form method="get" action="{{ path('app_overtimes') }}" class="form-validate-jquery" novalidation="novalidation">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        <div class="mb-3">
                                                            <label class="form-label" for="ime">Zaposleni:</label>
                                                            <select id="report_form_zaposleni" name="zaposleni" class="form-control select">
                                                                <option value="">--Izaberite zaposlenog--</option>
                                                                {% for user in users %}
                                                                    <option value="{{ user.id }}">{{ user.fullName }}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <div class="mb-3">
                                                            <div class="mb-3">
                                                                <label class="form-label" for="prezime">Period:</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i class="ph-calendar"></i></span>
                                                                    <input type="text" class="form-control daterange-locale-sr required" id="report_form_period" name="period">
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <div class="mb-3">
                                                            <label class="form-label required" for="pozicija">Projekat:</label>
                                                            <select id="report_form_project" name="project" class="form-control select">
                                                                <option value="">--Izaberite projekat--</option>
                                                                {% for project in projects %}
                                                                    <option value="{{ project.id }}">{{ project.title }}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="text-end">
                                                    <button type="button" class="btn btn-primary"
                                                            onclick="window.location.href = this.closest('form').action;">
                                                        <i class="ph-arrow-counter-clockwise me-2"></i> Reset
                                                    </button>
                                                    <button type="submit" class="btn btn-primary"><i class="ph-gear-six me-2"></i> Prika≈æite</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="card">
                                <table class="table table-bordered table-hover table-responsive table_morecondensed">
                                    <thead class="bg-light text-primary">
                                    <tr>
                                        <th>Zaposleni</th>
                                        <th>Vreme</th>
                                        <th class="text-center text-muted" style="width: 30px;"><i class="ph-dots-three"></i></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for overtime in pagination %}
                                        <tr>
                                            <td><div class="fw-semibold"><a href="{{ path('app_employee_profile_view', { id: overtime.user.id}) }}">{{ overtime.user.fullName }}</div></td>
                                            <td>{{ "%02d"|format(overtime.hours) }}:{{ "%02d"|format(overtime.minutes) }}</td>
                                            <td class="text-center">
                                                <a type="button" class="text-body collapsed" data-bs-toggle="collapse" data-bs-target="#collapsed_item{{ overtime.id }}" aria-expanded="false"><i class="ph-caret-down collapsible-indicator"></i></a>
                                            </td>

                                    </tr>

                                    <tr id="collapsed_item{{ overtime.id }}" class="accordion-collapse collapse bg-light" data-bs-parent="#accordion_collapsed" style="">
                                        <td>
                                            {% if overtime.task is not null %}
                                                <div class="fw-semibold"><a href="{{ path('app_task_view', { id: overtime.task.id}) }}">{{ overtime.task.title }}</a></div>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="d-inline-flex align-items-center">
                                                <i class="ph-calendar me-2"></i>
                                                {{ overtime.datum | date("d.m.Y")}}
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div class="dropdown">
                                                <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                    <i class="ph-gear"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <a href="{{ path('app_overtime_view', { id: overtime.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>

                                                    {% if overtime.status == 0  %}
                                                        <a href="{{ path('app_overtime_allow', {id: overtime.id}) }}" class="dropdown-item">
                                                            <i class="ph-check me-2"></i>
                                                            Dozvolite
                                                        </a>
                                                        <a href="{{ path('app_overtime_decline', {id: overtime.id}) }}" class="dropdown-item">
                                                            <i class="ph-minus me-2"></i>
                                                            Odbijte
                                                        </a>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="navigation float-end">
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>
                    </div>
                    <!-- /state saving -->
                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

