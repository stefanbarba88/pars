{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}
        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ project.title }}
                            </h4>
                        </div>
                    </div>
                    {{ render(controller('App\\Controller\\WidgetController::projectProfilNavigation', { project: project } )) }}
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    {% if project.important is not null %}
                        <div class="alert alert-info fade show">
                            <span class="fw-semibold">{{ project.important }}
                        </div>
                    {% endif %}
                    <!-- State saving -->
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Faze razvoja projekta</h5>
                            {% if not project.suspended %}
                                <div class="my-auto ms-auto">
                                    <a href="{{ path('app_project_phases_form', {project : project.id}) }}" class="btn btn-primary"><i class="ph-plus me-2"></i> Dodajte</a>
                                </div>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <div class="row">
                            {% for phase in phases %}
                                {% set phaseDays = getDaysRemainingPhase(phase) %}
                                <div class="col-xl-4">
                                    <div class="card">
                                        <div class="card-body {{ phaseDays.klasa1 }}">
                                            <div class="d-flex mb-3">
                                                <div class="d-inline-flex">
                                                    <span class="me-2 d-block">
    {% set boja = 'bg-primary'%}
                                                        {% set procenat = phase.percent %}
                                                        {% if procenat < 26 %}
                                                            {% set boja = 'bg-danger'%}
                                                        {% endif %}
                                                        {% if procenat > 25 and procenat < 76 %}
                                                            {% set boja = 'bg-warning'%}
                                                        {% endif %}
                                                        {% if procenat > 75 and procenat < 99 %}
                                                            {% set boja = 'bg-info'%}
                                                        {% endif %}
                                                        {% if procenat == 100 %}
                                                            {% set boja = 'bg-success'%}
                                                        {% endif %}

    <div class="progress w-100" style="height: 1.5rem;">
        <div class="progress-bar {{ boja }}" role="progressbar" style="width: {{ procenat }}%; font-size: 0.9rem;" aria-valuenow="{{ procenat }}" aria-valuemin="0" aria-valuemax="100">
            {% if procenat > 0 %}
                {{ procenat }}%
            {% endif %}
        </div>
    </div>
</span>

                                                    <span class="badge bg-primary text-white me-2">{{ getUcinkovitost1(phase)[1] }}/{{ getUcinkovitost1(phase)[0] }}</span>
                                                    <span class="badge bg-secondary text-primary me-2">{{ getUcinkovitost2(phase)[1] }}/{{ getUcinkovitost2(phase)[0] }}</span>

                                                </div>

                                                <div class="dropdown ms-auto">
                                                    <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                        <i class="ph-gear"></i>
                                                    </a>

                                                    <div class="dropdown-menu dropdown-menu-end">
                                                        <a href="{{ path('app_project_phase_view', {id: phase.id}) }}" class="dropdown-item">
                                                            <i class="ph-eye me-2"></i>
                                                            Vidite
                                                        </a>
                                                        <a href="{{ path('app_task_project_form', {project: project.id, faza: phase.id}) }}" class="dropdown-item">
                                                            <i class="ph-plus me-2"></i>
                                                            Dodajte zadatak
                                                        </a>
                                                        <a href="{{ path('app_checklist_form', {project: project.id, faza: phase.id}) }}" class="dropdown-item">
                                                            <i class="ph-plus me-2"></i>
                                                            Dodajte interni zadatak
                                                        </a>
                                                        <a href="{{ path('app_project_phases_edit', {id: phase.id}) }}" class="dropdown-item">
                                                            <i class="ph-note-pencil me-2"></i>
                                                            Izmenite
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>

                                            <div>
                                                <h6 class="mb-1"><a href="">#{{ phase.pozicija }} - {{ phase.title }}</a></h6>
{#                                                <p class="mb-2">{{ phase.project.title }}</p>#}
                                            </div>

                                            <div class="d-sm-flex align-items-sm-center flex-sm-wrap">
                                                <div class="d-flex flex-wrap">
                                                    <div><span class="text-muted"><i class="ph-calendar me-1"></i> {{ phase.created | date('d.m.Y.') }}</span></div>
                                                    <div class="ms-3"><a href="{{ path('app_project_profile_view', {id:phase.project.id}) }}"><i class="ph-circles-three me-1"></i> {{ phase.project.title }}</a></div>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="card-footer d-flex align-items-center">
                                                <span>
                                                    <i class="ph-bell-ringing me-1"></i>
                                                    Rok: <span class="fw-semibold">
                                                        {% if phase.deadline is not null %}
                                                            {{ phase.deadline | date("d.m.Y.")}} {% if phaseDays.poruka is not empty %}<i class="ph-info me-2" data-bs-popup="tooltip" aria-label="{{ phaseDays.poruka }}" data-bs-original-title="{{ phaseDays.poruka }}"></i>{% endif %}
                                                        {% endif %}
                                                    </span>
                                                </span>

                                            <div class="d-inline-flex mt-2 mt-sm-0 ms-auto">
                                                <div class="dropdown d-inline-flex">
                                                    <i class="ph-lightbulb me-2"></i>
                                                    {% if phase.status == constant('App\\Classes\\Data\\InternTaskStatusData::NIJE_ZAPOCETO') %}
                                                        <span class="badge bg-secondary text-primary">Nije startovan</span>
                                                    {% endif %}
                                                    {% if phase.status == constant('App\\Classes\\Data\\InternTaskStatusData::ZAPOCETO') %}
                                                        <span class="badge bg-yellow text-primary">Otvoren</span>
                                                    {% endif %}
                                                    {% if phase.status == constant('App\\Classes\\Data\\InternTaskStatusData::ZAVRSENO') %}
                                                        <span class="badge bg-primary text-white">Zatvoren</span>
                                                    {% endif %}
                                                    {% if phase.status == constant('App\\Classes\\Data\\InternTaskStatusData::KONVERTOVANO') %}
                                                        <span class="badge bg-yellow text-primary">Konvertovan</span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        </div>
                    </div>
                    <!-- /state saving -->
                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

