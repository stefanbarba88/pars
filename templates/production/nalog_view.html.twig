{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                #{{ production.productKey }}
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="card">
                                            <div class="card-header d-flex align-items-center">
                                                <h5 class="mb-0">#{{ production.productKey }}</h5>
                                                    {% if production.tasks.count == 0 %}
                                                        {% if app.user.userType != 4 or admin %}
                                                            <div class="my-auto ms-auto">
                                                                <a href="{{ path('app_production_edit', {id : production.id}) }}"><i class="ph-note-pencil"></i></a>
                                                            </div>
                                                        {% endif %}
                                                    {% endif %}
                                                <div class="my-auto ms-auto">
                                                    <a href="{{ path('app_production_view_pdf', {id: production.id}) }}" class="btn btn-light"><i class="ph-file-pdf me-2"></i> Izvezite</a>
                                                </div>
                                            </div>

                                            <div class="card-body">
                                                <div class="row p-2">
                                                    <div class="col-4">Projekat:</div>
                                                    <div class="col-8">{{ production.project.title }}</div>
                                                </div>
                                                <div class="row p-2 bg-light">
                                                    <div class="col-4">Šifra:</div>
                                                    <div class="col-8">{{ production.productKey }}</div>
                                                </div>
                                                <div class="row p-2">
                                                    <div class="col-4">Rok:</div>
                                                    <div class="col-8">{{ production.deadline | date ('d.m.Y.') }}</div>
                                                </div>
                                                <div class="row p-2 bg-light">
                                                    <div class="col-4">Procenat realizacija:</div>
                                                    <div class="col-8">
                                                        {% set boja = 'bg-primary'%}
                                                        {% set procenat = production.percent %}
                                                        {% if procenat < 26 %}
                                                            {% set boja = 'bg-danger'%}
                                                        {% endif %}
                                                        {% if procenat > 25 and procenat < 76 %}
                                                            {% set boja = 'bg-warning'%}
                                                        {% endif %}
                                                        {% if procenat > 75 and procenat < 99 %}
                                                            {% set boja = 'bg-info'%}
                                                        {% endif %}
                                                        {% if procenat == 100 %}
                                                            {% set boja = 'bg-success'%}
                                                        {% endif %}

                                                        <div class="progress">
                                                            <div class="progress-bar {{ boja }}" role="progressbar" style="width: {{ procenat }}%" aria-valuenow="{{ procenat }}" aria-valuemin="0" aria-valuemax="100">
                                                                {% if procenat > 0 %}
                                                                    {{ procenat }}%
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row p-2">
                                                    <div class="col-4">Status:</div>
                                                    <div class="col-8">
                                                        {% if production.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') %}
                                                            <span class="badge bg-secondary text-primary">Nije startovan</span>
                                                        {% endif %}
                                                        {% if production.status == constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                            <span class="badge bg-yellow text-primary">Otvoren</span>
                                                        {% endif %}
                                                        {% if production.status == constant('App\\Classes\\Data\\TaskStatusData::ZAVRSENO') %}
                                                            <span class="badge bg-primary text-white">Zatvoren</span>
                                                        {% endif %}

                                                    </div>
                                                </div>
                                                <div class="row p-2 bg-light">
                                                    <div class="col-4">Aktivnost:</div>
                                                    <div class="col-8">
                                                        {% if production.isSuspended %}
                                                            <span class="badge bg-yellow text-primary">Deaktivirano</span>
                                                        {% else %}
                                                            <span class="badge bg-primary text-white">Aktivno</span>
                                                        {% endif %}
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="card">
                                            <div class="card-header">
                                                <h5 class="mb-0">Istorija izmena</h5>
                                            </div>
                                            <div class="card-body">
                                                <div class="card">
                                                    <table class="table table-bordered table-hover table-responsive table-sm">
                                                        <thead class="bg-light test-primary">
                                                        <tr>
                                                            <th>Datum</th>
                                                            <th>Realizacija</th>
                                                            <th>Količina</th>
                                                        </tr>
                                                        </thead>
                                                        <tbody>
                                                        {% for istorija in progres %}
                                                            <tr>
                                                                <td>
                                                                    <div class="d-inline-flex align-items-center">
                                                                        <i class="ph-calendar me-2"></i>
                                                                        {{ istorija.datum}}
                                                                    </div>
                                                                </td>

                                                                <td class="fw-semibold">
                                                                    {% set boja = 'bg-primary'%}
                                                                    {% set procenat = istorija.percent %}
                                                                    {% if procenat < 26 %}
                                                                        {% set boja = 'bg-danger'%}
                                                                    {% endif %}
                                                                    {% if procenat > 25 and procenat < 76 %}
                                                                        {% set boja = 'bg-warning'%}
                                                                    {% endif %}
                                                                    {% if procenat > 75 and procenat < 99 %}
                                                                        {% set boja = 'bg-info'%}
                                                                    {% endif %}
                                                                    {% if procenat == 100 %}
                                                                        {% set boja = 'bg-success'%}
                                                                    {% endif %}

                                                                    <div class="progress">
                                                                        <div class="progress-bar {{ boja }}" role="progressbar" style="width: {{ procenat }}%" aria-valuenow="{{ procenat }}" aria-valuemin="0" aria-valuemax="100">
                                                                            {% if procenat > 0 %}
                                                                                {{ procenat }}%
                                                                            {% endif %}
                                                                        </div>
                                                                    </div>

                                                                </td>

                                                                <td>
                                                                    <span class="badge bg-yellow text-primary">{{ istorija.kolicinaTren }}/{{ istorija.kolicina }}</span>
                                                                </td>

                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Lista proizvoda u radnom nalogu</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive card">
                                            <table class="table table-bordered table-hover table-responsive table-sm">
                                                <thead class="bg-light text-primary">
                                                <tr>
                                                    <th rowspan="2">Šifra</th>
                                                    <th rowspan="2">Naziv</th>
                                                    <th rowspan="2">Količina</th>
                                                    <th colspan="4" class="text-center">Elementi</th>
                                                </tr>
                                                <tr>
                                                    <th>Šifra</th>
                                                    <th>Naziv</th>
                                                    <th>Sastav</th>
                                                    <th>Količina</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for deo in production.deo %}
                                                    {% set sastavnicaCount = deo.product.sastavnica|length %}
                                                    {% set i = loop.index0 %}
                                                    {% if sastavnicaCount > 0 %}
                                                        {% for element in deo.product.sastavnica %}
                                                            {% set x = loop.index0 %}
                                                            <tr>
                                                                {% if loop.first %}
                                                                    <td rowspan="{{ sastavnicaCount }}">{{ deo.product.productKey }}</td>
                                                                    <td rowspan="{{ sastavnicaCount }}">
                                                                        <a href="{{ path('app_product_view', {id: deo.product.id}) }}" class="d-block fw-semibold">
                                                                            {{ deo.product.title }}
                                                                        </a>
                                                                    </td>
                                                                    <td rowspan="{{ sastavnicaCount }}" class="text-center">{{ deo.kolicina }}</td>
                                                                {% endif %}
                                                                <td>{{ element.element.productKey }}</td>
                                                                <td>
                                                                    <a href="{{ path('app_element_view', {id: element.element.id}) }}" class="d-block fw-semibold">
                                                                        {{ element.element.title }}
                                                                    </a>
                                                                </td>
                                                                <td class="text-center">{{ archive[i][x]['sastav'] }}</td>
                                                                <td class="text-center">{{ (archive[i][x]['sastav'] * deo.kolicina)|number_format(3, '.', '') }}</td>
                                                            </tr>
                                                        {% endfor %}
                                                    {% else %}
                                                        <tr>
                                                            <td>{{ deo.product.productKey }}</td>
                                                            <td>
                                                                <a href="{{ path('app_product_view', {id: deo.product.id}) }}" class="d-block fw-semibold">
                                                                    {{ deo.product.title }}
                                                                </a>
                                                            </td>
                                                            <td class="text-center">{{ product.kolicina }}</td>
                                                            <td colspan="4" class="text-center">Nema elemenata</td>
                                                        </tr>
                                                    {% endif %}
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Lista zadataka u radnom nalogu</h5>
                                    </div>
                                    {% set difference = date()|date_modify(constant('App\\Classes\\AppConfig::TIME_DIFFERENCE')) %}
                                    <div class="card-body">
                                        <div class="card">
                                            <table class="table table-bordered table-hover table-responsive table-sm">
                                                <thead class="bg-light text-primary">
                                                <tr>
                                                    <th>#</th>
                                                    <th>Zadatak</th>
                                                    <th>Kategorija</th>
                                                    <th>Datum zadatka</th>
                                                    <th>Rok</th>
                                                    <th>Zaposleni</th>
                                                    <th>Prioritet</th>
                                                    <th>Status</th>
                                                    <th>Kreirao</th>
                                                    <th class="text-center text-muted" style="width: 30px;"><i class="ph-dots-three"></i></th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for task in pagination %}
                                                    {% set taskDays = getDaysRemainingTask(task) %}
                                                    <tr>
                                                        <td>{{ task.id }}</td>
                                                        {% if is_granted('ROLE_EMPLOYEE') and not admin%}
                                                            {% if app.user in task.getAssignedUsers %}
                                                                <td>
                                                                    <div class="fw-semibold">
                                                                        <a href="{{ path('app_task_view_user', { id: task.id}) }}">{{ task.title }}</a>
                                                                        {% if task.repeating == 1 %}
                                                                            <i class="ph-info" data-bs-popup="popover" data-bs-trigger="hover" data-bs-placement="top" data-bs-content="Ovaj zadatak se ponavlja."></i>
                                                                        {% endif %}
                                                                    </div>
                                                                    {% if task.label is not empty %}
                                                                        <div class="d-inline-flex">
                                                                            {% for label in task.label %}
                                                                                {{label.label | raw}}
                                                                            {% endfor %}
                                                                        </div>
                                                                    {% endif %}
                                                                </td>
                                                            {% else %}
                                                                <td>
                                                                    <div class="fw-semibold">
                                                                        {{ task.title }}
                                                                        {% if task.repeating == 1 %}
                                                                            <i class="ph-info" data-bs-popup="popover" data-bs-trigger="hover" data-bs-placement="top" data-bs-content="Ovaj zadatak se ponavlja."></i>
                                                                        {% endif %}
                                                                    </div>
                                                                    {% if task.label is not empty %}
                                                                        <div class="d-inline-flex">
                                                                            {% for label in task.label %}
                                                                                {{label.label | raw}}
                                                                            {% endfor %}
                                                                        </div>
                                                                    {% endif %}
                                                                </td>
                                                            {% endif %}
                                                        {% else %}
                                                            <td>
                                                                <div class="fw-semibold">
                                                                    <a href="{{ path('app_task_view', { id: task.id}) }}">{{ task.title }}</a>
                                                                    {% if task.repeating == 1 %}
                                                                        <i class="ph-info" data-bs-popup="popover" data-bs-trigger="hover" data-bs-placement="top" data-bs-content="Ovaj zadatak se ponavlja."></i>
                                                                    {% endif %}
                                                                </div>
                                                                {% if task.label is not empty %}
                                                                    <div class="d-inline-flex">
                                                                        {% for label in task.label %}
                                                                            {{label.label | raw}}
                                                                        {% endfor %}
                                                                    </div>
                                                                {% endif %}
                                                            </td>
                                                        {% endif %}
                                                        <td>
                                                            {% if task.category %}
                                                                {{ task.category.title }}
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            <div class="d-inline-flex align-items-center">
                                                                <i class="ph-calendar me-2"></i>
                                                                {{ task.datumKreiranja | date("d.m.Y.")}}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            {% if task.deadline is not null %}
                                                                <div class="d-inline-flex align-items-center">
                                                                    <i class="ph-calendar me-2"></i>
                                                                    {{ task.deadline | date("d.m.Y.")}} {% if taskDays.poruka is not empty %}<i class="ph-info me-2" data-bs-popup="tooltip" aria-label="{{ taskDays.poruka }}" data-bs-original-title="{{ taskDays.poruka }}"></i>{% endif %}
                                                                </div>
                                                            {% endif %}
                                                        </td>

                                                        <td>
                                                            <div class="text-body">
                                                                {% if is_granted('ROLE_EMPLOYEE') and not admin %}
                                                                    {% for user in task.assignedUsers %}
                                                                        {% if getLogStatusByUser(task, user) == 1 %}
                                                                            <div class="btn-group">
                                                                                <div class="fw-semibold d-inline-flex align-items-center ">
                                                                                    {{ user.fullName }}
                                                                                    <div class="live p-1 mx-2"></div>
                                                                                </div>
                                                                            </div>
                                                                        {% else %}
                                                                            <div class="fw-semibold d-inline-flex align-items-center ">
                                                                                {{ user.fullName }}
                                                                            </div>
                                                                        {% endif %}<br>
                                                                    {% endfor %}
                                                                {% else %}
                                                                    {% for user in task.assignedUsers %}
                                                                        {% if getLogStatusByUser(task, user) == 1 %}
                                                                            <div class="btn-group">
                                                                                <a href="{{ path('app_employee_activity_view', { id: user.id }) }}" class="fw-semibold d-inline-flex align-items-center ">
                                                                                    {{ user.fullName }}
                                                                                    <div class="live p-1 mx-2"></div>
                                                                                </a>
                                                                            </div>
                                                                        {% else %}
                                                                            <a href="{{ path('app_employee_activity_view', {id: user.id }) }}" class="fw-semibold d-inline-flex align-items-center ">
                                                                                {{ user.fullName }}
                                                                            </a>
                                                                        {% endif %}<br>
                                                                    {% endfor %}
                                                                {% endif %}
                                                            </div>
                                                        </td>
                                                        <td class="text-center">
                                                            {% if task.priority == 1 %}
                                                                <span class="badge bg-danger bg-opacity-20 text-danger">Veoma visok</span>
                                                            {% elseif task.priority == 2 %}
                                                                <span class="badge bg-warning bg-opacity-20 text-warning">Visok</span>
                                                            {% elseif task.priority == 4 %}
                                                                <span class="badge bg-info bg-opacity-20 text-info">Nizak</span>
                                                            {% elseif task.priority == 5 %}
                                                                <span class="badge bg-secondary bg-opacity-20 text-secondary">Veoma nizak</span>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') %}
                                                                <span class="badge bg-secondary text-primary">Nije startovan</span>
                                                            {% endif %}
                                                            {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                                <span class="badge bg-yellow text-primary">Otvoren</span>
                                                            {% endif %}
                                                            {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAVRSENO') %}
                                                                <span class="badge bg-primary text-white">Zatvoren</span>
                                                            {% endif %}
                                                            {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO') %}
                                                                <span class="badge bg-success text-white">Verifikovano</span>
                                                            {% endif %}
                                                        </td>
                                                        <td>
                                                            {% if task.createdBy is not null %}
                                                                {{ task.createdBy.getFullName() }}
                                                            {% endif %}
                                                        </td>
                                                        <td class="text-center">
                                                            {% if not admin and app.user in task.getAssignedUsers %}
                                                                <div class="dropdown">
                                                                    <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                                        <i class="ph-gear"></i>
                                                                    </a>
                                                                    <div class="dropdown-menu dropdown-menu-end">
                                                                        <a href="{{ path('app_task_view_user', { id: task.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                                        {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') and not task.isDeleted and task.createdBy == app.user %}
                                                                            <a href="{{ path('app_task_reassign', {id: task.id} ) }}" class="dropdown-item"><i class="ph-user-switch me-2"></i> Promenite zaposlene</a>
                                                                        {% endif %}
                                                                        {% if not task.isDeleted and task.createdBy == app.user and task.created > difference %}
                                                                            <a href="{{ path('app_task_edit_info', {id: task.id} ) }}" class="dropdown-item"><i class="ph-note-pencil me-2"></i> Izmenite</a>
                                                                        {% endif %}
                                                                    </div>
                                                                </div>
                                                            {% endif %}
                                                            {% if not is_granted('ROLE_EMPLOYEE') or admin %}
                                                                <div class="dropdown">
                                                                    <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                                        <i class="ph-gear"></i>
                                                                    </a>
                                                                    <div class="dropdown-menu dropdown-menu-end">
                                                                        <a href="{{ path('app_task_view', { id: task.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                                        {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') and not task.isDeleted %}
                                                                            <a href="{{ path('app_task_reassign', {id: task.id} ) }}" class="dropdown-item"><i class="ph-user-switch me-2"></i> Promenite zaposlene</a>
                                                                        {% endif %}
                                                                        {% if not task.isDeleted %}
                                                                            <a href="{{ path('app_task_edit_info', {id: task.id} ) }}" class="dropdown-item"><i class="ph-note-pencil me-2"></i> Izmenite</a>
                                                                            {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                                                <a href="{{ path('app_task_close', {id: task.id} ) }}" class="dropdown-item"><i class="ph-x me-2"></i> Zatvorite</a>
                                                                            {% endif %}
                                                                            {% if task.status != constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                                                <a href="{{ path('app_task_delete',{id: task.id} ) }}" class="dropdown-item"><i class="ph-trash me-2"></i> Obrišite</a>
                                                                            {% endif %}
                                                                        {% endif %}
                                                                    </div>

                                                                </div>
                                                            {% endif %}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="card-footer">
                                        <div class="navigation float-end">
                                            {{ knp_pagination_render(pagination) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

