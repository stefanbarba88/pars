{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}
        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ project.title }}
                            </h4>
                        </div>
                    </div>

                    {{ render(controller('App\\Controller\\WidgetController::projectProfilNavigation', { project: project } )) }}

                </div>
                <!-- /page header -->

                <div class="content">
                    {% set difference = date()|date_modify(constant('App\\Classes\\AppConfig::TIME_DIFFERENCE')) %}
                    {% if project.important is not null %}
                        <div class="alert alert-info fade show">
                            <span class="fw-semibold">{{ project.important }}
                        </div>
                    {% endif %}
                    <!-- State saving -->
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Lista zadataka</h5>
                            {% if not project.suspended %}
                                <div class="my-auto ms-auto">
                                    <a href="{{ path('app_task_project_form', {project : project.id}) }}" class="btn btn-primary"><i class="ph-plus"></i></a>
                                </div>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <div class="accordion" id="accordion_collapsed">
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button fw-semibold collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsed_item_filter" aria-expanded="false">
                                            Filter
                                        </button>
                                    </h2>
                                    <div id="collapsed_item_filter" class="accordion-collapse collapse" data-bs-parent="#accordion_collapsed" style="">
                                        <form method="get" action="{{ path('app_project_tasks_view', {id:project.id}) }}" class="form-validate-jquery" novalidation="novalidation">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        <div class="mb-3">
                                                            <label class="form-label required" for="kategorija">Kategorija:</label>
                                                            <select id="kategorija" name="kategorija" class="form-control select">
                                                                <option value="">--Izaberite kategoriju--</option>
                                                                {% for kat in kategorije %}
                                                                    <option value="{{ kat.id }}">{{ kat.title }}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </div>
                                                    </div>
                                                    {% if app.user.userType != 4 %}
                                                        <div class="col-lg-4">
                                                            <div class="mb-3">
                                                                <label class="form-label required" for="zaposleni">Zaposleni:</label>
                                                                <select id="zaposleni" name="zaposleni" class="form-control select">
                                                                    <option value="">--Izaberite zaposlenog--</option>
                                                                    {% for user in users %}
                                                                        <option value="{{ user.id }}">{{ user.fullName }}</option>
                                                                    {% endfor %}
                                                                </select>
                                                            </div>
                                                        </div>
                                                    {% endif %}


                                                    <div class="col-lg-4">
                                                        <div class="mb-3">
                                                            <label class="form-label" for="period">Period:</label>
                                                            <div class="input-group">
                                                                <span class="input-group-text"><i class="ph-calendar"></i></span>
                                                                <input type="text" autocomplete="off"  class="form-control daterange-locale-sr" id="period" name="period">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                             <div class="text-end">
                                    <button type="button" class="btn btn-primary"
                                            onclick="window.location.href = this.closest('form').action;">
                                        <i class="ph-arrow-counter-clockwise me-2"></i> Reset
                                    </button>
                                    <button type="submit" class="btn btn-primary"><i class="ph-gear-six me-2"></i> Prika≈æite</button>
                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="card">
                                <table class="table table-bordered table-hover table-responsive table_morecondensed">
                                    <thead class="bg-light text-primary">
                                    <tr>
                                        <th>#</th>
                                        <th>Zadatak</th>
                                        <th class="text-center text-muted" style="width: 30px;"><i class="ph-dots-three"></i></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for task in pagination %}
                                        <tr>
                                            <td>{{ task.id }}</td>
                                            {% if is_granted('ROLE_EMPLOYEE') and not admin%}
                                                {% if app.user in task.getAssignedUsers %}
                                                    <td>
                                                        <div class="fw-semibold">
                                                            <a href="{{ path('app_task_view_user', { id: task.id}) }}">{{ task.title }}</a>
                                                            {% if task.repeating == 1 %}
                                                                <i class="ph-info" data-bs-popup="popover" data-bs-trigger="hover" data-bs-placement="top" data-bs-content="Ovaj zadatak se ponavlja."></i>
                                                            {% endif %}
                                                        </div>
                                                    </td>
                                                {% else %}
                                                    <td>
                                                        <div class="fw-semibold">
                                                            {{ task.title }}
                                                            {% if task.repeating == 1 %}
                                                                <i class="ph-info" data-bs-popup="popover" data-bs-trigger="hover" data-bs-placement="top" data-bs-content="Ovaj zadatak se ponavlja."></i>
                                                            {% endif %}
                                                        </div>
                                                    </td>
                                                {% endif %}
                                            {% else %}
                                                <td>
                                                    <div class="fw-semibold">
                                                        <a href="{{ path('app_task_view', { id: task.id}) }}">{{ task.title }}</a>
                                                        {% if task.repeating == 1 %}
                                                            <i class="ph-info" data-bs-popup="popover" data-bs-trigger="hover" data-bs-placement="top" data-bs-content="Ovaj zadatak se ponavlja."></i>
                                                        {% endif %}
                                                    </div>
                                                </td>
                                            {% endif %}
                                            <td class="text-center">
                                                <a type="button" class="text-body collapsed" data-bs-toggle="collapse" data-bs-target="#collapsed_item{{ task.id }}" aria-expanded="false"><i class="ph-caret-down collapsible-indicator"></i></a>
                                            </td>
                                        </tr>
                                        <tr id="collapsed_item{{ task.id }}" class="accordion-collapse collapse bg-light" data-bs-parent="#accordion_collapsed" style="">
                                            <td colspan="2">
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') %}
                                                    <span class="badge bg-secondary text-primary">Nije startovan</span>
                                                {% endif %}
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                    <span class="badge bg-yellow text-primary">Otvoren</span>
                                                {% endif %}
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAVRSENO') %}
                                                    <span class="badge bg-primary text-white">Zatvoren</span>
                                                {% endif %}
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO') %}
                                                    <span class="badge bg-success text-white">Verifikovano</span>
                                                {% endif %}
                                            </td>

                                            <td class="text-center">
                                                {% if not admin and app.user in task.getAssignedUsers %}
                                                    <div class="dropdown">
                                                        <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                            <i class="ph-gear"></i>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-end">
                                                            <a href="{{ path('app_task_view_user', { id: task.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                            {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') and not task.isDeleted and task.createdBy == app.user %}
                                                                <a href="{{ path('app_task_reassign', {id: task.id} ) }}" class="dropdown-item"><i class="ph-user-switch me-2"></i> Promenite zaposlene</a>
                                                            {% endif %}
                                                            {% if not task.isDeleted and task.createdBy == app.user and task.created > difference %}
                                                                <a href="{{ path('app_task_edit_info', {id: task.id} ) }}" class="dropdown-item"><i class="ph-pencil me-2"></i> Izmenite</a>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                                {% if not is_granted('ROLE_EMPLOYEE') or admin %}
                                                    <div class="dropdown">
                                                        <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                            <i class="ph-gear"></i>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-end">
                                                            <a href="{{ path('app_task_view', { id: task.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                            {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') and not task.isDeleted %}
                                                                <a href="{{ path('app_task_reassign', {id: task.id} ) }}" class="dropdown-item"><i class="ph-user-switch me-2"></i> Promenite zaposlene</a>
                                                            {% endif %}
                                                            {% if not task.isDeleted %}
                                                                <a href="{{ path('app_task_edit_info', {id: task.id} ) }}" class="dropdown-item"><i class="ph-pencil me-2"></i> Izmenite</a>
                                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                                    <a href="{{ path('app_task_close', {id: task.id} ) }}" class="dropdown-item"><i class="ph-x me-2"></i> Zatvorite</a>
                                                                {% endif %}
                                                                {% if task.status != constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                                    <a href="{{ path('app_task_delete',{id: task.id} ) }}" class="dropdown-item"><i class="ph-trash me-2"></i> Obri≈°ite</a>
                                                                {% endif %}
                                                            {% endif %}
                                                        </div>

                                                    </div>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="navigation float-end">
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>

                    </div>
                    <!-- /state saving -->
                </div>
                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

