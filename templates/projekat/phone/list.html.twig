{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Projekat elaborati
                            </h4>
                        </div>
                    </div>

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    <!-- State saving -->
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Lista projekata</h5>
{#                            {% if not is_granted('ROLE_EMPLOYEE') %}#}
                                <div class="my-auto ms-auto">
                                    <a href="{{ path('app_projekat_form') }}" class="btn btn-primary"><i class="ph-plus me-2"></i> Dodajte</a>
                                </div>
{#                            {% endif %}#}
                        </div>
                        <div class="card-body">
                            <div class="accordion" id="accordion_collapsed">
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button fw-semibold collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapsed_item_filter" aria-expanded="false">
                                            Filter
                                        </button>
                                    </h2>
                                    <div id="collapsed_item_filter" class="accordion-collapse collapse" data-bs-parent="#accordion_collapsed" style="">
                                        <form method="get" action="{{ path('app_projekats') }}" class="form-validate-jquery" novalidation="novalidation">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        <div class="mb-3">
                                                            <label class="form-label" for="naziv">Naziv:</label>
                                                            <input id="title" name="title" class="form-control" type="text">
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="text-end">
                                                    <button type="submit" class="btn btn-primary"><i class="ph-gear-six me-2"></i> Prikažite</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="card">
                                <table class="table table-bordered table-hover table-responsive table_morecondensed">
                                    <thead class="bg-light text-primary">
                                    <tr>
                                        <th>Projekat</th>
                                        <th>Stanje</th>
                                        <th>Procenat</th>
                                        <th class="text-center text-muted" style="width: 30px;"><i class="ph-dots-three"></i></th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for projekat in pagination %}
                                        {% set projekatDays = getDeadlineCounterProjekat(projekat.id) %}
                                        {% if projekat.percent < 100 %}
                                        <tr class="{{ projekatDays.klasa }}">
                                        {% else %}
                                            <tr>
                                        {% endif %}

                                        <td>
                                            <div class="text-body">
                                                <a href="{{ path('app_projekat_view', {id: projekat.id}) }}" class="fw-semibold">
                                                    {{ projekat.title }}
                                                </a>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                                    <span class="badge bg-yellow align-self-center rounded-pill ms-auto">
                                                        {{ projekat.stanje }}
                                                    </span>
                                        </td>
                                        <td>
                                            {% set boja = 'bg-primary'%}
                                            {% set procenat = projekat.percent%}
                                            {% if procenat < 26 %}
                                                {% set boja = 'bg-danger'%}
                                            {% endif %}
                                            {% if procenat > 25 and procenat < 76 %}
                                                {% set boja = 'bg-warning'%}
                                            {% endif %}
                                            {% if procenat > 75 and procenat < 99 %}
                                                {% set boja = 'bg-info'%}
                                            {% endif %}
                                            {% if procenat == 100 %}
                                                {% set boja = 'bg-success'%}
                                            {% endif %}

                                            <div class="progress">
                                                <div class="progress-bar {{ boja }}" role="progressbar" style="width: {{ procenat }}%" aria-valuenow="{{ procenat }}" aria-valuemin="0" aria-valuemax="100">
                                                    {% if procenat > 0 %}
                                                        {{ procenat }}%
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </td>


                                        <td class="text-center">
                                            <div class="dropdown">
                                                <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                    <i class="ph-gear"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <a href="{{ path('app_projekat_view', {id: projekat.id}) }}" class="dropdown-item">
                                                        <i class="ph-eye me-2"></i>
                                                        Vidite
                                                    </a>

                                                        <a href="{{ path('app_projekat_form', {id:projekat.id}) }}" class="dropdown-item">
                                                            <i class="ph-note-pencil me-2"></i>
                                                            Izmenite
                                                        </a>
                                                        <a href="" class="dropdown-item">
                                                            <i class="ph-trash me-2"></i>
                                                            Obrišite
                                                        </a>

                                                </div>
                                            </div>
                                        </td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="navigation float-end">
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>
                    </div>
                    <!-- /state saving -->
                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

