{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Izveštaj robotika
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    <!-- State saving -->
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Detalji izveštaja</h5>
                        </div>
                        <form name="report_form" method="post" action="{{ path('app_project_robots_reports') }}" class="form-validate-jquery" novalidation="novalidation" id="report_form">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="mb-3">
                                            <p>Tip izveštaja:*</p>
                                            <div class="border p-3 rounded">
                                                <div class="form-check form-check-inline">
                                                    <input type="radio" class="form-check-input" name="tip" id="cr_l_i_s" checked="" value="1">
                                                    <label class="form-check-label" for="cr_l_i_s">Projekti</label>
                                                </div>

                                                <div class="form-check form-check-inline">
                                                    <input type="radio" class="form-check-input" name="tip" id="cr_l_i_u" value="2">
                                                    <label class="form-check-label" for="cr_l_i_u">Zaposleni</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row projects">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label class="form-label" for="report_form_projects">Projekti:*</label>
                                            <select id="report_form_projects" name="report_form[projects][]" class="form-control listbox-basic" multiple="multiple">
                                                {% for project in projects %}
                                                    <option value="{{ project.id }}">{{ project.title }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row users">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label class="form-label" for="report_form_zaposleni">Zaposleni:*</label>
                                            <select id="report_form_zaposleni" name="report_form[zaposleni][]" class="form-control listbox-basic" multiple="multiple">
                                                {% for user in users %}
                                                    <option value="{{ user.id }}">{{ user.fullName }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label" for="report_form_period">Period:*</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="ph-calendar"></i></span>
                                                <input type="text" autocomplete="off" class="form-control daterange-locale-sr required" id="report_form_period" name="report_form[period]">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary"><i class="ph-file-xls me-2"></i> Kreirajte</button>
                                </div>
                            </div>
                        </form>

                    </div>
                    <!-- /state saving -->
                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

