{% block footerJavascript %}
    <script>
        $(document).ready(function () {
            // Prati promenu na radio dugmadima sa imenom "tip"
            $('input[name="tip"]').on('change', function () {
                // Proveri koji radio dugmić je izabran
                if ($('#cr_l_i_s').is(':checked')) {
                    // Ako je "Projekti" izabrano
                    $('.projects').show();  // Prikaži sekciju projekata
                    $('.users').hide();    // Sakrij sekciju korisnika
                } else if ($('#cr_l_i_u').is(':checked')) {
                    // Ako je "Zaposleni" izabrano
                    $('.users').show();    // Prikaži sekciju korisnika
                    $('.projects').hide(); // Sakrij sekciju projekata
                }
            });

            // Pokreni inicijalno da postavi početno stanje
            $('input[name="tip"]:checked').trigger('change');
        });
        const _componentDualListbox = function() {
            if (typeof DualListbox == 'undefined') {
                console.warn('Warning - dual_listbox.min.js is not loaded.');
                return;
            }

            // Selektovanje svih elemenata sa klasom 'listbox-basic'
            const listboxElements = document.querySelectorAll(".listbox-basic");

            // Iteracija kroz svaki element i kreiranje DualListbox instance
            listboxElements.forEach((element) => {
                new DualListbox(element, {
                    addButtonText: "<i class='ph-caret-right'></i>",
                    removeButtonText: "<i class='ph-caret-left'></i>",
                    addAllButtonText: "<i class='ph-caret-double-right'></i>",
                    removeAllButtonText: "<i class='ph-caret-double-left'></i>",
                    searchPlaceholder: "Unesite pojam pretrage..",
                    availableTitle: "Ponuđene opcije",
                    selectedTitle: "Izabrane opcije",
                });
            });
        };

        // Inicijalizacija nakon učitavanja stranice
        document.addEventListener("DOMContentLoaded", function() {
            _componentDualListbox();
        });
    </script>
{% endblock footerJavascript %}