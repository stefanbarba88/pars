{% extends 'layout.html.twig' %}
{% block content %}
    <!-- Page content -->
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Inner content -->
            <div class="content-inner">
                <!-- Content area -->
                <div class="content d-flex justify-content-center align-items-center">
                    <!-- Reset form -->
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <div class="d-inline-flex align-items-center justify-content-center mb-4 mt-2">
                                    <img src="{{ asset('assets/images/logo/epars_login1.png') }}" class="h-250px" alt="">
                                </div>
                                <h5 class="mb-0">Email za reset Vaše lozinke je poslat</h5>
                                <span class="d-block text-muted">
                                    Ako postoji nalog koji se podudara sa email adresom koja je navedena, dobićete email koji sadži link za reset lozinke.<br>
                                    Link ističe za {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                                </span>
                            </div>
                            <div class="text-center mb-3">
                                <span class="d-block text-muted">
                                    Ukoliko niste primili mail pogledajte u spam pošti ili klikom na dugme ispod ponovite proces.
                                </span>
                            </div>
                            <a href="{{ path('app_forgot_password_request') }}" type="button" class="btn btn-primary w-100">Pošaljite zahtev</a>
                        </div>
                    </div>
                    <!-- /reset form -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /inner content -->
        </div>
        <!-- /main content -->
    </div>
    <!-- /page content -->


{% endblock content %}

