{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Podešavanja
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <div class="content">
                    {% if not form.vars.valid %}
                        {% for child in form.children %}
                            {%for error in child.vars.errors%}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <span class="fw-semibold">{{error.message}}</span>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {%endfor%}
                        {%endfor%}
                    {%endif%}
                    <!-- Wizard with validation -->
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">
                                Opšta podešavanja
                            </h6>
                        </div>
                        {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}
                        <div class="card-body">
                            <div class="fw-bold border-bottom pb-2 mb-3">Informacije o firmi</div>
                            <div class="col-lg-6">
                                <div class="card-body">
                                    <div class="row p-2">
                                            <div class="col-4">Naziv:</div>
                                            <div class="col-8">{{ settings.company.title }}</div>
                                        </div>
                                    <div class="row p-2 bg-light">
                                            <div class="col-4">PIB/VAT:</div>
                                            <div class="col-8">{{ settings.company.pib }}</div>
                                        </div>
                                    <div class="row p-2">
                                        <div class="col-4">Email:</div>
                                        <div class="col-8">{{ settings.company.email }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="fw-bold border-bottom pb-2 mb-3">Radna sedmica</div>
                            <div class="col-lg-6 ">
                                <div class="mb-3">
                                    {{ form_label(form.workWeek, 'Radna sedmica:*', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.workWeek, {attr: { class: 'form-control required select' }}) }}
                                    <span class="form-text">Broj dana u radnoj sedmici. Ne utiče na period pre promene.</span>
                                </div>
                            </div>
                            <div class="fw-bold border-bottom pb-2 mb-3">Podešavanje praćenja vremena</div>
                            <div class="col-lg-6 ">
                                    <div class="mb-3">
                                        {{ form_label(form.isTimeRoundUp, 'Zaokruživanje vremena:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.isTimeRoundUp, {attr: { class: 'form-control required select round' }}) }}
                                        <span class="form-text">Mereno vreme se zaokružuje.</span>
                                    </div>
                                </div>
                            {% if settings.isTimeRoundUp %}
                                <div class="row timeRound">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.roundingInterval, 'Interval zaokruživanja:*', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.roundingInterval, {attr: { class: 'form-control interval required select' }}) }}
                                            <span class="form-text">Ako je zaokruživanje podešeno na 15 minuta, 13 minuta se beleži kao 15 minuta.</span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.minEntry, 'Minimalni unos:*', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.minEntry, {attr: { class: 'form-control minent required' }}) }}
                                            <span class="form-text">(min 1 max 60) Najmanja vrednost u minutima koja će biti zabeležena pri merenju.</span>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="row hide timeRound ">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.roundingInterval, 'Interval zaokruživanja:*', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.roundingInterval, {attr: { class: 'form-control interval select' }}) }}
                                            <span class="form-text">Ako je zaokruživanje podešeno na 15 minuta, 13 minuta se beleži kao 15 minuta.</span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.minEntry, 'Minimalni unos:*', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.minEntry, {attr: { class: 'form-control minent' }}) }}
                                            <span class="form-text">(min 1 max 60) Najmanja vrednost u minutima koja će biti zabeležena pri merenju.</span>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="fw-bold border-bottom pb-2 mb-3">Prikaz na kontrolnoj tabli</div>
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="mb-3">
                                        {{ form_label(form.isWidgete, 'Prečice:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.isWidgete, {attr: { class: 'form-control required select' }}) }}
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-3">
                                        {{ form_label(form.isPlanToday, 'Plan za danas:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.isPlanToday, {attr: { class: 'form-control required select' }}) }}
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-3">
                                        {{ form_label(form.isPlanTomorrow, 'Plan za sutra:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.isPlanTomorrow, {attr: { class: 'form-control required select' }}) }}
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="mb-3">
                                        {{ form_label(form.isPlanEmployee, 'Pregled zaposleni:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.isPlanEmployee, {attr: { class: 'form-control required select' }}) }}
                                    </div>
                                </div>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                            <!-- /wizard with validation -->

                </div>

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {# {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }} #}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

