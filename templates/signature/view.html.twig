{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Dozvole gradilišta
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header d-flex align-items-center">
                                        <h5 class="mb-0">{{ signature.employee.fullName }}</h5>
                                        <div class="my-auto ms-auto">
                                            <div class="dropdown">
                                                <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                    <i class="ph-gear"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <a href="{{ path('app_signature_view', {id:signature.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
{#                                                    <a href="{{ path('app_signature_approve', {id:signature.id}) }}" class="dropdown-item"><i class="ph-check me-2"></i> Dozvolite</a>#}
                                                    <a href="{{ path('app_signature_delete', {id:signature.id}) }}" class="dropdown-item"><i class="ph-trash me-2"></i> Obrišite</a>
                                                </div>
                                            </div>
                                        </div>
{#                                        <div class="my-auto ms-auto">#}
{#                                            <a href="" class="btn btn-primary"><i class="ph-check me-2"></i> Dozvolite</a>#}
{#                                        </div>#}
                                    </div>
                                    <div class="card-body">
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Projekat:</div>
                                            <div class="col-8">{{ signature.relation.title }}</div>
                                        </div>
                                        <div class="row p-2 ">
                                            <div class="col-4">Zaposleni:</div>
                                            <div class="col-8">{{ signature.employee.fullName }}</div>
                                        </div>
                                        <div class="row p-2 bg-light">
                                            <div class="col-4">Oznaka zadataka:</div>
                                            <div class="col-8">
                                                {% if signature.approved %}
                                                    <span class="badge bg-primary text-white">Potvrđen</span>
                                                {% else %}
                                                    <span class="badge bg-yellow text-primary">Nepotvrđen</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                                {% if signature.image is not null %}
                                                    <div class="col-sm-6 col-xl-3">
                                                            <div class="card">
                                                                <div class="card-img-actions mx-1 mt-1">
                                                                    <img class="card-img img-fluid" src="{{ asset(signature.image.thumbnail500) }}" alt="">
                                                                    <div class="card-img-actions-overlay card-img">
                                                                        <a href="{{ asset(signature.image.thumbnail1024) }}" class="btn btn-outline-white btn-icon rounded-pill" data-bs-popup="lightbox" data-gallery="gallery1">
                                                                            <i class="ph-plus"></i>
                                                                        </a>
                                                                    </div>
                                                                </div>
{#                                                                <div class="card-body">#}
{#                                                                    <div class="d-flex align-items-start flex-nowrap">#}
{#                                                                        <div>#}
{#                                                                            <a href="{{ path('app_car_reservation_view', {id: reservation.id}) }}">{{ reservation.driver.fullName }}: {{ reservation.created |date ('d.m.Y') }}-{{ reservation.finished| date('d.m.Y') }}</a>#}
{#                                                                        </div>#}
{#                                                                    </div>#}
{#                                                                </div>#}
                                                            </div>
                                                        </div>
                                                {% endif %}
                                            </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

