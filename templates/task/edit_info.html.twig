{% block footerJavascript %}

    <script>
        $(function () {
            $(".repeat").change(function(e) {
                e.preventDefault();
                if ($(this).val() == "1") {

                    $('.repeating').removeClass('hide');
                    $('.intrep').addClass('required');
                    // $('.datrep').addClass('required');
                }
                else {
                    $('.repeating').addClass('hide');
                    $('.intrep').val('').removeClass('required');
                    $('.datrep').val('').removeClass('required');
                }
            });

            const dpDateCustomFormatElement2 = document.querySelector('.datepicker-date-format-custom-2');
            if(dpDateCustomFormatElement2) {
                const dpDateCustomFormat2 = new Datepicker(dpDateCustomFormatElement2, {
                    container: '.content-inner',
                    buttonClass: 'btn',
                    prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                    nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                    format: 'dd.mm.yyyy',
                    todayBtn: true,
                    weekStart: 1,
                    minDate: 'today',
                    daysOfWeekHighlighted: [0,6],
                    language: 'sr-latn',
                    // daysOfWeekDisabled: [0]
                });
            }

            function handleRepeatingIntervalChange() {
                if ($("#task_edit_info_repeatingInterval").val() == "5") {
                    // Ako je izabrana opcija "5", prikaži polje za tačan datum i postavi required
                    $('.tacanDatum').removeClass('hide');
                    $('.datrep').addClass('required');
                } else {
                    // Ako nije, sakrij polje za tačan datum i ukloni required
                    $('.tacanDatum').addClass('hide');
                    $('.datrep').val('').removeClass('required');
                }
            }

            // Poziv funkcije pri učitavanju stranice
            handleRepeatingIntervalChange();

            // Postavljanje promene select elementa
            $("#task_edit_info_repeatingInterval").change(function(e) {
                e.preventDefault();
                // Poziv funkcije prilikom promene select elementa
                handleRepeatingIntervalChange();
            });
        });
    </script>

{% endblock footerJavascript %}