{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Zadaci
                            </h4>
                        </div>
                    </div>
                </div>

                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <!-- Wizard with validation -->
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">
                                {% if task.id is not null %}
                                    Izmena zadatka
                                {% else %}
                                    Dodavanje zadatka
                                {% endif %}
                            </h6>
                        </div>
                        {% if project is defined %}
                        <form name="datumCheckForm" method="post" action="{{ path('app_task_project_form' , {project: project})}}" class="form-validate-jquery" novalidation="novalidation"  id="check_datum_form">
                            {% else %}
                            <form name="datumCheckForm" method="post" action="{{ path('app_task_form')}}" class="form-validate-jquery" novalidation="novalidation"  id="check_datum_form">
                                {% endif %}
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            <label class="form-label" for="datumCheck">Datum zadatka:*</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ph-calendar"></i>
                                                </span>
                                                <input type="date" id="datumCheck" min="{{ 'now' | date("Y-m-d") }}"  name="datumCheckPhone" class="form-control required datepicker-input" autocomplete="off" aria-invalid="false" value="{{ 'now'| date('Y-m-d') }}">

                                            </div>
                                            <span class="form-text">Format: 31.12.1900. Definišete kada zadatak treba da se izvrši.</span>

                                        </div>
                                    </div>
                                </div>

                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary"><i class="ph-paper-plane-right me-2"></i> Nastavite</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /wizard with validation -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

