{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Tekući poslovi
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">
                                Kraj merenja
                            </h6>
                        </div>

                        <form name="task_time_firma" method="post" action="{{ path('app_stopwatch_stop_firma') }}" class="form-validate-jquery" novalidation="novalidation" id="task_time_firma_form">
                                        <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            <label class="form-label">Kraj merenja:</label>
                                                            <input type="text" class="form-control disable-input" name="stopwatch_time_add_form_period_old" value="{{ 'now' | date('d.m.Y H:i') }}">
                                                        </div>
                                                    </div>
                                                </div>


                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="mb-3">
                                                            <label class="form-label">Napomena:*</label>
                                                            <textarea name="napomena" rows="2" class="form-control required" ></textarea>
                                                            <div class="form-text">Unesite šta ste radili</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <div class="text-end">
                                                <button type="submit" id="timeTask" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                                            </div>
                                        </div>

                                    </form>


                    </div>
                    <!-- /wizard with validation -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {# {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }} #}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

