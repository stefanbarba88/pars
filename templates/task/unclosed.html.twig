{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                               Zadaci
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    {% set difference = date()|date_modify(constant('App\\Classes\\AppConfig::TIME_DIFFERENCE')) %}
                    <!-- State saving -->
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Nezatvoreni zadaci</h5>
                        </div>
                        <div class="card-body">
                            <div class="card">
                                <table class="table table-bordered table-hover table-responsive table-sm">
                                    <thead class="bg-light text-primary">
                                    <tr>
                                        <th>#</th>
                                        <th>Zadatak</th>
                                        <th>Kategorija</th>
                                        <th>Projekat</th>
                                        <th>Datum zadatka</th>
                                        <th>Rok</th>
                                        <th>Zaposleni</th>
                                        <th>Status</th>
                                        <th>Prioritet</th>
                                        <th class="text-center text-muted" style="width: 30px;"><i class="ph-dots-three"></i></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for task in pagination %}
                                        {% set taskDays = getDaysRemainingTask(task) %}
                                        <tr>
                                            <td>{{ task.id }}</td>
                                            {% if is_granted('ROLE_EMPLOYEE') and not admin%}
                                                {% if app.user in task.getAssignedUsers %}
                                                    <td>
                                                        <div class="fw-semibold">
                                                            <a href="{{ path('app_task_view_user', { id: task.id}) }}">{{ task.title }}</a>
                                                        </div>
                                                        {% if task.label is not empty %}
                                                            <div class="d-inline-flex">
                                                                {% for label in task.label %}
                                                                    {{label.label | raw}}
                                                                {% endfor %}
                                                            </div>
                                                        {% endif %}
                                                    </td>
                                                {% else %}
                                                    <td>
                                                        <div class="fw-semibold">
                                                            {{ task.title }}
                                                        </div>
                                                        {% if task.label is not empty %}
                                                            <div class="d-inline-flex">
                                                                {% for label in task.label %}
                                                                    {{label.label | raw}}
                                                                {% endfor %}
                                                            </div>
                                                        {% endif %}
                                                    </td>
                                                {% endif %}
                                            {% else %}
                                                <td>
                                                    <div class="fw-semibold">
                                                        <a href="{{ path('app_task_view', { id: task.id}) }}">{{ task.title }}</a>
                                                    </div>
                                                    {% if task.label is not empty %}
                                                        <div class="d-inline-flex">
                                                            {% for label in task.label %}
                                                                {{label.label | raw}}
                                                            {% endfor %}
                                                        </div>
                                                    {% endif %}
                                                </td>
                                            {% endif %}
                                            <td>
                                                {% if task.category %}
                                                    {{ task.category.title }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if task.project %}
                                                    <a href="{{ path('app_project_profile_view', { id: task.project.id}) }}">{{ task.project.title }}</a>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="d-inline-flex align-items-center">
                                                    <i class="ph-calendar me-2"></i>
                                                    {{ task.datumKreiranja | date("d.m.Y.")}}
                                                </div>
                                            </td>
                                            <td>
                                                {% if task.deadline is not null %}
                                                    <div class="d-inline-flex align-items-center">
                                                        <i class="ph-calendar me-2"></i>
                                                        {{ task.deadline | date("d.m.Y.")}} {% if taskDays.poruka is not empty %}<i class="ph-info me-2 " data-bs-popup="tooltip" aria-label="{{ taskDays.poruka }}" data-bs-original-title="{{ taskDays.poruka }}"></i>{% endif %}
                                                    </div>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="text-body">

                                                    {% if is_granted('ROLE_EMPLOYEE') and not admin%}
                                                        {% for user in task.assignedUsers %}
                                                            {% if getLogStatusByUser(task, user) == 1 %}
                                                                <div class="btn-group">
                                                                    <div class="fw-semibold d-inline-flex align-items-center ">
                                                                        {{ user.fullName }}
                                                                        <div class="live p-1 mx-2"></div>
                                                                    </div>
                                                                </div>
                                                            {% else %}
                                                                <div class="fw-semibold d-inline-flex align-items-center ">
                                                                    {{ user.fullName }}
                                                                </div>
                                                            {% endif %}<br>
                                                        {% endfor %}
                                                    {% else %}
                                                        {% for user in task.assignedUsers %}
                                                            {% if getLogStatusByUser(task, user) == 1 %}
                                                                <div class="btn-group">
                                                                    <a href="{{ path('app_employee_activity_view', { id: user.id }) }}" class="fw-semibold d-inline-flex align-items-center ">
                                                                        {{ user.fullName }}
                                                                        <div class="live p-1 mx-2"></div>
                                                                    </a>
                                                                </div>
                                                            {% else %}
                                                                <a href="{{ path('app_employee_activity_view', {id: user.id }) }}" class="fw-semibold d-inline-flex align-items-center ">
                                                                    {{ user.fullName }}
                                                                </a>
                                                            {% endif %}<br>
                                                        {% endfor %}
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td>
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') %}
                                                    <span class="badge bg-secondary text-primary">Nije startovan</span>
                                                {% endif %}
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                    <span class="badge bg-yellow text-primary">Otvoren</span>
                                                {% endif %}
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAVRSENO') %}
                                                    <span class="badge bg-primary text-white">Zatvoren</span>
                                                {% endif %}
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO') %}
                                                    <span class="badge bg-success text-white">Verifikovano</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                {% if task.priority == 1 %}
                                                    <span class="badge bg-danger bg-opacity-20 text-danger">Veoma visok</span>
                                                {% elseif task.priority == 2 %}
                                                    <span class="badge bg-warning bg-opacity-20 text-warning">Visok</span>
                                                {% elseif task.priority == 4 %}
                                                    <span class="badge bg-info bg-opacity-20 text-info">Nizak</span>
                                                {% elseif task.priority == 5 %}
                                                    <span class="badge bg-secondary bg-opacity-20 text-secondary">Veoma nizak</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                {% if not admin and app.user in task.getAssignedUsers %}
                                                    <div class="dropdown">
                                                        <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                            <i class="ph-gear"></i>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-end">
                                                            <a href="{{ path('app_task_view_user', { id: task.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                            {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') and not task.isDeleted and task.createdBy == app.user %}
                                                                <a href="{{ path('app_task_reassign', {id: task.id} ) }}" class="dropdown-item"><i class="ph-user-switch me-2"></i> Promenite zaposlene</a>
                                                            {% endif %}
                                                            {% if not task.isDeleted and task.createdBy == app.user and task.created > difference %}
                                                                <a href="{{ path('app_task_edit_info', {id: task.id} ) }}" class="dropdown-item"><i class="ph-note-pencil me-2"></i> Izmenite</a>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                                {% if not is_granted('ROLE_EMPLOYEE') or admin%}
                                                    <div class="dropdown">
                                                        <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                            <i class="ph-gear"></i>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-end">
                                                            <a href="{{ path('app_task_view', { id: task.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                            {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') and not task.isDeleted %}
                                                                <a href="{{ path('app_task_reassign', {id: task.id} ) }}" class="dropdown-item"><i class="ph-user-switch me-2"></i> Promenite zaposlene</a>
                                                            {% endif %}
                                                            {% if not task.isDeleted %}
                                                                <a href="{{ path('app_task_edit_info', {id: task.id} ) }}" class="dropdown-item"><i class="ph-note-pencil me-2"></i> Izmenite</a>
                                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                                    <a href="{{ path('app_task_close',{id: task.id} ) }}" class="dropdown-item"><i class="ph-x me-2"></i> Zatvorite</a>
                                                                {% endif %}
                                                                {% if task.status != constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                                    <a href="{{ path('app_task_delete', {id: task.id} ) }}" class="dropdown-item"><i class="ph-trash me-2"></i> Obrišite</a>
                                                                {% endif %}
                                                            {% endif %}
                                                        </div>

                                                    </div>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="navigation float-end">
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>
                    </div>
                    <!-- /state saving -->
                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

{% block includeJavascript %}
    {{ parent() }}

    <script src="{{ asset('assets/js/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/datatables.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/buttons.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/select.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/pdfmake/pdfmake.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/pdfmake/vfs_fonts.min.js') }}"></script>
    <script src="{{ asset('assets/demo/pages/datatables_extension_colvis.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/ui/fab.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/ui/prism.min.js') }}"></script>

    <script src="{{ asset('assets/demo/pages/task_manager_detailed.js') }}"></script>
    <script src="{{ asset('assets/demo/pages/components_modals.js') }}"></script>
{% endblock includeJavascript %}
