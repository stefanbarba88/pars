{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                               Nezatvoreni dnevnici
                            </h4>
                        </div>
                    </div>

                    <div class="page-header-content d-lg-flex border-top">
                        <div class="d-flex">
                            <div class="breadcrumb py-2">
                                <a href="{{ path('app_home') }}" class="breadcrumb-item"><i class="ph-house"></i></a>
                                <span class="breadcrumb-item active">Nezatvoreni dnevnici</span>
                            </div>

                            <a href="#breadcrumb_elements" class="btn btn-light align-self-center collapsed d-lg-none border-transparent rounded-pill p-0 ms-auto" data-bs-toggle="collapse">
                                <i class="ph-caret-down collapsible-indicator ph-sm m-1"></i>
                            </a>
                        </div>

                        {{ render(controller('App\\Controller\\WidgetController::support' )) }}
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    <!-- State saving -->
                    <div class="card">
                        <div class="card-header d-lg-flex py-lg-0">
                            <h5 class="py-lg-3 mb-0">Nezatvoreni dnevnici</h5>
                        </div>
                        <table class="table datatable-colvis-state-pars">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Zadatak</th>
                                <th>Zadu≈æeni</th>
                                <th>Projekat</th>
                                <th>Datum zadatka</th>
                                <th>Kreiran</th>
                                <th class="text-center text-muted" style="width: 30px;"><i class="ph-check"></i></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for task in tasks %}

                                <tr class="bg-danger bg-opacity-25">

                                    <td>{{ task.log.task.id }}</td>
                                    <td>
                                        <div class="fw-semibold">
                                            {% if app.user.userType != 4 %}
                                                <a href="{{ path('app_task_view', { id: task.log.task.id}) }}">{{ task.log.task.title }}</a>
                                            {% else %}
                                                <a href="{{ path('app_task_view_user', { id: task.log.task.id}) }}">{{ task.log.task.title }}</a>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td>
                                        {% if is_granted('ROLE_EMPLOYEE') %}
                                            {% if app.user in task.log.task.getAssignedUsers %}
                                                <a href="{{ path('app_task_view_user', { id: task.log.task.id}) }}"> {{ task.log.user.fullName }}</a>
                                            {% endif %}
                                        {% else %}
                                            <a href="{{ path('app_task_view', { id: task.log.task.id}) }}" > {{ task.log.user.fullName }}</a>
                                        {% endif %}
                                    </td>

                                    <td>
                                        {% if task.log.task.project %}
                                            <a href="{{ path('app_project_tasks_view', { id: task.log.task.project.id}) }}">{{ task.log.task.project.title }}</a>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="d-inline-flex align-items-center">
                                            <i class="ph-calendar me-2"></i>
                                            {{ task.log.task.datumKreiranja | date("d.m.Y")}}
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-inline-flex align-items-center">
                                            <i class="ph-calendar me-2"></i>
                                            {{ task.log.task.created | date("d.m.Y")}}
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="dropdown">
                                            <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                <i class="ph-gear"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-end">
                                                {% if is_granted('ROLE_EMPLOYEE') %}
                                                    {% if app.user in task.log.task.getAssignedUsers %}
                                                        <a href="{{ path('app_task_view_user', { id: task.log.task.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                    {% endif %}
                                                {% else %}
                                                    <a href="{{ path('app_task_view', { id: task.log.task.id}) }}" class="dropdown-item"><i class="ph-eye me-2"></i> Vidite</a>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
