{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                #{{ task.id }}: {{task.title }}
                            </h4>
                        </div>
                    </div>

                    {{ render(controller('App\\Controller\\WidgetController::projectProfilNavigation', { project: task.project } )) }}

                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">

                    <div class="d-flex align-items-stretch align-items-lg-start flex-column flex-lg-row">

                        <!-- Left content -->
                        <div class="flex-1 order-2 order-lg-1">
                            {% set taskDays = getDaysRemainingTask(task) %}
                            {% if task.status != constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO') %}
                                {% if taskDays.poruka is not empty %}
                                    <div class="alert alert-danger fade show">
                                       {{ taskDays.poruka }}
                                    </div>
                                {% endif %}
                            {% endif %}

                            {% if task.isDeleted %}
                                <div class="alert alert-danger fade show">
                                    <span class="fw-semibold">Zadatak je obrisan.</span> Svi vremenski zapisi su obrisani, ali se mogu proveriti ulaskom u dnevnik zaposlenog.
                                </div>
                            {% else %}
                                {% if task.isClosed %}
                                    <div class="alert alert-warning fade show">
                                        <span class="fw-semibold">Zadatak je zatvoren ručno tako da merenja verovatno nisu u redu.</span> Proverite da li su merenja u redu.
                                    </div>
                                {% endif %}
                            {% endif %}

                            <div class="row">
                                <div class="col-sm-6 col-xl-4">
                                        <div class="card">
                                            <div class="card-header d-flex">
                                                <h5 class="mb-0">
                                                    <i class="ph-timer me-2"></i>
                                                    Vreme
                                                </h5>
                                            </div>
                                            {% if task.isSeparate %}
                                                <div class="list-group list-group-borderless py-2">
                                                    <div class="d-flex list-group-item align-items-start">
                                                        <div class="me-2">
                                                            <i class="ph-timer"></i>
                                                        </div>

                                                        <div class="flex-fill overflow-hidden">
                                                            <div class="fw-semibold text-truncate">
                                                                Zaokruženo
                                                            </div>
                                                        </div>

                                                        <div class="ms-3">
                                                            <span class="badge bg-secondary text-primary me-2">{{ time.hoursTimePriority }}:{{ time.minutesTimePriority }}h</span>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex list-group-item align-items-start">
                                                        <div class="me-2">
                                                            <i class="ph-timer"></i>
                                                        </div>

                                                        <div class="flex-fill overflow-hidden">
                                                            <div class="fw-semibold text-truncate">
                                                                Bez zaokruživanja
                                                            </div>

                                                        </div>

                                                        <div class="ms-3">
                                                            <span class="badge bg-yellow text-primary me-2">{{ time.hoursRealTimePriority }}:{{ time.minutesRealTimePriority }}h</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% else %}
                                                <div class="list-group list-group-borderless py-2">
                                                    <div class="d-flex list-group-item align-items-start">
                                                        <div class="me-2">
                                                            <i class="ph-timer"></i>
                                                        </div>

                                                        <div class="flex-fill overflow-hidden">
                                                            <div class="fw-semibold text-truncate">
                                                                Zaokruženo
                                                            </div>
                                                        </div>

                                                        <div class="ms-3">
                                                            <span class="badge bg-secondary text-primary me-2">{{ totalTimes.hours }}:{{ totalTimes.minutes }}h</span>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex list-group-item align-items-start">
                                                        <div class="me-2">
                                                            <i class="ph-timer"></i>
                                                        </div>

                                                        <div class="flex-fill overflow-hidden">
                                                            <div class="fw-semibold text-truncate">
                                                                Bez zaokruživanja
                                                            </div>

                                                        </div>

                                                        <div class="ms-3">
                                                            <span class="badge bg-yellow text-primary me-2">{{ totalTimes.hoursR }}:{{ totalTimes.minutesR }}h</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                <div class="col-sm-6 col-xl-4">
                                        <div class="card">
                                            <div class="card-header d-flex">
                                                <h5 class="mb-0">
                                                    <i class="ph-users-three me-2"></i>
                                                    Zaposleni korisnici
                                                    {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') and not task.isDeleted %}
                                                        <a href="{{ path('app_task_reassign', {id: task.id} ) }}"><i class="ph-note-pencil"></i></a>
                                                    {% endif %}
                                                    {% if task.status != constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') and not task.isDeleted %}
                                                        <a href="{{ path('app_task_assign_add_user', {id: task.id} ) }}"><i class="ph-plus-circle"></i></a>
                                                    {% endif %}
                                                </h5>
                                            </div>

                                            <div class="list-group list-group-borderless py-2">
                                                {% for log in taskLogs %}
                                                    {% if log.log.user.id == task.priorityUserLog %}
                                                        <div class="d-flex list-group-item align-items-start">
                                                        <div class="me-2">
                                                            <i class="ph-clipboard"></i>
                                                        </div>

                                                        <div class="flex-fill overflow-hidden">
                                                            <div class="fw-semibold text-truncate">
                                                                <a href="{{ path('app_task_log_view',{id: log.log.id} ) }}" class="fw-semibold">
                                                                    {{ log.log.user.getFullName }}
                                                                </a>
                                                            </div>
                                                            {% if log.lastEdit is not null  %}
                                                                <ul class="list-inline list-inline-bullet fs-sm text-muted mb-0">
                                                                    <li class="list-inline-item">Izmena: {{ log.lastEdit.updated | date("d.m.Y H:i:s")}}</li>
                                                                </ul>
                                                            {% endif %}
                                                        </div>

                                                        <div class="ms-3">
                                                            {% if log.count > 0 %}
                                                                <span class="badge bg-secondary align-self-center rounded-pill ms-auto">{{ log.count }}</span>
                                                            {% endif %}

                                                            {% if log.count == 0 and status == constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO')%}
                                                                <span class="badge bg-secondary align-self-center rounded-pill ms-auto">{{ log.count }}</span>
                                                            {% endif %}

                                                            {% if log.count == 0 and status != constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO')%}
                                                                <span class="badge bg-yellow align-self-center rounded-pill ms-auto">{{ log.count }}</span>
                                                            {% endif %}

                                                        </div>
                                                    </div>
                                                    {% endif %}
                                                {% endfor %}
                                                {% for log in taskLogs %}
                                                    {% if log.log.user.id != task.priorityUserLog %}
                                                        <div class="d-flex list-group-item align-items-start">
                                                            <div class="me-2">
                                                                <i class="ph-clipboard"></i>
                                                            </div>

                                                            <div class="flex-fill overflow-hidden">
                                                                <div class="fw-semibold text-truncate">
                                                                    <a href="{{ path('app_task_log_view',{id: log.log.id} ) }}" class="fw-semibold">
                                                                        {{ log.log.user.getFullName }}
                                                                    </a>
                                                                    {% if log.countActive == 0  %}
                                                                        <a href="{{ path('app_task_assign_remove_user', {id: log.log.id}) }}"><i class="ph-trash"></i></a>
                                                                    {% endif %}
                                                                </div>
                                                                {% if log.lastEdit is not null  %}
                                                                    <ul class="list-inline list-inline-bullet fs-sm text-muted mb-0">
                                                                        <li class="list-inline-item">Izmena: {{ log.lastEdit.updated | date("d.m.Y H:i:s")}}</li>
                                                                    </ul>
                                                                {% endif %}
                                                            </div>

                                                            <div class="ms-3">
                                                                {% if log.count > 0 %}
                                                                    <span class="badge bg-secondary align-self-center rounded-pill ms-auto">{{ log.count }}</span>
                                                                {% endif %}

                                                                {% if log.count == 0 and status == constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO')%}
                                                                    <span class="badge bg-secondary align-self-center rounded-pill ms-auto">{{ log.count }}</span>
                                                                {% endif %}

                                                                {% if log.count == 0 and status != constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO')%}
                                                                    <span class="badge bg-yellow align-self-center rounded-pill ms-auto">{{ log.count }}</span>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                <div class="col-sm-6 col-xl-4">
                                        <div class="card">
                                            <div class="card-header d-flex">
                                                <h5 class="mb-0">
                                                    <i class="ph-files me-2"></i>
                                                    Dokumenta
                                                    {% if not task.isDeleted %}
                                                        <a href="{{ path('app_task_add_docs', {id: task.id} ) }}"><i class="ph-plus-circle"></i></a>
                                                    {% endif %}
                                                </h5>
                                            </div>

                                            <div class="list-group list-group-borderless py-2">
                                                {% if pdfs is empty %}
                                                    <div class="d-flex align-items-start mb-3">
                                                        <div class="list-group-item">
                                                            <div class="fw-semibold text-truncate">Nema dokumenata</div>
                                                        </div>

                                                    </div>
                                                {% else %}
                                                    {% for pdf in pdfs %}
                                                        <div class="d-flex list-group-item align-items-start">
                                                            <div class="me-2">
                                                                <i class="ph-file-pdf"></i>
                                                            </div>
                                                            <div class="flex-fill overflow-hidden">
                                                                <div class="fw-semibold text-truncate">{{ pdf.title }}</div>
                                                            </div>
                                                            <div class="ms-3">
                                                                <a href="{{ asset(pdf.path) }}" download class="fw-semibold">
                                                                    <i class="ph-download-simple"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                            </div>

                            <div class="card">
                            <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Informacije o zadatku</h5>
                                    {% if stopwatchesRunning > 0 %}
                                        <div class="my-auto ms-auto">
                                            <a href="{{ path('app_task_close',{id: task.id} ) }}"><i class="ph-door me-2" data-bs-popup="popover" data-bs-trigger="hover" data-bs-placement="top" data-bs-content="Moguće je ručno zatvaranje zadatka ukoliko zaposleni ne može da zatvori merenje. Nakon toga je potrebno izmeniti merenja i promeniti status zadatku." data-bs-original-title="Ručno zatvaranje merenja na zadatku."></i></a>
                                        </div>
                                    {% else %}
                                        <div class="my-auto ms-auto">

                                            <div class="btn-group">
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') %}
                                                    <a href="#" class="link-primary d-inline-flex align-items-center" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <span class="badge bg-secondary text-primary">Nije startovan</span>
                                                        <i class="ph-info me-2" data-bs-popup="popover" data-bs-trigger="hover" data-bs-placement="top" data-bs-content="Inicijalna promena statusa se dešava kada se pokrene prvo merenje na zadatku. Sve ostale se biraju ručno." data-bs-original-title="Promena statusa"></i>
                                                    </a>
                                                {% endif %}
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                    <a href="#" class="link-primary d-inline-flex align-items-center dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <span class="badge bg-yellow text-primary">Otvoren</span>
                                                    </a>
                                                {% endif %}
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAVRSENO') %}
                                                    <a href="#" class="link-primary d-inline-flex align-items-center dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <span class="badge bg-primary text-white">Zatvoren</span>
                                                    </a>
                                                {% endif %}
                                                {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO') %}
                                                    <a href="#" class="link-primary d-inline-flex align-items-center dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <span class="badge bg-success text-white">Verifikovan</span>
                                                    </a>
                                                {% endif %}

                                                {% if task.status != constant('App\\Classes\\Data\\TaskStatusData::NIJE_ZAPOCETO') %}
                                                    <div class="dropdown-menu dropdown-menu-end" style="">
                                                        {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO') %}
                                                            <a href="{{ path('app_task_status', {id: task.id, status: constant('App\\Classes\\Data\\TaskStatusData::ZAVRSENO')}) }}" class="dropdown-item">
                                                                <span class="bg-primary rounded-pill p-1 me-2"></span>
                                                                Zatvoren
                                                            </a>
{#                                                            <a href="{{ path('app_task_status', {id: task.id, status: constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO')}) }}" class="dropdown-item">#}
{#                                                                <span class="bg-success rounded-pill p-1 me-2"></span>#}
{#                                                                Verifikovan#}
{#                                                            </a>#}
                                                        {% endif %}
                                                        {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::ZAVRSENO') %}
                                                            <a href="{{ path('app_task_status', {id: task.id, status: constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO')}) }}" class="dropdown-item">
                                                                <span class="bg-yellow rounded-pill p-1 me-2"></span>
                                                                Otvoren
                                                            </a>
                                                            <a href="{{ path('app_task_status', {id: task.id, status: constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO')}) }}" class="dropdown-item">
                                                                <span class="bg-success rounded-pill p-1 me-2"></span>
                                                                Verifikovan
                                                            </a>
                                                        {% endif %}
                                                        {% if task.status == constant('App\\Classes\\Data\\TaskStatusData::VERIFIKOVANO') %}
                                                            <a href="{{ path('app_task_status', {id: task.id, status: constant('App\\Classes\\Data\\TaskStatusData::ZAPOCETO')}) }}" class="dropdown-item">
                                                                <span class="bg-yellow rounded-pill p-1 me-2"></span>
                                                                Otvoren
                                                            </a>
                                                        {% endif %}
                                                    </div>
                                                {% endif %}
                                            </div>

                                        </div>
                                    {% endif %}
                                </div>
                                    <div class="card-body">
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="card">
                                                <div class="card-header d-flex align-items-center py-lg-0">
                                                    <h6 class="py-lg-3 mb-0">
                                                        #{{ task.id }}: {{task.title }}
                                                        {% if not task.isDeleted %}
                                                            <a href="{{ path('app_task_edit_info', {id: task.id} ) }}"><i class="ph-note-pencil"></i></a>
                                                        {% endif %}
                                                    </h6>
                                                </div>
                                                <div class="card-body">
                                                    <div class="fw-bold border-bottom pb-2 mb-3">Datum i rok za izvršenja zadatka</div>
                                                    <div class="row">
                                                        <div class="col-lg-6 ">
                                                            <div class="mb-3">
                                                                <div class="d-inline-flex align-items-center">
                                                                    <i class="ph-calendar me-2"></i>
                                                                    {{ task.time | date("d.m.Y. H:i")}}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        {% if task.deadline is not null %}
                                                            <div class="col-lg-6 ">
                                                                <div class="mb-3">
                                                                    <div class="d-inline-flex align-items-center">
                                                                        <i class="ph-calendar-x me-2"></i>
                                                                        {{ task.deadline | date("d.m.Y.")}} {% if taskDays.poruka is not empty %}<i class="ph-info me-2" data-bs-popup="tooltip" aria-label="{{ taskDays.poruka }}" data-bs-original-title="{{ taskDays.poruka }}"></i>{% endif %}

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        {% endif %}
                                                    </div>

                                                    {% if task.repeating == 1 %}
                                                        <div class="fw-bold border-bottom pb-2 mb-3">Zadatak se ponavlja</div>
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div class="mb-3">
                                                                    <div class="d-inline-flex align-items-center">
                                                                        Zadatak se ponavlja
                                                                        {% if task.repeatingInterval == 1 %}
                                                                            svakog dana, sledeći zadatak će biti dostupan
                                                                        {% elseif  task.repeatingInterval == 2 %}
                                                                            svake sedmice, sledeći zadatak će biti dostupan
                                                                        {% elseif  task.repeatingInterval == 3 %}
                                                                            svakog meseca, sledeći zadatak će biti dostupan
                                                                        {% elseif  task.repeatingInterval == 4 %}
                                                                            svake godine, sledeći zadatak će biti dostupan
                                                                        {% endif %}
                                                                        {{ task.datumPonavljanja | date("d.m.Y.")}}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {% endif %}

                                                    {% if task.production is not null %}
                                                        <div class="fw-bold border-bottom pb-2 mb-3">Radni nalog</div>
                                                        <div class="row">
                                                            <div class="col-lg-4">
                                                                <div class="mb-3">
                                                                    <i class="ph-clipboard-text me-2"></i><a href="{{ path('app_production_view',{id: task.production.id} ) }}" class="me-1 fw-semibold">
                                                                        {{ task.production.productKey }}
                                                                    </a> <a href="{{ path('app_production_view_pdf',{id: task.production.id} ) }}"><i class="ph-file-pdf"></i></a>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    {% endif %}
                                                    <div class="fw-bold border-bottom pb-2 mb-3">Zaposleni i resursi</div>
                                                    <div class="row">
                                                        <div class="col-lg-4">
                                                            <div class="mb-3">
                                                                {% for log in task.taskLogs %}
                                                                    <i class="ph-user me-2"></i><a href="{{ path('app_task_log_view',{id: log.id} ) }}" class="me-1 fw-semibold">
                                                                    {{ log.user.fullName }}
                                                                </a><br>
                                                                {% endfor %}
                                                            </div>
                                                        </div>
                                                        {% if isTool %}
                                                            <div class="col-lg-4">
                                                                    <div class="mb-3">
                                                                        {% if task.oprema is not empty %}
                                                                            {% for oprema in task.oprema %}
                                                                                <i class="ph-wrench me-2"></i>{{ oprema.title }}<br>
                                                                            {% endfor %}
                                                                        {% else %}
                                                                            Nema dodeljene opreme za ovaj zadatak.
                                                                        {% endif %}
                                                                    </div>
                                                                </div>
                                                        {% endif %}
                                                        {% if isCar %}
                                                            <div class="col-lg-4">
                                                                    <div class="mb-3">
                                                                        {% if car is not null %}
                                                                            <i class="ph-car me-2"></i>{{ car.carName }} <br>
                                                                            <i class="ph-user me-2"></i>{{ driver.fullName  }}
                                                                        {% else %}
                                                                            Nema dodeljenog vozila za ovaj zadatak.
                                                                        {% endif %}
                                                                    </div>
                                                                </div>
                                                        {% endif %}
                                                    </div>

                                                    <div class="fw-bold border-bottom pb-2 mb-3">Aktivnosti</div>
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="mb-3">
                                                                {% if task.activity is defined %}
                                                                    {% if task.activity.toArray is not empty %}
                                                                        {% for act in task.activity %}
                                                                            <i class="ph-checks me-2"></i>{{ act.title }}<br>
                                                                        {% endfor %}
                                                                    {% else %}
                                                                        Nema određenih aktivnosti za ovaj zadatak.
                                                                    {% endif %}
                                                                {% else %}
                                                                    Nema određenih aktivnosti za ovaj zadatak.
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="fw-bold border-bottom pb-2 mb-3">Napomena</div>
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="mb-3">
                                                            {% if task.description is not null %}
                                                                <i class="ph-note me-2"></i>{{ task.description}}
                                                            {% else %}
                                                                Nema posebne napomene za ovaj zadatak.
                                                            {% endif %}
                                                        </div>
                                                        </div>
                                                    </div>

                                                    <div class="fw-bold border-bottom pb-2 mb-3">Opšte</div>
                                                    <div class="row">
                                                        <div class="col-auto">
                                                            <div class="mb-3">
                                                                <div class="d-flex flex-wrap gap-1 align-items-center">
                                                                    {% if not task.isFree %}
                                                                        <span class="badge bg-primary text-white">Naplativ</span>
                                                                    {% endif %}
                                                                    {% if task.isExpenses %}
                                                                        <span class="badge bg-primary text-white">Troškovnik</span>
                                                                    {% endif %}
                                                                    {% if not task.isSeparate %}
                                                                        <span class="badge bg-primary text-white">Ukupni rezultat</span>
                                                                    {% else %}
                                                                        <span class="badge bg-primary text-white">Odvojeni rezultati</span>
                                                                    {% endif %}

                                                                    {% if task.priority == 1 %}
                                                                        <span class="badge bg-danger bg-opacity-20 text-danger">Veoma visok</span>
                                                                    {% elseif task.priority == 2 %}
                                                                        <span class="badge bg-warning bg-opacity-20 text-warning">Visok</span>
                                                                    {% elseif task.priority == 4 %}
                                                                        <span class="badge bg-info bg-opacity-20 text-info">Nizak</span>
                                                                    {% elseif task.priority == 5 %}
                                                                        <span class="badge bg-secondary bg-opacity-20 text-secondary">Veoma nizak</span>
                                                                    {% endif %}

                                                                    <span class="badge bg-primary text-white">{{ task.category.title }}</span>

                                                                    {% for labela in task.label %}
                                                                        {{ labela.label | raw }}
                                                                    {% endfor %}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>




                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6">
                                            {% if task.isSeparate %}
                                                <div class="card">
                                                <div class="card-header d-flex align-items-center py-lg-0">
                                                    <h6 class="py-lg-3 mb-0">Primarni dnevnik: {{ taskLog.user.fullName}} <a href="{{ path('app_task_reassign_primary_log', {id: task.id}) }}"><i class="ph-note-pencil"></i></a></h6>
                                                </div>
                                                {% if stopwatchesActive is empty %}
