                        <div class="flex-1 order-2 order-lg-1">


                            <div class="row">
                                <div class="col-sm-6 col-xl-4">
                                    <div class="card">
                                        <div class="card-header d-flex">
                                            <h5 class="mb-0">
                                                <i class="ph-timer me-2"></i>
                                                Vremenski zapis
                                            </h5>
                                        </div>
