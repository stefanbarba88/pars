    <script>
        $(document).ready(function(){
            // Funkcija koja će se izvršiti odmah po učitavanju stranice
            updateAdditionalActivityVisibility();

            // Prilikom promene izbora u selektu aktivnosti
            $('#stopwatch_time_add_form_activity').change(function(){
                // Pozivamo funkciju za ažuriranje vidljivosti dodatnih aktivnosti
                updateAdditionalActivityVisibility();
            });

            // Funkcija za ažuriranje vidljivosti dodatnih aktivnosti
            function updateAdditionalActivityVisibility() {
                // Proveri da li je izabrana aktivnost "Obrada podataka" (vrednost 67)
                if($('#stopwatch_time_add_form_activity').val().includes('{{constant('App\\Classes\\AppConfig::BEZ_OBAVEZE_ID')}}') || $('#stopwatch_time_add_form_activity').val().includes('{{ constant('App\\Classes\\AppConfig::OSTALO_ID') }}')) {
                    // Ako je izabrana aktivnost 67 ili constant('App\\Classes\\AppConfig::OSTALO_ID'), učini polje za unos dodatnih aktivnosti obaveznim
                    $('#stopwatch_time_add_form_description').prop('required', true);
                    // Promeni labelu na "Napomena:*"
                    $('label[for="stopwatch_time_add_form_description"]').text('Napomena:*');
                    $('.nap').text('Detaljnije opišite aktivnost.');
                } else {
                    // Ako nije izabrana aktivnost 67 ili constant('App\\Classes\\AppConfig::OSTALO_ID'), učini polje za unos dodatnih aktivnosti neobaveznim
                    $('#stopwatch_time_add_form_description').prop('required', false);
                    // Ostavi labelu kakva je
                    $('label[for="stopwatch_time_add_form_description"]').text('Napomena:');
                    $('.nap').text('');
                }

                if($('#stopwatch_time_add_form_activity').val().includes('{{constant('App\\Classes\\AppConfig::OBRADA_ID')}}')) {
                    $('#stopwatch_time_add_form_additionalDesc').prop('required', true);
                    $('.obrada').prop('required', false).show();
                } else {
                    $('#stopwatch_time_add_form_additionalDesc').prop('required', false);
                    $('.obrada').prop('required', false).hide();
                }

                // Proveri da li je izabrana aktivnost "Nešto drugo" (vrednost constant('App\\Classes\\AppConfig::OSTALO_ID'))
                if ($('#stopwatch_time_add_form_activity').val().includes('{{constant('App\\Classes\\AppConfig::NEMA_U_LISTI_ID')}}')) {
                    // Ako jeste, učini polje za unos dodatnih aktivnosti obaveznim i vidljivim
                    $('#stopwatch_time_add_form_additionalActivity').prop('required', true).show();
                    $('.dodAkt').prop('required', false).show();
                } else {
                    // Ako nije, učini polje za unos dodatnih aktivnosti neobaveznim i nevidljivim
                    $('#stopwatch_time_add_form_additionalActivity').prop('required', false).hide();
                    $('.dodAkt').prop('required', false).hide();
                }
            }
        });
    </script>
