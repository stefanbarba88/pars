{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}
        <!-- Main content -->

        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                 Tiketi
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">Dodavanje tiketa</h6>
                        </div>
                                                {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        {{ form_label(form.task, 'Zadatak:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.task, {attr: { class: 'form-control required' }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        {{ form_label(form.client, 'Klijent:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.client, {attr: { class: 'form-control select required' }}) }}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        {{ form_label(form.priority, 'Prioritet:', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.priority, {attr: { class: 'form-control select required' }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        {{ form_label(form.deadline, 'Rok:', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="input-group">
											<span class="input-group-text">
												<i class="ph-calendar"></i>
											</span>
                                            {{ form_widget(form.deadline, {attr: { class: 'form-control datepicker-date-format-custom', autocomplete : 'off' }}) }}
                                        </div>
                                        <span class="form-text">Format: 31.12.1900</span>
                                    </div>
                                </div>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                                                <!-- /wizard with validation -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    <div id="modal_date_task" class="modal fade" tabindex="-1" >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white border-0">
                    <h6 class="modal-title">Izaberite novi datum</h6>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form name="datumCheckForm" method="get" action="{{ path('app_checklist_form') }}"  id="check_datum_form">
                        <div class="row">
                                <div class="mb-3">
                                    <label class="form-label" for="datumCheck">Datum zadatka:*</label>
                                    <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ph-calendar"></i>
                                                </span>
                                        <input type="text" id="datumCheck" name="datumCheck" class="form-control datepicker-date-format-custom required" autocomplete="off" aria-invalid="false">

                                    </div>
                                    <span class="form-text">Format: 31.12.1900. Definišete kada zadatak treba da se izvrši.</span>
                                </div>
                            </div>
                        {% if project is defined %}
                            <input name="project" value="{{ project.id }}" hidden>
                        {% endif %}
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal"><i class="ph-x me-2"></i>Odustanite</button>
                    <button type="submit" onclick="submitForm('check_datum_form')" class="btn btn-primary"><i class="ph-arrows-clockwise me-2"></i> Primenite</button>
                </div>
            </div>
        </div>
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

