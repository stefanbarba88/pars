{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Tiketi
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    <!-- State saving -->
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h5 class="mb-0">Lista tiketa</h5>
                            {% if is_granted('ROLE_CLIENT') %}
                                <div class="my-auto ms-auto">
                                    <a href="{{ path('app_ticket_form') }}" class="btn btn-primary"><i class="ph-plus"></i></a>
                                </div>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <div class="card">
                                <table class="table table-bordered table-hover table-responsive table_morecondensed">
                                    <thead class="bg-light test-primary">
                                    <tr>
                                        <th>Klijent</th>
                                        <th>Status</th>
                                        <th class="text-center text-muted" style="width: 30px;"><i class="ph-dots-three"></i></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for ticket in pagination %}
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">
                                                    <a href="{{ path('app_client_profile_view', { id: ticket.client.id}) }}">{{ ticket.client.title }}</a>
                                                </div>
                                            </td>
                                            <td>
                                                {% if ticket.status == constant('App\\Classes\\Data\\InternTaskStatusData::NIJE_ZAPOCETO') %}
                                                    <span class="badge bg-secondary text-primary">Kreiran</span>
                                                {% elseif ticket.status == constant('App\\Classes\\Data\\InternTaskStatusData::ZAPOCETO') %}
                                                    <span class="badge bg-yellow text-primary">U toku</span>
                                                {% elseif ticket.status == constant('App\\Classes\\Data\\InternTaskStatusData::ZAVRSENO') %}
                                                    <span class="badge bg-primary text-white">Završen</span>
                                                {% elseif ticket.status == constant('App\\Classes\\Data\\InternTaskStatusData::KONVERTOVANO') %}
                                                    <span class="badge bg-yellow text-primary">Konvertovan</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <a type="button" class="text-body collapsed" data-bs-toggle="collapse" data-bs-target="#collapsed_item{{ ticket.id }}" aria-expanded="false"><i class="ph-caret-down collapsible-indicator"></i></a>
                                            </td>
                                        </tr>
                                        <tr id="collapsed_item{{ ticket.id }}" class="accordion-collapse collapse bg-light" data-bs-parent="#accordion_collapsed" style="">
                                            <td>
                                                {% if ticket.created is not null %}
                                                    <div class="d-inline-flex align-items-center">
                                                        <i class="ph-calendar me-2"></i>
                                                        {{ ticket.created | date("d.m.Y.")}}
                                                    </div>
                                                {% endif %}
                                            </td>

                                            <td>
                                                Prioritet:
                                                {% if ticket.priority == 1 %}
                                                    <span class="badge bg-danger bg-opacity-20 text-danger">Veoma visok</span>
                                                {% elseif ticket.priority == 2 %}
                                                    <span class="badge bg-warning bg-opacity-20 text-warning">Visok</span>
                                                {% elseif ticket.priority == 4 %}
                                                    <span class="badge bg-info bg-opacity-20 text-info">Nizak</span>
                                                {% elseif ticket.priority == 5 %}
                                                    <span class="badge bg-secondary bg-opacity-20 text-secondary">Veoma nizak</span>
                                                {% endif %}
                                            </td>

                                            <td class="text-center">
                                                <div class="dropdown">
                                                    <a href="#" class="text-body" data-bs-toggle="dropdown">
                                                        <i class="ph-gear"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-end">
                                                        <a href="{{ path('app_ticket_view', {id: ticket.id}) }}" class="dropdown-item">
                                                            <i class="ph-eye me-2"></i>
                                                            Vidite
                                                        </a>
                                                        {% if ticket.status == constant('App\\Classes\\Data\\InternTaskStatusData::NIJE_ZAPOCETO') %}
                                                            {% if app.user.userType != constant('App\\Classes\\Data\\UserRolesData::ROLE_CLIENT') %}
                                                                <a href="{{ path('app_ticket_finish', {id: ticket.id}) }}" class="dropdown-item">
                                                                    <i class="ph-check me-2"></i>
                                                                    Završite
                                                                </a>
                                                            {% endif %}
                                                            <a href="{{ path('app_ticket_form', {id: ticket.id}) }}" class="dropdown-item">
                                                                <i class="ph-note-pencil me-2"></i>
                                                                Izmenite
                                                            </a>
                                                            <a href="{{ path('app_ticket_delete', {id: ticket.id}) }}" class="dropdown-item">
                                                                <i class="ph-trash me-2"></i>
                                                                Obrišite
                                                            </a>
{#                                                            {% if app.user.userType != constant('App\\Classes\\Data\\UserRolesData::ROLE_CLIENT') %}#}
{#                                                                <a href="{{ path('app_ticket_convert', {id: ticket.id}) }}" class="dropdown-item">#}
{#                                                                    <i class="ph-magic-wand me-2"></i>#}
{#                                                                    Konvertuj u zadatak sa merenjem#}
{#                                                                </a>#}
{#                                                            {% endif %}#}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="navigation float-end">
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>
                    </div>
                    <!-- /state saving -->
                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

{% block includeJavascript %}
    {{ parent() }}

    <script src="{{ asset('assets/js/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/datatables.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/buttons.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/select.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/pdfmake/pdfmake.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/pdfmake/vfs_fonts.min.js') }}"></script>
    <script src="{{ asset('assets/demo/pages/datatables_extension_colvis.js') }}"></script>

{% endblock includeJavascript %}
