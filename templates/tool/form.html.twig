{% block footerJavascript %}

    <script>


        $(document).ready(function() {
            const dpDateCustomFormatElement = document.querySelector('.datepicker-date-format-custom');
            if(dpDateCustomFormatElement) {
                const dpDateCustomFormat = new Datepicker(dpDateCustomFormatElement, {
                    container: '.content-inner',
                    buttonClass: 'btn',
                    prevArrow: document.dir == 'rtl' ? '&rarr;' : '&larr;',
                    nextArrow: document.dir == 'rtl' ? '&larr;' : '&rarr;',
                    format: 'dd.mm.yyyy',
                    todayBtn: true,
                    weekStart: 1,
                    minDate: 'today',
                    daysOfWeekHighlighted: [0,6],
                    language: 'sr-latn',
                    // daysOfWeekDisabled: [0]
                });
            }
            function handleSertifikatChange() {
                if ($("#tool_form_sertifikat").val() == "1") {
                    $('.sertifikat').removeClass('hide');
                    $('.sert').addClass('required');
                } else {
                    $('.sertifikat').addClass('hide');
                    $('.sert').removeClass('required');
                }
            }

            // Pokretanje funkcije pri učitavanju stranice
            handleSertifikatChange();

            // Rukovanje promjenom na #tool_form_sertifikat polju
            $("#tool_form_sertifikat").change(function(e) {
                e.preventDefault();
                handleSertifikatChange();
            });
        });
    </script>

{% endblock footerJavascript %}