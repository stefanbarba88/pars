{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::header' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}
        <!-- Main content -->

        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                            Oprema
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    {% if not form.vars.valid %}
                        {% for child in form.children %}
                            {%for error in child.vars.errors%}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <span class="fw-semibold">{{error.message}}</span>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {%endfor%}
                        {%endfor%}
                    {%endif%}
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">
                                 {% if tool.id is not null %}
                                        Izmena opreme
                                    {% else %}
                                        Dodavanje opreme
                                    {% endif %}
                                    </h6>
                        </div>
                        {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        {{ form_label(form.type, 'Tip opreme:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.type, {attr: { class: 'form-control required select tip' }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        {{ form_label(form.title, 'Naziv:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.title, {attr: { class: 'form-control required' }}) }}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        {{ form_label(form.serial, 'Serijski broj:', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.serial, {attr: { class: 'form-control' }}) }}
                                    </div>
                                </div>
                            </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.model, 'Model:', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.model, {attr: { class: 'form-control ' }}) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.ocena, 'Ocena:', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.ocena, {attr: { class: 'form-control select' }}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.sertifikat, 'Sertifikat:', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.sertifikat, {attr: { class: 'form-control select' }}) }}
                                        </div>
                                    </div>
                                    <div class="col-lg-6 sertifikat hide">
                                        <div class="mb-3">
                                            {{ form_label(form.datumSertifikata, 'Sertifikat ističe:*', {'label_attr': {'class': 'form-label'}}) }}
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ph-calendar"></i>
                                                </span>
                                                {{ form_widget(form.datumSertifikata, {attr: { class: 'form-control datepicker-date-format-custom sert', autocomplete : 'off' }}) }}
                                            </div>
                                            <span class="form-text">Format: 31.12.1900</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            {{ form_label(form.description, 'Napomena:', {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(form.description, {attr: { class: 'form-control' }}) }}
                                        </div>
                                    </div>
                                </div>


                            <div class="text-end">
                                <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                                                <!-- /wizard with validation -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

