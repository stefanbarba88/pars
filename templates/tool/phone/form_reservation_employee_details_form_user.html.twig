{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUser' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}
        <!-- Main content -->

        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                Oprema
                            </h4>
                        </div>
                    </div>
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">
                    {% if not form.vars.valid %}
                        {% for child in form.children %}
                            {%for error in child.vars.errors%}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <span class="fw-semibold">{{error.message}}</span>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {%endfor%}
                        {%endfor%}
                    {%endif%}
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">
                                {% if reservation.id is not null %}
                                    Izmena rezervacije
                                {% else %}
                                    Dodavanje rezervacije
                                {% endif %}
                            </h6>
                        </div>
                        {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}

                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="mb-3">
                                        {{ form_label(form.tool, 'Oprema:*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.tool, {attr: { class: 'form-control required tip' }}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        {{ form_label(form.descStart, 'Napomena:', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.descStart, {attr: { class: 'form-control' }}) }}
                                    </div>
                                </div>

                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Saƒçuvajte</button>
                                </div>
                            </div>
                        </div>
                            {{ form_end(form) }}

                        </div>

                    </div>

                </div>
                <!-- /inner content -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->
            </div>

        </div>

        {# {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }} #}
        {% include 'includes/notification.html.twig' %}
        {% endblock content %}

