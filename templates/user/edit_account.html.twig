{% block footerJavascript %}

    <script>
        $(document).ready(function() {
            function updateRoleFields() {
                let roleValue = $(".role").val();

                // Resetovanje svih klasa i atributa na početno stanje
                $('.ROLE_EMPLOYEE, .KLIJENT, .ADMIN').addClass('hide');
                $('.pozicija, .klijentRemove, .adminRemove').removeClass('required');

                if (roleValue == "4") {
                    $('.ROLE_EMPLOYEE').removeClass('hide');
                    $('.pozicija').addClass('required');
                    $('.KLIJENT').removeClass('hide');
                    $('.klijentRemove').addClass('required');
                } else if (roleValue == "2") {
                    $('.ADMIN').addClass('hide');
                    $('.adminRemove').removeClass('required');
                } else if (roleValue == "1") {
                    $('.ADMIN').addClass('hide');
                    $('.adminRemove').removeClass('required');
                } else if (roleValue == "5") {
                    $('.KLIJENT').addClass('hide');
                    $('.klijentRemove').removeClass('required');
                } else {
                    $('.ROLE_EMPLOYEE').addClass('hide');
                    $('.pozicija').removeClass('required');
                    $('.KLIJENT').removeClass('hide');
                    $('.klijentRemove').addClass('required');
                }
            }

            // Pokretanje funkcije pri učitavanju stranice
            updateRoleFields();

            // Pokretanje funkcije kada se promeni vrednost selekta
            $(".role").change(updateRoleFields);
            function updateUgovorFields() {
                let vrstaUgovora = $(".vrstaUgovora").val();

                if (vrstaUgovora == "0") {
                    $('.ugovor1').removeClass('required');
                    $('.ugovor2').removeClass('required');
                    $('label[for="user_edit_account_form_pocetakUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                    $('label[for="user_edit_account_form_krajUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                } else if (vrstaUgovora == "6") {
                    $('.ugovor1').addClass('required');
                    $('.ugovor2').removeClass('required');
                    $('label[for="user_edit_account_form_pocetakUgovora"]').text(function (index, text) {
                        if (!text.includes('*')) {
                            return text + ' *';
                        }
                        return text;
                    });
                    $('label[for="user_edit_account_form_krajUgovora"]').text(function (index, text) {
                        return text.replace(' *', '');
                    });
                } else if (vrstaUgovora == "1") {
                    $('.ugovor1').addClass('required');
                    $('.ugovor2').removeClass('required');
                    $('label[for="user_edit_account_form_pocetakUgovora"]').text(function(index, text) {
                        if (!text.includes('*')) {
                            return text + ' *';
                        }
                        return text;
                    });
                    $('label[for="user_edit_account_form_krajUgovora"]').text(function(index, text) {
                        return text.replace(' *', '');
                    });
                } else {
                    $('.ugovor1').addClass('required');
                    $('.ugovor2').addClass('required');
                    $('label[for="user_edit_account_form_pocetakUgovora"]').text(function(index, text) {
                        if (!text.includes('*')) {
                            return text + ' *';
                        }
                        return text;
                    });
                    $('label[for="user_edit_account_form_krajUgovora"]').text(function(index, text) {
                        if (!text.includes('*')) {
                            return text + ' *';
                        }
                        return text;
                    });
                }
            }

            // Pozivanje funkcije pri učitavanju stranice
            updateUgovorFields();

            // Pokretanje funkcije kada se promeni vrednost selekta
            $(".vrstaUgovora").change(updateUgovorFields);
        });
