{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUser' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar', { '_route': app.request.attributes.get('_route') })) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header mobile-padding-sm page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>

                    {{ render(controller('App\\Controller\\WidgetController::userProfilNavigation', { user: user } )) }}

                </div>
                <!-- /page header -->


                <!-- Content area -->
                <div class="content">
                    {% if not form.vars.valid %}
                        {% for child in form.children %}
                            {%for error in child.vars.errors%}
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <span class="fw-semibold">{{error.message}}</span>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            {%endfor%}
                        {%endfor%}
                    {%endif%}
                    <!-- Inner container -->
                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Left sidebar component -->
                        {{ render(controller('App\\Controller\\WidgetController::userProfilSidebar', { user: user } )) }}
                        <!-- /left sidebar component -->

                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Izmena login podataka</h5>
                                    </div>
                                    {{ form_start(form, {'attr': {'class' : 'form-validate-jquery', 'novalidation': 'novalidation', 'enctype': 'multipart/form-data' }}) }}
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.plainPassword, 'Lozinka:', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.plainPassword, {attr: { class: 'form-control' }}) }}
                                                    <span class="form-text">Format: Minimum 8 karaktera (obavezno jedno veliko slovo, jedno malo slovo, jedan specijalan karakter i jednu cifru). Ukoliko ne menjate lozinku ovo polje ostaje prazno </span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="mb-3">
                                                    {{ form_label(form.email, 'Email:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.email, {attr: { class: 'form-control required' }}) }}
                                                </div>
                                            </div>
                                        </div>
                                        {% if user.userType() != 1 and user.userType() != 2 %}
{#                                            {% if not is_granted('ROLE_EMPLOYEE') %}#}

                                        <div class="row">
                                                    <div class="col-lg-4">
                                                        <div class="mb-3">
                                                            {{ form_label(form.userType, 'Tip korisnika:*', {'label_attr': {'class': 'form-label'}}) }}
                                                            {{ form_widget(form.userType, {attr: { class: 'form-control select required role' }}) }}
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-4 hide ROLE_EMPLOYEE">
                                                        <div class="mb-3">
                                                            {{ form_label(form.pozicija, 'Pozicija:*', {'label_attr': {'class': 'form-label'}}) }}
                                                            {{ form_widget(form.pozicija, {attr: { class: 'form-control select pozicija' }}) }}
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-4 hide ROLE_EMPLOYEE">
                                                        <div class="mb-3">
                                                            {{ form_label(form.isAdmin, 'Administrator:*', {'label_attr': {'class': 'form-label'}}) }}
                                                            {{ form_widget(form.isAdmin, {attr: { class: 'form-control select pozicija' }}) }}
                                                            <span class="form-text">Definišite da li korisnik ima administratorske priviliegije.</span>
                                                        </div>
                                                    </div>
                                        </div>

                                        <div class="row KLIJENT ADMIN">
                                            <div class="col-lg-4">
                                                <div class="mb-3">
                                                    {{ form_label(form.vrstaZaposlenja, 'Vrsta zaposlenja:*', {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.vrstaZaposlenja, {attr: { class: 'form-control select required klijentRemove adminRemove vrstaUgovora' }}) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="mb-3">
                                                    {{ form_label(form.pocetakUgovora, 'Početak ugovora:', {'label_attr': {'class': 'form-label'}}) }}
                                                    <div class="input-group">
											<span class="input-group-text">
												<i class="ph-calendar"></i>
											</span>
                                                        {{ form_widget(form.pocetakUgovora, {attr: { class: 'form-control datepicker-date-format-custom2 ugovor1 required klijentRemove adminRemove', autocomplete : 'off' }}) }}
                                                    </div>
                                                    <span class="form-text">Format: 31.12.1900. Unesite datum početka radnog odnosa.</span>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="mb-3">
                                                    {{ form_label(form.krajUgovora, 'Kraj ugovora:', {'label_attr': {'class': 'form-label'}}) }}
                                                    <div class="input-group">
											<span class="input-group-text">
												<i class="ph-calendar"></i>
											</span>
                                                        {{ form_widget(form.krajUgovora, {attr: { class: 'form-control datepicker-date-format-custom3 ugovor1 ugovor2 required klijentRemove adminRemove', autocomplete : 'off' }}) }}
                                                    </div>
                                                    <span class="form-text">Format: 31.12.1900. Unesite datum kraja radnog odnosa ukoliko se ne radi o ugovoru na neodređeno.</span>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row KLIJENT ADMIN">
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            {{ form_label(form.nivoObrazovanja, 'Nivo obrazovanja:*', {'label_attr': {'class': 'form-label'}}) }}
                                                            {{ form_widget(form.nivoObrazovanja, {attr: { class: 'form-control select required klijentRemove adminRemove ' }}) }}
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="mb-3">
                                                            {{ form_label(form.zvanje, 'Zvanje:*', {'label_attr': {'class': 'form-label'}}) }}
                                                            {{ form_widget(form.zvanje, {attr: { class: 'form-control select required klijentRemove adminRemove' }}) }}
                                                        </div>
                                                    </div>
                                                </div>
{#                                            {% endif %}#}
                                        {% endif %}
                                        <div class="text-end">
                                            <button type="submit" class="btn btn-primary"><i class="ph-floppy-disk me-2"></i> Sačuvajte</button>
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                        <!-- /right content -->

                    </div>
                    <!-- /inner container -->

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->


    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

