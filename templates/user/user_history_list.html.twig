{% extends 'layout.html.twig' %}

{% block content %}
    {{ render(controller('App\\Controller\\WidgetController::headerUser' )) }}
    <div class="page-content">
        {{ render(controller('App\\Controller\\WidgetController::adminMainSidebar')) }}

        <!-- Main content -->
        <div class="content-wrapper">

            <!-- Inner content -->
            <div class="content-inner">

                <!-- Page header -->
                <div class="page-header page-header-light shadow">
                    <div class="page-header-content d-lg-flex">
                        <div class="d-flex">
                            <h4 class="page-title mb-0">
                                {{ user.getFullName() }}
                            </h4>
                        </div>
                    </div>

                    <div class="page-header-content d-lg-flex border-top">
                        <div class="d-flex">
                            <div class="breadcrumb py-2">
                                <a href="{{ path('app_home') }}" class="breadcrumb-item"><i class="ph-house"></i></a>
                                <a href="{{ path('app_users') }}" class="breadcrumb-item">Korisnici</a>
                                <a href="{{ path('app_user_profile_view', { id: user.id}) }}" class="breadcrumb-item">Profil</a>
                                <span class="breadcrumb-item active">Istorija izmena</span>
                            </div>

                            <a href="#breadcrumb_elements" class="btn btn-light align-self-center collapsed d-lg-none border-transparent rounded-pill p-0 ms-auto" data-bs-toggle="collapse">
                                <i class="ph-caret-down collapsible-indicator ph-sm m-1"></i>
                            </a>
                        </div>

                        {{ render(controller('App\\Controller\\WidgetController::support' )) }}
                    </div>
                    {{ render(controller('App\\Controller\\WidgetController::userProfilNavigation', { user: user} )) }}
                </div>
                <!-- /page header -->

                <!-- Content area -->
                <div class="content">


                    <div class="d-lg-flex align-items-lg-start">

                        <!-- Left sidebar component -->
                        {{ render(controller('App\\Controller\\WidgetController::userProfilSidebar', { user: user } )) }}
                        <!-- /left sidebar component -->


                        <!-- Right content -->
                        <div class="tab-content flex-fill">
                            <div class="tab-pane fade active show">
                                <!-- State saving -->
                                <div class="card">
                                    <div class="card-header d-lg-flex py-lg-0">
                                        <h5 class="py-lg-3 mb-0">Lista izmena</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive ">
                                            <table class="table table-bordered table-hover table-responsive">
                                                <thead>
                                                <tr>
                                                    <th {% if pagination.isSorted('[u.id]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, '# ID ', ['u.id']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'u.id' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'u.id' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th>Verzija</th>
                                                    <th>Ime i prezime</th>
                                                    <th {% if pagination.isSorted('[u.created]') %} class="sorted"{% endif %}>
                                                        {{ knp_pagination_sortable(pagination, 'Datum i vreme izmene ', ['u.created']) }}
                                                        {% if pagination.getDirection() == 'desc' and pagination.getSort() == 'u.created' %}
                                                            &#8595;
                                                        {% elseif pagination.getDirection() == 'asc' and pagination.getSort() == 'u.created' %}
                                                            &#8593;
                                                        {% else %}
                                                            &#8597;
                                                        {% endif %}
                                                    </th>
                                                    <th class="text-center text-muted" style="width: 30px;"><i class="ph-check"></i></th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for userH in pagination %}
                                                    <tr>
                                                        <td>{{ userH.id }}</td>
                                                        <td><div class="fw-semibold"><a href="{{ path('app_user_profile_history_view', { id: userH.id}) }}">V.{{ userH.version }}</a></div></td>
                                                        <td><a href="{{ path('app_user_profile_history_view', { id: userH.id}) }}">{{ user.getFullName }}</a></td>
                                                        <td>
                                                            <div class="d-inline-flex align-items-center">
                                                                <i class="ph-calendar me-2"></i>
                                                                {{ userH.created | date("d.m.Y H:i:s")}}
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <a href="{{ path('app_user_profile_history_view', { id: userH.id}) }}">
                                                                <i class="ph-eye me-2"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="card-footer">
                                        <div class="navigation float-end">
                                            {{ knp_pagination_render(pagination) }}
                                        </div>
                                    </div>
                                </div>
                                <!-- /state saving -->
                            </div>
                        </div>
                        <!-- /right content -->


                    </div>

                </div>
                <!-- /content area -->

                <!-- Footer -->
                {% include 'includes/footer.html.twig' %}
                <!-- /footer -->

            </div>
            <!-- /inner content -->

        </div>
        <!-- /main content -->

        {{ render(controller('App\\Controller\\WidgetController::rightSidebar')) }}
    </div>
    {% include 'includes/notification.html.twig' %}
{% endblock content %}

{% block includeJavascript %}
    {{ parent() }}

    <script src="{{ asset('assets/js/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/datatables.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/buttons.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/select.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/pdfmake/pdfmake.min.js') }}"></script>
    <script src="{{ asset('assets/js/vendor/tables/datatables/extensions/pdfmake/vfs_fonts.min.js') }}"></script>
    <script src="{{ asset('assets/demo/pages/datatables_extension_colvis.js') }}"></script>

{% endblock includeJavascript %}
